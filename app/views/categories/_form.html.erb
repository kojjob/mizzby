<%= form_with(model: category, class: "contents") do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul class="list-disc ml-6">
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:name].none?, "border-red-400 focus:outline-red-600": category.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:description].none?, "border-red-400 focus:outline-red-600": category.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :slug %>
    <%= form.text_field :slug, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:slug].none?, "border-red-400 focus:outline-red-600": category.errors[:slug].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :parent_id %>
    <%= form.text_field :parent_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:parent_id].none?, "border-red-400 focus:outline-red-600": category.errors[:parent_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :position %>
    <%= form.number_field :position, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:position].none?, "border-red-400 focus:outline-red-600": category.errors[:position].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :visible %>
    <%= form.checkbox :visible, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": category.errors[:visible].none?, "border-red-400 focus:outline-red-600": category.errors[:visible].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :icon_name %>
    <%= form.text_field :icon_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:icon_name].none?, "border-red-400 focus:outline-red-600": category.errors[:icon_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :icon_color %>
    <%= form.text_field :icon_color, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:icon_color].none?, "border-red-400 focus:outline-red-600": category.errors[:icon_color].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
