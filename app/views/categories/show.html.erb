<div class="bg-white">
  <%# Category Header %>
  <div class="<%= "bg-#{@category.icon_color || 'indigo'}-600" %> bg-opacity-90">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="inline-block mx-auto <%= "bg-#{@category.icon_color || 'indigo'}-700" %> bg-opacity-30 p-3 rounded-full mb-4">
          <svg class="h-10 w-10 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <% case @category.icon_name %>
            <% when "book" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            <% when "device" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            <% when "home" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            <% when "shopping" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            <% when "music" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            <% when "photo" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            <% else %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            <% end %>
          </svg>
        </div>
        
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
          <%= @category.name %>
        </h1>
        
        <% if @category.description.present? %>
          <p class="mt-6 max-w-xl mx-auto text-xl text-white text-opacity-90">
            <%= @category.description %>
          </p>
        <% end %>
        
        <div class="mt-6 flex items-center justify-center">
          <span class="bg-white bg-opacity-20 rounded-full px-3 py-1 text-sm font-medium text-white">
            <%= pluralize(@category.products_count, 'product') %>
          </span>
          
          <% if @category.parent.present? %>
            <span class="mx-2 text-white text-opacity-50">â€¢</span>
            <%= link_to category_path(@category.parent), class: "text-sm font-medium text-white hover:text-opacity-80 text-opacity-90" do %>
              <span class="flex items-center">
                <svg class="mr-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Back to <%= @category.parent.name %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <%# Subcategories Bar (if any exist) %>
  <% subcategories = Category.where(parent_id: @category.id, visible: true).order(:position) %>
  <% if subcategories.any? %>
    <div class="bg-white shadow-sm z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="py-4 overflow-x-auto">
          <div class="inline-flex space-x-4">
            <%= link_to "All #{@category.name}", category_path(@category), 
                class: "px-3 py-2 rounded-md text-sm font-medium #{!params[:subcategory_id] ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900'}" %>
            
            <% subcategories.each do |subcategory| %>
              <%= link_to subcategory.name, category_path(@category, subcategory_id: subcategory.id), 
                  class: "px-3 py-2 rounded-md text-sm font-medium #{params[:subcategory_id].to_i == subcategory.id ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900'}" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <%# Main Content with Filters and Products %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col lg:flex-row gap-8">
      <%# Filter Panel %>
      <div 
        class="lg:block hidden lg:w-64 overflow-hidden transition-all ease-in-out duration-300"
        data-controller="filter-panel"
        data-filter-panel-target="panel">
        
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden">
          <div class="px-4 py-5 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Filters</h3>
          </div>
          
          <div class="divide-y divide-gray-200">
            <%# Price Range Filter %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Price Range</h4>
              <div 
                class="pt-2" 
                data-controller="price-range"
                data-price-range-min-value="0"
                data-price-range-max-value="1000"
                data-price-range-current-min-value="<%= params[:min_price] || 0 %>"
                data-price-range-current-max-value="<%= params[:max_price] || 1000 %>">
                
                <div class="relative mb-6">
                  <div class="absolute left-0 right-0 h-1 bg-gray-200 rounded"></div>
                  <div 
                    class="absolute h-1 bg-indigo-600 rounded"
                    data-price-range-target="track"></div>
                  
                  <input 
                    type="range" 
                    min="0" 
                    max="1000" 
                    value="<%= params[:min_price] || 0 %>" 
                    class="absolute w-full h-1 appearance-none bg-transparent pointer-events-none"
                    data-price-range-target="minInput"
                    data-action="input->price-range#updateMinThumb change->filter-panel#submit">
                  
                  <input 
                    type="range" 
                    min="0" 
                    max="1000" 
                    value="<%= params[:max_price] || 1000 %>" 
                    class="absolute w-full h-1 appearance-none bg-transparent pointer-events-none"
                    data-price-range-target="maxInput"
                    data-action="input->price-range#updateMaxThumb change->filter-panel#submit">
                  
                  <div 
                    class="absolute w-5 h-5 bg-indigo-600 rounded-full shadow-md -ml-2.5 top-0 transform -translate-y-1/2 cursor-grab focus:outline-none"
                    data-price-range-target="minThumb"></div>
                  
                  <div 
                    class="absolute w-5 h-5 bg-indigo-600 rounded-full shadow-md -ml-2.5 top-0 transform -translate-y-1/2 cursor-grab focus:outline-none"
                    data-price-range-target="maxThumb"></div>
                </div>
                
                <div class="flex justify-between text-sm text-gray-600">
                  <span data-price-range-target="minValue">$0</span>
                  <span data-price-range-target="maxValue">$1000</span>
                </div>
                
                <input type="hidden" name="min_price" data-price-range-target="minHiddenInput">
                <input type="hidden" name="max_price" data-price-range-target="maxHiddenInput">
              </div>
            </div>
            
            <%# Product Type Filter %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Product Type</h4>
              <div class="space-y-2">
                <div class="flex items-center">
                  <%= check_box_tag "digital", "1", params[:digital] == "1", 
                      id: "digital-filter",
                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                      data: { action: "change->filter-panel#submit" } %>
                  <label for="digital-filter" class="ml-3 text-sm text-gray-700">
                    Digital Products Only
                  </label>
                </div>
                <div class="flex items-center">
                  <%= check_box_tag "on_sale", "1", params[:on_sale] == "1", 
                      id: "on-sale-filter",
                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                      data: { action: "change->filter-panel#submit" } %>
                  <label for="on-sale-filter" class="ml-3 text-sm text-gray-700">
                    On Sale
                  </label>
                </div>
                <div class="flex items-center">
                  <%= check_box_tag "featured", "1", params[:featured] == "1", 
                      id: "featured-filter",
                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                      data: { action: "change->filter-panel#submit" } %>
                  <label for="featured-filter" class="ml-3 text-sm text-gray-700">
                    Featured Products
                  </label>
                </div>
              </div>
            </div>
            
            <%# Brand Filter (example - you might want to dynamically populate this) %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Brand</h4>
              <div class="space-y-2 max-h-40 overflow-y-auto">
                <% Product.where(category: @category).select(:brand).distinct.pluck(:brand).compact.first(8).each do |brand| %>
                  <div class="flex items-center">
                    <%= check_box_tag "brands[]", brand, params[:brands]&.include?(brand), 
                        id: "brand-#{brand.parameterize}",
                        class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                        data: { action: "change->filter-panel#submit" } %>
                    <label for="brand-<%= brand.parameterize %>" class="ml-3 text-sm text-gray-700">
                      <%= brand %>
                    </label>
                  </div>
                <% end %>
              </div>
            </div>
            
            <%# Filter Actions %>
            <div class="px-4 py-5 flex gap-2">
              <%= link_to "Clear All", category_path(@category), class: "text-sm text-gray-600 hover:text-gray-900" %>
            </div>
          </div>
        </div>
      </div>
      
      <%# Products Grid %>
      <div class="flex-1">
        <%# Mobile Filter Toggle %>
        <div class="block lg:hidden mb-6">
          <button 
            class="w-full flex items-center justify-between px-4 py-3 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            data-action="click->filter-panel#toggle">
            <span>Filter Products</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </button>
        </div>
        
        <%# Products Count and Sort %>
        <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
          <p class="text-sm text-gray-500">
            Showing <span class="font-medium text-gray-900"><%= @products.count %></span> products in <span class="font-medium text-gray-900"><%= @category.name %></span>
          </p>
          
          <div class="flex items-center space-x-2">
            <label for="sort" class="text-sm font-medium text-gray-700">Sort by:</label>
            <%= select_tag :sort, options_for_select([
                ["Newest", "newest"], 
                ["Price: Low to High", "price_asc"], 
                ["Price: High to Low", "price_desc"],
                ["Best Selling", "best_selling"],
                ["Highest Rated", "highest_rated"]
              ], params[:sort]),
              class: "block w-full pl-3 pr-10 py-1.5 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md",
              data: { action: "change->filter-panel#submit" } %>
          </div>
        </div>
        
        <%# Products Grid %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6">
          <% @products.each do |product| %>
            <div class="group relative bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100 h-full flex flex-col transition-all duration-300 hover:shadow-lg">
              <%# Product image %>
              <div class="aspect-w-1 aspect-h-1 relative overflow-hidden">
                <% if product.on_sale? %>
                  <div class="absolute top-2 left-2 z-10">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500 text-white">
                      Sale
                    </span>
                  </div>
                <% end %>
                
                <% if product.is_digital? %>
                  <div class="absolute top-2 right-2 z-10">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500 text-white">
                      Digital
                    </span>
                  </div>
                <% end %>
                
                <%= link_to product_path(product), class: "block" do %>
                  <% if product.product_images.any? && product.product_images.first.image&.attached? %>
                    <%= image_tag url_for(product.product_images.first.image),
                        class: "w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500 ease-out" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center bg-gray-200">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  <% end %>
                <% end %>
                
                <%# Quick action buttons %>
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-all duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">
                  <div class="flex gap-2">
                    <%= button_to wishlist_items_path(product_id: product.id), method: :post, 
                        class: "p-2 rounded-full bg-white text-gray-800 hover:text-red-500 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out",
                        data: { turbo: true } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                      </svg>
                    <% end %>
                    
                    <%= button_to add_to_cart_product_path(product), method: :post,
                        class: "p-2 rounded-full bg-white text-gray-800 hover:text-indigo-600 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out delay-75",
                        data: { turbo: true } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    <% end %>
                    
                    <%= link_to product_path(product), 
                        class: "p-2 rounded-full bg-white text-gray-800 hover:text-indigo-600 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out delay-150" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <%# Product details %>
              <div class="flex-1 p-4 flex flex-col">
                <h3 class="text-sm font-medium text-gray-900 group-hover:text-indigo-600 transition-colors">
                  <%= link_to product.name, product_path(product), class: "hover:text-indigo-600 transition-colors" %>
                </h3>
                
                <p class="mt-1 text-sm text-gray-500 line-clamp-2 flex-grow">
                  <%= truncate(product.description, length: 60) %>
                </p>
                
                <div class="mt-3 flex items-end justify-between">
                  <% if product.discounted_price.present? && product.discounted_price < product.price %>
                    <div>
                      <p class="text-sm font-medium text-gray-900"><%= number_to_currency(product.discounted_price) %></p>
                      <p class="text-xs text-gray-500 line-through"><%= number_to_currency(product.price) %></p>
                    </div>
                  <% else %>
                    <p class="text-sm font-medium text-gray-900"><%= number_to_currency(product.price) %></p>
                  <% end %>
                  
                  <div class="flex items-center">
                    <% full_stars = product.reviews.average(:rating).to_i rescue 0 %>
                    <div class="flex items-center">
                      <% (1..5).each do |i| %>
                        <% if i <= full_stars %>
                          <svg class="text-amber-400 h-4 w-4 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                          </svg>
                        <% else %>
                          <svg class="text-gray-200 h-4 w-4 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                    <span class="ml-1 text-xs text-gray-500">
                      (<%= product.reviews.count %>)
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <%# Empty State %>
        <% if @products.empty? %>
          <div class="text-center py-16 px-4 sm:px-6 lg:px-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No products found</h3>
            <p class="mt-1 text-sm text-gray-500">
              Try adjusting your filters or check back later for new products.
            </p>
            <div class="mt-6">
              <%= link_to "Clear filters", category_path(@category), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% end %>
        
        <%# Pagination %>
        <% if @products.any? %>
          <div class="mt-12 flex justify-center">
            <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Previous</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
              <a href="#" class="relative inline-flex items-center px-4 py-2 border border-indigo-500 bg-indigo-50 text-sm font-medium text-indigo-600">
                1
              </a>
              <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                2
              </a>
              <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                3
              </a>
              <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Next</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
