<div id="<%= dom_id category %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= category.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= category.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= category.slug %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Parent:</strong>
    <%= category.parent_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Position:</strong>
    <%= category.position %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Visible:</strong>
    <%= category.visible? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Icon name:</strong>
    <%= category.icon_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Icon color:</strong>
    <%= category.icon_color %>
  </div>
</div>
