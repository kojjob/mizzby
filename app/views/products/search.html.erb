<%# app/views/products/search.html.erb %>

<div class="bg-white min-h-screen">
  <%# Search Header Section %>
  <div class="relative overflow-hidden bg-gradient-to-r from-indigo-600 to-purple-700">
    <div class="absolute inset-0 bg-slate-900 opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black opacity-20"></div>
    
    <div class="relative max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8 flex flex-col items-center">
      <h1 class="text-3xl font-extrabold text-white sm:text-4xl mb-3">
        Search Results
      </h1>
      
      <%# Search Form %>
      <div class="w-full max-w-2xl mx-auto mt-4">
        <%= form_with url: search_path, method: :get, class: "relative", data: { turbo_frame: "_top" } do |f| %>
          <div class="flex">
            <div class="relative flex-grow">
              <%= f.text_field :query, 
                value: params[:query], 
                placeholder: "Search products...", 
                class: "block w-full rounded-l-full pl-6 pr-12 py-4 text-base border-0 shadow-xl focus:ring-2 focus:ring-indigo-500 focus:outline-none" %>
              
              <button type="button" class="absolute inset-y-0 right-0 flex items-center pr-4 cursor-pointer <%= params[:query].present? ? 'text-gray-400 hover:text-gray-500' : 'text-transparent' %>"
                      onclick="document.getElementById('<%= f.object_id %>_query').value = ''; this.form.submit();">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
            <%= f.submit "Search", class: "flex-shrink-0 bg-indigo-500 text-white px-8 py-4 text-base font-medium rounded-r-full hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors" %>
          </div>
        <% end %>
      </div>
      
      <%# Search Stats %>
      <% if params[:query].present? %>
        <div class="mt-8 flex flex-wrap items-center justify-center gap-3 text-sm text-white">
          <div class="bg-white bg-opacity-20 px-4 py-2 rounded-full">
            <span class="font-medium">
              <%= pluralize(@products&.count || 0, 'result') %> for "<%= params[:query] %>"
            </span>
          </div>
          
          <% if params[:category_id].present? %>
            <% category = Category.find_by(id: params[:category_id]) %>
            <% if category %>
              <div class="bg-white bg-opacity-20 px-4 py-2 rounded-full flex items-center">
                <span>In <%= category.name %></span>
                <%= link_to search_path(query: params[:query]), class: "ml-2 text-white hover:text-opacity-70" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            <% end %>
          <% end %>
          
          <% if params[:min_price].present? || params[:max_price].present? %>
            <div class="bg-white bg-opacity-20 px-4 py-2 rounded-full flex items-center">
              <span>Price: <%= number_to_currency(params[:min_price] || 0) %> - <%= number_to_currency(params[:max_price] || 'âˆž') %></span>
              <%= link_to search_path(query: params[:query], category_id: params[:category_id]), class: "ml-2 text-white hover:text-opacity-70" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Main Content with Filters and Products %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col lg:flex-row gap-8">
      <%# Filter Panel %>
      <div class="lg:block hidden lg:w-64 flex-shrink-0"
           data-controller="filter-panel"
           data-filter-panel-target="panel">
        
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden sticky top-20">
          <div class="px-4 py-5 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Filter Results</h3>
          </div>
          
          <div class="divide-y divide-gray-200">
            <%# Categories Filter %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Categories</h4>
              <div class="space-y-2 max-h-48 overflow-y-auto scrollbar-hide">
                <% Category.where(visible: true).order(:name).each do |category| %>
                  <div class="flex items-center">
                    <%= link_to search_path(query: params[:query], category_id: category.id, min_price: params[:min_price], max_price: params[:max_price], sort: params[:sort]), 
                                class: "group flex items-center text-sm #{params[:category_id].to_i == category.id ? 'text-indigo-600 font-medium' : 'text-gray-700 hover:text-indigo-600'}" do %>
                      <div class="mr-3 flex-shrink-0 h-5 w-5 <%= params[:category_id].to_i == category.id ? 'text-indigo-500' : 'text-gray-400 group-hover:text-indigo-500' %>">
                        <% if params[:category_id].to_i == category.id %>
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                        <% else %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                          </svg>
                        <% end %>
                      </div>
                      <%= category.name %>
                      <span class="ml-auto text-xs text-gray-500">
                        <%= category.products_count %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            
            <%# Price Range Filter %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Price Range</h4>
              <div 
                class="pt-2" 
                data-controller="price-range"
                data-price-range-min-value="0"
                data-price-range-max-value="1000"
                data-price-range-current-min-value="<%= params[:min_price] || 0 %>"
                data-price-range-current-max-value="<%= params[:max_price] || 1000 %>">
                
                <%= form_with url: search_path, method: :get, data: { action: "price-range#formSubmit" } do |f| %>
                  <%= f.hidden_field :query, value: params[:query] %>
                  <%= f.hidden_field :category_id, value: params[:category_id] %>
                  <%= f.hidden_field :sort, value: params[:sort] %>
                  
                  <div class="relative mb-6">
                    <div class="absolute left-0 right-0 h-1 bg-gray-200 rounded"></div>
                    <div 
                      class="absolute h-1 bg-indigo-600 rounded"
                      data-price-range-target="track"></div>
                    
                    <input 
                      type="range" 
                      min="0" 
                      max="1000" 
                      value="<%= params[:min_price] || 0 %>" 
                      class="absolute w-full h-1 appearance-none bg-transparent pointer-events-none"
                      data-price-range-target="minInput"
                      data-action="input->price-range#updateMinThumb">
                    
                    <input 
                      type="range" 
                      min="0" 
                      max="1000" 
                      value="<%= params[:max_price] || 1000 %>" 
                      class="absolute w-full h-1 appearance-none bg-transparent pointer-events-none"
                      data-price-range-target="maxInput"
                      data-action="input->price-range#updateMaxThumb">
                    
                    <div 
                      class="absolute w-5 h-5 bg-indigo-600 rounded-full shadow-md -ml-2.5 top-0 transform -translate-y-1/2 cursor-grab focus:outline-none"
                      data-price-range-target="minThumb"></div>
                    
                    <div 
                      class="absolute w-5 h-5 bg-indigo-600 rounded-full shadow-md -ml-2.5 top-0 transform -translate-y-1/2 cursor-grab focus:outline-none"
                      data-price-range-target="maxThumb"></div>
                  </div>
                  
                  <div class="flex justify-between text-sm text-gray-600 mb-4">
                    <span data-price-range-target="minValue">$0</span>
                    <span data-price-range-target="maxValue">$1000</span>
                  </div>
                  
                  <%= f.hidden_field :min_price, data: { price_range_target: "minHiddenInput" } %>
                  <%= f.hidden_field :max_price, data: { price_range_target: "maxHiddenInput" } %>
                  
                  <div class="flex justify-end">
                    <%= f.submit "Apply", class: "px-4 py-2 text-xs font-medium text-white bg-indigo-600 rounded hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
                  </div>
                <% end %>
              </div>
            </div>
            
            <%# Other Filters %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Product Type</h4>
              <div class="space-y-2">
                <div class="flex items-center">
                  <%= link_to search_path(query: params[:query], category_id: params[:category_id], min_price: params[:min_price], max_price: params[:max_price], digital: "1", sort: params[:sort]), 
                              class: "group flex items-center" do %>
                    <div class="h-4 w-4 border rounded mr-2 flex items-center justify-center <%= params[:digital] == "1" ? 'bg-indigo-600 border-indigo-600' : 'border-gray-300' %>">
                      <% if params[:digital] == "1" %>
                        <svg class="h-3 w-3 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                      <% end %>
                    </div>
                    <span class="text-sm <%= params[:digital] == "1" ? 'text-indigo-600 font-medium' : 'text-gray-700' %>">
                      Digital Products Only
                    </span>
                  <% end %>
                </div>
                
                <div class="flex items-center">
                  <%= link_to search_path(query: params[:query], category_id: params[:category_id], min_price: params[:min_price], max_price: params[:max_price], on_sale: "1", sort: params[:sort]), 
                              class: "group flex items-center" do %>
                    <div class="h-4 w-4 border rounded mr-2 flex items-center justify-center <%= params[:on_sale] == "1" ? 'bg-indigo-600 border-indigo-600' : 'border-gray-300' %>">
                      <% if params[:on_sale] == "1" %>
                        <svg class="h-3 w-3 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                      <% end %>
                    </div>
                    <span class="text-sm <%= params[:on_sale] == "1" ? 'text-indigo-600 font-medium' : 'text-gray-700' %>">
                      On Sale
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <%# Filter Actions %>
            <div class="px-4 py-5 flex gap-2">
              <%= link_to "Clear All", search_path(query: params[:query]), class: "text-sm text-gray-600 hover:text-gray-900" %>
            </div>
          </div>
        </div>
      </div>
      
      <%# Products Grid %>
      <div class="flex-1">
        <%# Mobile Filter Toggle %>
        <div class="block lg:hidden mb-6">
          <button 
            class="w-full flex items-center justify-between px-4 py-3 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            data-action="click->filter-panel#toggle">
            <span>Filter Results</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </button>
        </div>
        
        <%# Products Count and Sort %>
        <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
          <p class="text-sm text-gray-500">
            Showing <span class="font-medium text-gray-900"><%= @products&.count || 0 %></span> results
          </p>
          
          <div class="flex items-center space-x-2">
            <label for="sort" class="text-sm font-medium text-gray-700">Sort by:</label>
            <%= select_tag :sort, options_for_select([
                ["Relevance", "relevance"], 
                ["Newest", "newest"], 
                ["Price: Low to High", "price_asc"], 
                ["Price: High to Low", "price_desc"]
              ], params[:sort] || "relevance"),
              class: "block w-full pl-3 pr-10 py-1.5 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md",
              onchange: "window.location.href = '#{search_path(query: params[:query], category_id: params[:category_id], min_price: params[:min_price], max_price: params[:max_price], digital: params[:digital], on_sale: params[:on_sale])}' + '&sort=' + this.value",
              data: { action: "change->filter-panel#submit" } %>
          </div>
        </div>
        
        <%# Empty State %>
        <% if !@products || @products.empty? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-12 text-center">
            <svg class="mx-auto h-16 w-16 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <h3 class="mt-4 text-lg font-medium text-gray-900">No results found</h3>
            <p class="mt-2 text-base text-gray-500">
              We couldn't find any products matching your search.
            </p>
            <div class="mt-6">
              <h4 class="text-sm font-medium text-gray-900">Suggestions:</h4>
              <ul class="mt-2 text-sm text-gray-500 list-disc list-inside">
                <li>Check your spelling</li>
                <li>Try more general keywords</li>
                <li>Try different keywords</li>
                <li>Try fewer filters</li>
              </ul>
            </div>
            <div class="mt-6">
              <%= link_to "Clear all filters", search_path(query: params[:query]), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% else %>
          <%# Products Grid %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @products.each do |product| %>
              <div class="group relative bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100 h-full flex flex-col transition-all duration-300 hover:shadow-lg">
                <%# Product image %>
                <div class="aspect-w-1 aspect-h-1 relative overflow-hidden">
                  <% if product.on_sale? %>
                    <div class="absolute top-2 left-2 z-10">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500 text-white">
                        Sale
                      </span>
                    </div>
                  <% end %>
                  
                  <% if product.is_digital? %>
                    <div class="absolute top-2 right-2 z-10">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500 text-white">
                        Digital
                      </span>
                    </div>
                  <% end %>
                  
                  <%= link_to product_path(product), class: "block" do %>
                    <% if product.product_images.any? %>
                      <%= image_tag url_for(product.product_images.first.image), 
                          class: "w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500 ease-out" %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center bg-gray-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                    <% end %>
                  <% end %>
                  
                  <%# Quick action buttons %>
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-all duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">
                    <div class="flex gap-2">
                      <%= button_to wishlist_items_path(product_id: product.id), method: :post, 
                          class: "p-2 rounded-full bg-white text-gray-800 hover:text-red-500 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out",
                          data: { turbo: true } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                      <% end %>
                      
                      <%= button_to add_to_cart_path(product), method: :post, 
                          class: "p-2 rounded-full bg-white text-gray-800 hover:text-indigo-600 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out delay-75",
                          data: { turbo: true } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                      <% end %>
                      
                      <%= link_to product_path(product), 
                          class: "p-2 rounded-full bg-white text-gray-800 hover:text-indigo-600 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out delay-150" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <%# Product details %>
                <div class="flex-1 p-4 flex flex-col">
                  <div class="flex-1">
                    <div class="flex justify-between items-start">
                      <h3 class="text-sm font-medium text-gray-900 group-hover:text-indigo-600 transition-colors">
                        <%= link_to product.name, product_path(product), class: "hover:text-indigo-600 transition-colors" %>
                      </h3>
                      <p class="text-xs text-gray-500 whitespace-nowrap ml-2">
                        <%= product.category.name %>
                      </p>
                    </div>
                    
                    <p class="mt-1 text-sm text-gray-500 line-clamp-2">
                      <%= highlight(truncate(product.description, length: 100), params[:query]) %>
                    </p>
                  </div>
                  
                  <div class="mt-4 flex items-end justify-between">
                    <% if product.discounted_price.present? && product.discounted_price < product.price %>
                      <div>
                        <p class="text-sm font-medium text-gray-900"><%= number_to_currency(product.discounted_price) %></p>
                        <p class="text-xs text-gray-500 line-through"><%= number_to_currency(product.price) %></p>
                      </div>
                    <% else %>
                      <p class="text-sm font-medium text-gray-900"><%= number_to_currency(product.price) %></p>
                    <% end %>
                    
                    <div class="flex items-center">
                      <% full_stars = product.reviews.average(:rating).to_i rescue 0 %>
                      <div class="flex items-center">
                        <% (1..5).each do |i| %>
                          <% if i <= full_stars %>
                            <svg class="text-amber-400 h-4 w-4 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                              <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                            </svg>
                          <% else %>
                            <svg class="text-gray-200 h-4 w-4 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                              <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                            </svg>
                          <% end %>
                        <% end %>
                      </div>
                      <span class="ml-1 text-xs text-gray-500">
                        (<%= product.reviews.count %>)
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          <%# Pagination %>
          <div class="mt-12 flex justify-center">
            <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Previous</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
              <a href="#" class="relative inline-flex items-center px-4 py-2 border border-indigo-500 bg-indigo-50 text-sm font-medium text-indigo-600">
                1
              </a>
              <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                2
              </a>
              <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                3
              </a>
              <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Next</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
            </nav>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <%# Related Searches (when no results) %>
  <% if (!@products || @products.empty?) && params[:query].present? %>
    <div class="max-w-7xl mx-auto pb-16 px-4 sm:px-6 lg:px-8">
      <h2 class="text-xl font-bold text-gray-900 mb-8">Related Searches</h2>
      <div class="flex flex-wrap gap-3">
        <% related_terms = ["digital products", "physical products", "ebooks", "software", "courses", "printables"] %>
        <% related_terms.each do |term| %>
          <%= link_to search_path(query: term), class: "px-4 py-2 rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 hover:text-gray-900 text-sm font-medium transition-all" do %>
            <%= term %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <%# Popular Categories Section %>
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">Popular Categories</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
        <% Category.where(visible: true).order(products_count: :desc).limit(6).each do |category| %>
          <%= link_to search_path(query: params[:query], category_id: category.id), class: "group" do %>
            <div class="bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-md transition duration-300 aspect-w-1 aspect-h-1 relative">
              <div class="absolute inset-0 flex items-center justify-center <%= "bg-#{category.icon_color || 'indigo'}-50" %>">
                <div class="<%= "text-#{category.icon_color || 'indigo'}-600" %> transition-transform group-hover:scale-110 duration-300">
                  <svg class="h-12 w-12" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <% case category.icon_name %>
                    <% when "book" %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    <% when "device" %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    <% when "music" %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                    <% else %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    <% end %>
                  </svg>
                </div>
              </div>
            </div>
            <div class="mt-3 text-center">
              <h3 class="text-sm font-medium text-gray-900 group-hover:text-indigo-600 transition-colors">
                <%= category.name %>
              </h3>
              <p class="mt-1 text-xs text-gray-500">
                <%= pluralize(category.products_count, 'product') %>
              </p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
