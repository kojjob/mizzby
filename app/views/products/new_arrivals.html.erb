<div class="bg-gradient-to-b from-purple-50 to-white">
  <div class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-indigo-800 mb-2">New Arrivals</h1>
      <p class="text-gray-600 max-w-2xl mx-auto">Discover our latest digital products added in the last 30 days. Be the first to explore these fresh additions to our collection.</p>
    </div>

    <% if defined?(@featured_products) && @featured_products && @featured_products.any? %>
      <!-- Featured products section -->
    <% end %>

    <div>
      <h2 class="text-2xl font-bold text-indigo-700 mb-6">All New Arrivals</h2>
      <% if defined?(@new_products) && @new_products && @new_products.any? %>
        <!-- New products grid -->
      <% else %>
        <div class="text-center py-12 bg-indigo-50 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-indigo-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-medium text-indigo-700 mb-2">No new products available</h3>
          <p class="text-gray-600">Check back soon for new additions to our catalog!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>