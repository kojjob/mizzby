<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price:</strong>
    <%= product.price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Discounted price:</strong>
    <%= product.discounted_price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stock quantity:</strong>
    <%= product.stock_quantity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Sku:</strong>
    <%= product.sku %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Barcode:</strong>
    <%= product.barcode %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= product.weight %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Dimensions:</strong>
    <%= product.dimensions %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Condition:</strong>
    <%= product.condition %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Brand:</strong>
    <%= product.brand %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Featured:</strong>
    <%= product.featured? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Currency:</strong>
    <%= product.currency %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Country of origin:</strong>
    <%= product.country_of_origin %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Available in ghana:</strong>
    <%= product.available_in_ghana? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Available in nigeria:</strong>
    <%= product.available_in_nigeria? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Shipping time:</strong>
    <%= product.shipping_time %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= product.category_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Seller:</strong>
    <%= product.seller_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published:</strong>
    <%= product.published? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published at:</strong>
    <%= product.published_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Meta title:</strong>
    <%= product.meta_title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Meta description:</strong>
    <%= product.meta_description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Is digital:</strong>
    <%= product.is_digital? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= product.status %>
  </div>
</div>
