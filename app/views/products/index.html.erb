<%# app/views/products/index.html.erb %>

<div class="bg-white">
  <%# Hero Section with Animated Slider %>
  <section
    class="relative overflow-hidden max-w-full"
    data-controller="hero-carousel"
    data-hero-carousel-autoplay-value="true"
    data-hero-carousel-interval-value="5000">

    <%# Hero Slides Container %>
    <div class="relative h-[60vh] md:h-[70vh] max-w-full" data-hero-carousel-target="container">
      <% hero_products = Product.featured.limit(3) %>
      <% hero_products.each_with_index do |product, index| %>
        <div
          class="absolute inset-0 w-full h-full transition-opacity duration-700 ease-in-out transform <%= index == 0 ? 'opacity-100' : 'opacity-0' %>"
          data-hero-carousel-target="slide">
          <div class="absolute inset-0 bg-gradient-to-r from-gray-900/70 to-gray-900/40 z-10"></div>
          <% if product.product_images.any? && product.product_images.first.image.attached? %>
            <div class="absolute inset-0 w-full h-full">
              <%= image_tag rails_blob_url(product.product_images.first.image), class: "w-full h-full object-cover object-center" %>
            </div>
          <% else %>
            <div class="absolute inset-0 w-full h-full bg-gradient-to-b from-indigo-600 to-purple-700"></div>
          <% end %>

          <div class="absolute inset-0 z-20 flex items-center">
            <div class="container mx-auto px-4 md:px-8 flex flex-col justify-center h-full"
                data-aos="fade-up"
                data-aos-delay="300"
                data-aos-once="true">
              <div class="max-w-xl">
                <span class="inline-block py-1 px-3 rounded-full bg-indigo-600 text-white text-sm font-medium mb-4 opacity-0 animate-fade-in-up"
                      style="animation-delay: 300ms; animation-fill-mode: forwards;">
                  <%= product.category.name %>
                </span>
                <h1 class="text-3xl md:text-5xl lg:text-6xl font-extrabold text-white leading-tight mb-6 opacity-0 animate-fade-in-up"
                    style="animation-delay: 500ms; animation-fill-mode: forwards;">
                  <%= product.name %>
                </h1>
                <p class="text-lg md:text-xl text-gray-200 mb-8 opacity-0 animate-fade-in-up"
                   style="animation-delay: 700ms; animation-fill-mode: forwards;">
                  <%= truncate(product.description, length: 120) %>
                </p>
                <div class="flex flex-wrap gap-4 opacity-0 animate-fade-in-up"
                     style="animation-delay: 900ms; animation-fill-mode: forwards;">
                  <% if product.discounted_price.present? && product.discounted_price < product.price %>
                    <span class="text-2xl md:text-3xl font-bold text-white">
                      <%= number_to_currency(product.discounted_price) %>
                    </span>
                    <span class="text-xl md:text-2xl text-gray-300 line-through self-end">
                      <%= number_to_currency(product.price) %>
                    </span>
                    <span class="bg-red-500 text-white text-sm font-bold py-1 px-2 rounded-md self-end">
                      <%= number_to_percentage(100 - (product.discounted_price / product.price * 100), precision: 0) %> OFF
                    </span>
                  <% else %>
                    <span class="text-2xl md:text-3xl font-bold text-white">
                      <%= number_to_currency(product.price) %>
                    </span>
                  <% end %>
                </div>
                <div class="mt-8 flex flex-wrap gap-4 opacity-0 animate-fade-in-up"
                     style="animation-delay: 1100ms; animation-fill-mode: forwards;">
                  <%= link_to product_path(product), class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition ease-in-out duration-300 hover:shadow-lg" do %>
                    View Product
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:ml-3 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  <% end %>
                  <%= button_to add_to_cart_product_path(product), method: :post,
                      class: "inline-flex items-center justify-center px-5 py-3 border border-white text-base font-medium rounded-md text-white bg-transparent hover:bg-white hover:text-indigo-600 transition ease-in-out duration-300",
                      data: { turbo: true } do %>
                    Add to Cart
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# Hero Navigation %>
    <div class="absolute inset-x-0 bottom-10 z-30 flex justify-center space-x-3">
      <% hero_products.each_with_index do |_, index| %>
        <button
          class="w-3 h-3 rounded-full <%= index == 0 ? 'bg-white' : 'bg-white/50' %> transition-colors duration-200 ease-in-out"
          data-hero-carousel-target="indicator"
          data-action="click->hero-carousel#goToSlide"
          data-index="<%= index %>">
        </button>
      <% end %>
    </div>

    <%# Hero Arrows %>
    <button
      class="absolute left-4 top-1/2 -translate-y-1/2 z-30 flex items-center justify-center w-12 h-12 rounded-full bg-white/20 backdrop-blur-sm text-white hover:bg-white/30 transition-colors duration-200 focus:outline-none"
      data-action="click->hero-carousel#prev">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>
    <button
      class="absolute right-4 top-1/2 -translate-y-1/2 z-30 flex items-center justify-center w-12 h-12 rounded-full bg-white/20 backdrop-blur-sm text-white hover:bg-white/30 transition-colors duration-200 focus:outline-none"
      data-action="click->hero-carousel#next">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </section>

  <%# Categories Navigation %>
  <div class="bg-white shadow-sm sticky top-16 z-20" data-controller="sticky-nav">
    <div class="container mx-auto relative overflow-x-auto scrollbar-hide py-4 px-4 md:px-8 max-w-full">
      <div class="flex space-x-6 md:space-x-8 whitespace-nowrap" data-sticky-nav-target="container">
        <%= link_to "All Products", products_path, class: "text-sm font-medium whitespace-nowrap px-3 py-2 rounded-full #{'bg-indigo-100 text-indigo-700' if !params[:category_id].present?} hover:bg-gray-100 transition-colors duration-200" %>

        <% Category.where(visible: true).order(:position).each do |category| %>
          <%= link_to category.name, products_path(category_id: category.id),
              class: "text-sm font-medium whitespace-nowrap px-3 py-2 rounded-full #{'bg-indigo-100 text-indigo-700' if params[:category_id].to_i == category.id} hover:bg-gray-100 transition-colors duration-200" %>
        <% end %>
      </div>

      <%# Shadow indicators for horizontal scroll %>
      <div class="absolute left-0 top-0 bottom-0 w-12 bg-gradient-to-r from-white to-transparent pointer-events-none" data-sticky-nav-target="leftShadow"></div>
      <div class="absolute right-0 top-0 bottom-0 w-12 bg-gradient-to-l from-white to-transparent pointer-events-none" data-sticky-nav-target="rightShadow"></div>
    </div>
  </div>

  <%# Main Content with Filters and Products %>
  <div class="container mx-auto px-4 md:px-8 py-8 overflow-hidden">
    <%# Mobile Filter Toggle %>
    <div class="block lg:hidden mb-6">
      <button
        class="w-full flex items-center justify-between px-4 py-3 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
        data-action="click->filter-panel#toggle">
        <span>Filter Products</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
      </button>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">
      <%# Filter Panel %>
      <div
        class="lg:block hidden lg:w-64 overflow-hidden transition-all ease-in-out duration-300"
        data-controller="filter-panel"
        data-filter-panel-target="panel">

        <div class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden">
          <div class="px-4 py-5 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Filters</h3>
          </div>

          <div class="divide-y divide-gray-200">
            <%# Category Filter %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Categories</h4>
              <div class="space-y-2">
                <% Category.where(visible: true).each do |category| %>
                  <div class="flex items-center">
                    <%= check_box_tag "category_ids[]", category.id,
                        params[:category_ids]&.include?(category.id.to_s),
                        id: "category-#{category.id}",
                        class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                        data: { action: "change->filter-panel#submit" } %>
                    <label for="category-<%= category.id %>" class="ml-3 text-sm text-gray-700">
                      <%= category.name %> (<%= category.products_count %>)
                    </label>
                  </div>
                <% end %>
              </div>
            </div>

            <%# Price Range Filter %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Price Range</h4>
              <div
                class="pt-2"
                data-controller="price-range"
                data-price-range-min-value="0"
                data-price-range-max-value="1000"
                data-price-range-current-min-value="<%= params[:min_price] || 0 %>"
                data-price-range-current-max-value="<%= params[:max_price] || 1000 %>">

                <div class="relative mb-6">
                  <div class="absolute left-0 right-0 h-1 bg-gray-200 rounded"></div>
                  <div
                    class="absolute h-1 bg-indigo-600 rounded"
                    data-price-range-target="track"></div>

                  <input
                    type="range"
                    min="0"
                    max="1000"
                    value="<%= params[:min_price] || 0 %>"
                    class="absolute w-full h-1 appearance-none bg-transparent pointer-events-none"
                    data-price-range-target="minInput"
                    data-action="input->price-range#updateMinThumb change->filter-panel#submit">

                  <input
                    type="range"
                    min="0"
                    max="1000"
                    value="<%= params[:max_price] || 1000 %>"
                    class="absolute w-full h-1 appearance-none bg-transparent pointer-events-none"
                    data-price-range-target="maxInput"
                    data-action="input->price-range#updateMaxThumb change->filter-panel#submit">

                  <div
                    class="absolute w-5 h-5 bg-indigo-600 rounded-full shadow-md -ml-2.5 top-0 transform -translate-y-1/2 cursor-grab focus:outline-none"
                    data-price-range-target="minThumb"></div>

                  <div
                    class="absolute w-5 h-5 bg-indigo-600 rounded-full shadow-md -ml-2.5 top-0 transform -translate-y-1/2 cursor-grab focus:outline-none"
                    data-price-range-target="maxThumb"></div>
                </div>

                <div class="flex justify-between text-sm text-gray-600">
                  <span data-price-range-target="minValue">$0</span>
                  <span data-price-range-target="maxValue">$1000</span>
                </div>

                <input type="hidden" name="min_price" data-price-range-target="minHiddenInput">
                <input type="hidden" name="max_price" data-price-range-target="maxHiddenInput">
              </div>
            </div>

            <%# Other Filters %>
            <div class="px-4 py-5 space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Product Type</h4>
              <div class="space-y-2">
                <div class="flex items-center">
                  <%= check_box_tag "digital", "1", params[:digital] == "1",
                      id: "digital-filter",
                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                      data: { action: "change->filter-panel#submit" } %>
                  <label for="digital-filter" class="ml-3 text-sm text-gray-700">
                    Digital Products Only
                  </label>
                </div>
                <div class="flex items-center">
                  <%= check_box_tag "on_sale", "1", params[:on_sale] == "1",
                      id: "on-sale-filter",
                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                      data: { action: "change->filter-panel#submit" } %>
                  <label for="on-sale-filter" class="ml-3 text-sm text-gray-700">
                    On Sale
                  </label>
                </div>
                <div class="flex items-center">
                  <%= check_box_tag "featured", "1", params[:featured] == "1",
                      id: "featured-filter",
                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                      data: { action: "change->filter-panel#submit" } %>
                  <label for="featured-filter" class="ml-3 text-sm text-gray-700">
                    Featured Products
                  </label>
                </div>
              </div>
            </div>

            <%# Filter Actions %>
            <div class="px-4 py-5 flex gap-2">
              <%= link_to "Clear All", products_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
            </div>
          </div>
        </div>
      </div>

      <%# Products Grid %>
      <div class="flex-1">
        <%# Products Count and Sort %>
        <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
          <p class="text-sm text-gray-500">
            Showing <span class="font-medium text-gray-900"><%= @products.count %></span> products
          </p>

          <div class="flex items-center space-x-2">
            <label for="sort" class="text-sm font-medium text-gray-700">Sort by:</label>
            <%= select_tag :sort, options_for_select([
                ["Newest", "newest"],
                ["Price: Low to High", "price_asc"],
                ["Price: High to Low", "price_desc"],
                ["Best Selling", "best_selling"],
                ["Highest Rated", "highest_rated"]
              ], params[:sort]),
              class: "block w-full pl-3 pr-10 py-1.5 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md",
              data: { action: "change->filter-panel#submit" } %>
          </div>
        </div>

        <%# Featured Products Carousel (only if featured products exist) %>
        <% featured_products = Product.where(featured: true).limit(8) %>
        <% if featured_products.any? %>
          <div class="mb-12 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl p-6 overflow-hidden">
            <div class="mb-4 flex justify-between items-center">
              <h2 class="text-lg font-bold text-gray-900">Featured Products</h2>
              <div class="flex gap-2">
                <button
                  class="p-2 rounded-full bg-white border border-gray-200 text-gray-600 hover:bg-indigo-600 hover:text-white transition-colors"
                  data-action="click->featured-carousel#prev">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                </button>
                <button
                  class="p-2 rounded-full bg-white border border-gray-200 text-gray-600 hover:bg-indigo-600 hover:text-white transition-colors"
                  data-action="click->featured-carousel#next">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </button>
              </div>
            </div>

            <div
              class="relative"
              data-controller="featured-carousel">
              <div
                class="overflow-hidden max-w-full relative"
                data-featured-carousel-target="container">
                <div
                  class="grid grid-flow-col auto-cols-max md:auto-cols-min gap-4 transition-transform duration-500 ease-in-out transform"
                  style="width: max-content;"
                  data-featured-carousel-target="track">

                <!-- Scroll indicators -->
                <div class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-gradient-to-r from-indigo-50 to-transparent w-12 h-full z-10 pointer-events-none opacity-70"></div>
                <div class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-gradient-to-l from-indigo-50 to-transparent w-12 h-full z-10 pointer-events-none opacity-70"></div>

                  <% featured_products.each do |product| %>
                    <div class="w-56 sm:w-60 md:w-64 lg:w-72">
                      <div class="group relative bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100 h-full flex flex-col transition-all duration-300 hover:shadow-lg">
                        <%# Product image %>
                        <div class="aspect-square relative overflow-hidden">
                          <% if product.on_sale? %>
                            <div class="absolute top-2 left-2 z-10">
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500 text-white">
                                Sale
                              </span>
                            </div>
                          <% end %>

                          <% if product.is_digital? %>
                            <div class="absolute top-2 right-2 z-10">
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500 text-white">
                                Digital
                              </span>
                            </div>
                          <% end %>

                          <%= link_to product_path(product), class: "block" do %>
                            <% if product.product_images.any? && product.product_images.first.image.attached? %>
                              <div class="aspect-square w-full overflow-hidden bg-gray-100">
                                <%= image_tag rails_blob_url(product.product_images.first.image), class: "h-full w-full object-cover object-center group-hover:scale-105 transition-transform duration-500 ease-out" %>
                              </div>
                            <% else %>
                              <div class="w-full h-full flex items-center justify-center bg-gray-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                              </div>
                            <% end %>
                          <% end %>

                          <%# Quick action buttons %>
                          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-all duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">
                            <div class="flex gap-2">
                              <%= button_to wishlist_items_path(product_id: product.id), method: :post,
                                  class: "p-2 rounded-full bg-white text-gray-800 hover:text-red-500 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out",
                                  data: { turbo: true } do %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                              <% end %>

                              <%= button_to add_to_cart_product_path(product), method: :post,
                                  class: "p-2 rounded-full bg-white text-gray-800 hover:text-indigo-600 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out delay-75",
                                  data: { turbo: true } do %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                              <% end %>

                              <%= link_to product_path(product),
                                  class: "p-2 rounded-full bg-white text-gray-800 hover:text-indigo-600 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out delay-150" do %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                              <% end %>
                            </div>
                          </div>
                        </div>

                        <%# Product details %>
                        <div class="flex-1 p-4 flex flex-col">
                          <h3 class="text-sm font-medium text-gray-900 group-hover:text-indigo-600 transition-colors">
                            <%= link_to product.name, product_path(product), class: "hover:text-indigo-600 transition-colors" %>
                          </h3>
                          <p class="mt-1 text-sm text-gray-500 line-clamp-2 flex-grow">
                            <%= truncate(product.description, length: 60) %>
                          </p>
                          <div class="mt-3 flex items-end justify-between">
                            <% if product.discounted_price.present? && product.discounted_price < product.price %>
                              <div>
                                <p class="text-sm font-medium text-gray-900"><%= number_to_currency(product.discounted_price) %></p>
                                <p class="text-xs text-gray-500 line-through"><%= number_to_currency(product.price) %></p>
                              </div>
                            <% else %>
                              <p class="text-sm font-medium text-gray-900"><%= number_to_currency(product.price) %></p>
                            <% end %>

                            <div class="flex items-center">
                              <% full_stars = product.reviews.average(:rating).to_i rescue 0 %>
                              <div class="flex items-center">
                                <% (1..5).each do |i| %>
                                  <% if i <= full_stars %>
                                    <svg class="text-amber-400 h-4 w-4 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                      <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                                    </svg>
                                  <% else %>
                                    <svg class="text-gray-200 h-4 w-4 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                      <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                                    </svg>
                                  <% end %>
                                <% end %>
                              </div>
                              <span class="ml-1 text-xs text-gray-500">
                                (<%= product.reviews.count %>)
                              </span>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <%# Main Product Grid %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% @products.each do |product| %>
            <div class="group relative bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100 h-full flex flex-col transition-all duration-300 hover:shadow-lg hover:border-indigo-200">
              <%# Product image %>
              <div class="relative overflow-hidden">
                <% if product.on_sale? %>
                  <div class="absolute top-2 left-2 z-10">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500 text-white shadow-sm">
                      Sale
                    </span>
                  </div>
                <% end %>

                <% if product.is_digital? %>
                  <div class="absolute top-2 right-2 z-10">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500 text-white shadow-sm">
                      Digital
                    </span>
                  </div>
                <% end %>

                <%= link_to product_path(product), class: "block" do %>
                  <div class="aspect-square w-full overflow-hidden bg-gray-100 group-hover:opacity-95 transition-opacity">
                    <% if product.product_images.any? && product.product_images.first.image.attached? %>
                      <%= image_tag rails_blob_url(product.product_images.first.image), class: "h-full w-full object-cover object-center group-hover:scale-105 transition-transform duration-500 ease-out" %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center bg-gray-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                    <% end %>
                  </div>
                <% end %>

                <%# Quick action buttons %>
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-all duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">
                  <div class="flex gap-2">
                    <%= button_to wishlist_items_path(product_id: product.id), method: :post,
                        class: "p-2 rounded-full bg-white text-gray-800 hover:text-red-500 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out",
                        data: { turbo: true } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                      </svg>
                    <% end %>

                    <%= button_to add_to_cart_product_path(product), method: :post,
                        class: "p-2 rounded-full bg-white text-gray-800 hover:text-indigo-600 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out delay-75",
                        data: { turbo: true } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    <% end %>

                    <%= link_to product_path(product),
                        class: "p-2 rounded-full bg-white text-gray-800 hover:text-indigo-600 transition-colors shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 ease-in-out delay-150" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>

              <%# Product details %>
              <div class="flex-1 p-4 flex flex-col">
                <h3 class="text-sm font-medium text-gray-900 group-hover:text-indigo-600 transition-colors">
                  <%= link_to product.name, product_path(product), class: "hover:underline" %>
                </h3>
                <p class="mt-1 text-sm text-gray-500 line-clamp-2 flex-grow">
                  <%= truncate(product.description, length: 100) %>
                </p>
                <div class="mt-3 pt-3 border-t border-gray-100 flex items-end justify-between">
                  <% if product.discounted_price.present? && product.discounted_price < product.price %>
                    <div>
                      <p class="text-sm font-medium text-gray-900"><%= number_to_currency(product.discounted_price) %></p>
                      <p class="text-xs text-gray-500 line-through"><%= number_to_currency(product.price) %></p>
                    </div>
                  <% else %>
                    <p class="text-sm font-medium text-gray-900"><%= number_to_currency(product.price) %></p>
                  <% end %>

                  <div class="flex items-center">
                    <% full_stars = product.reviews.average(:rating).to_i rescue 0 %>
                    <div class="flex items-center">
                      <% (1..5).each do |i| %>
                        <% if i <= full_stars %>
                          <svg class="text-amber-400 h-4 w-4 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                          </svg>
                        <% else %>
                          <svg class="text-gray-200 h-4 w-4 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                    <span class="ml-1 text-xs text-gray-500">
                      (<%= product.reviews.count %>)
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <%# Pagination %>
        <% if @products.respond_to?(:total_pages) && @products.total_pages > 1 %>
          <div class="mt-12 flex justify-center">
            <div class="flex items-center justify-between">
              <div class="flex-1 flex justify-between sm:hidden">
                <%= link_to_prev_page @products, 'Previous', class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                <%= link_to_next_page @products, 'Next', class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              </div>
              <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-center">
                <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                  <%= link_to_prev_page @products, raw('<span class="sr-only">Previous</span><svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>'), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" %>

                  <% if @products.total_pages <= 7 %>
                    <% (1..@products.total_pages).each do |page| %>
                      <% if page == @products.current_page %>
                        <span class="relative inline-flex items-center px-4 py-2 border border-indigo-500 bg-indigo-50 text-sm font-medium text-indigo-600">
                          <%= page %>
                        </span>
                      <% else %>
                        <%= link_to page, url_for(safe_params_for_pagination.merge(page: page)), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
                      <% end %>
                    <% end %>
                  <% else %>
                    <% # First page %>
                    <% if @products.current_page > 3 %>
                      <%= link_to 1, url_for(safe_params_for_pagination.merge(page: 1)), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
                      <% if @products.current_page > 4 %>
                        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">...</span>
                      <% end %>
                    <% end %>

                    <% # Pages around current page %>
                    <% start_page = [@products.current_page - 1, 1].max %>
                    <% end_page = [@products.current_page + 1, @products.total_pages].min %>
                    <% (start_page..end_page).each do |page| %>
                      <% if page == @products.current_page %>
                        <span class="relative inline-flex items-center px-4 py-2 border border-indigo-500 bg-indigo-50 text-sm font-medium text-indigo-600">
                          <%= page %>
                        </span>
                      <% else %>
                        <%= link_to page, url_for(safe_params_for_pagination.merge(page: page)), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
                      <% end %>
                    <% end %>

                    <% # Last page %>
                    <% if @products.current_page < @products.total_pages - 2 %>
                      <% if @products.current_page < @products.total_pages - 3 %>
                        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">...</span>
                      <% end %>
                      <%= link_to @products.total_pages, url_for(safe_params_for_pagination.merge(page: @products.total_pages)), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
                    <% end %>
                  <% end %>

                  <%= link_to_next_page @products, raw('<span class="sr-only">Next</span><svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /></svg>'), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" %>
                </nav>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>