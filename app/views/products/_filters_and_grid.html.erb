<% if notice.present? %>
  <div class="bg-green-50 rounded-lg p-4 mb-8">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-800" id="notice"><%= notice %></p>
      </div>
    </div>
  </div>
<% end %>

<%# Filters %>
<div data-controller="product-filters" class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
  <%# Category Filter %>
  <div class="w-full md:w-auto mb-4 md:mb-0">
    <label for="category" class="sr-only">Category</label>
    <div class="relative">
      <select 
        id="category" 
        name="category" 
        data-action="change->product-filters#updateCategory"
        class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"
      >
        <option value="">All Categories</option>
        <% Category.all.each do |category| %>
          <option 
            value="<%= category.id %>" 
            <%= 'selected' if params[:category_id].to_i == category.id %>
          >
            <%= category.name %>
          </option>
        <% end %>
      </select>
    </div>
  </div>
  
  <%# Sort and View Options %>
  <div class="flex items-center space-x-4">
    <%# Sort Filter %>
    <div>
      <label for="sort" class="sr-only">Sort</label>
      <div class="relative">
        <select 
          id="sort" 
          name="sort" 
          data-action="change->product-filters#updateSort"
          class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"
        >
          <option value="newest" <%= 'selected' if params[:sort] == 'newest' %>>Newest</option>
          <option value="price-low" <%= 'selected' if params[:sort] == 'price-low' %>>Price: Low to High</option>
          <option value="price-high" <%= 'selected' if params[:sort] == 'price-high' %>>Price: High to Low</option>
          <option value="popular" <%= 'selected' if params[:sort] == 'popular' %>>Most Popular</option>
        </select>
      </div>
    </div>
    
    <%# View Mode Toggle %>
    <div class="flex border border-gray-300 rounded-md">
      <button 
        type="button" 
        data-action="click->product-filters#setGridView"
        class="p-2 bg-indigo-50 text-indigo-600 hover:bg-indigo-100 rounded-l-md"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
        </svg>
      </button>
      <button 
        type="button" 
        data-action="click->product-filters#setListView"
        class="p-2 text-gray-500 hover:bg-gray-100 rounded-r-md"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <%# New Product Button (Admin Only) %>
    <% if current_user && current_user.admin? %>
      <%= link_to new_product_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Add Product
      <% end %>
    <% end %>
  </div>
</div>

<%# Products Grid %>
<div id="products-grid" data-product-filters-target="grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% if @products && @products.any? %>
    <% @products.each do |product| %>
      <div class="product-card">
        <%= render 'product_card', product: product %>
      </div>
    <% end %>
  <% else %>
    <div class="col-span-full text-center py-12 bg-indigo-50 rounded-lg">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-indigo-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="text-xl font-medium text-indigo-700 mb-2">No products found</h3>
      <p class="text-gray-600 mb-4">We couldn't find any products matching your criteria.</p>
      <%= link_to "Clear filters", products_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>

<%# Pagination %>
<% if @products.respond_to?(:total_pages) && @products.total_pages > 1 %>
  <div class="mt-8 flex justify-center">
    <%= paginate @products %>
  </div>
<% end %>