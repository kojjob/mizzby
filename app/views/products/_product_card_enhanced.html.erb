<div class="group relative h-full flex flex-col bg-white rounded-xl shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl">
  <!-- Product badge (if on sale, featured, etc.) -->
  <% if product.respond_to?(:discounted_price) && product.discounted_price && product.discounted_price < product.price %>
    <div class="absolute top-2 left-2 z-10 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full">
      <%= number_to_percentage((1 - product.discounted_price / product.price) * 100, precision: 0) %> OFF
    </div>
  <% elsif product.respond_to?(:featured) && product.featured? %>
    <div class="absolute top-2 left-2 z-10 bg-indigo-500 text-white text-xs font-bold px-2 py-1 rounded-full">
      Featured
    </div>
  <% elsif product.respond_to?(:created_at) && product.created_at >= 7.days.ago %>
    <div class="absolute top-2 left-2 z-10 bg-emerald-500 text-white text-xs font-bold px-2 py-1 rounded-full">
      New
    </div>
  <% end %>
  
  <!-- Quick Actions -->
  <div class="absolute top-2 right-2 z-10 flex flex-col gap-2 transform translate-x-10 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300">
    <% in_wishlist = user_signed_in? && current_user.wishlist_items.exists?(product_id: product.id) %>
    <div data-controller="wishlist-toggle" 
         data-wishlist-toggle-product-id-value="<%= product.id %>"
         data-wishlist-toggle-in-wishlist-value="<%= in_wishlist %>">
      <button data-wishlist-toggle-target="button"
              data-action="click->wishlist-toggle#toggle"
              title="<%= in_wishlist ? 'Remove from Wishlist' : 'Add to Wishlist' %>" 
              class="w-8 h-8 rounded-full bg-white shadow-md flex items-center justify-center <%= in_wishlist ? 'text-red-500' : 'text-gray-600' %> hover:text-red-500 transition-colors">
        <svg data-wishlist-toggle-target="icon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="<%= in_wishlist ? 'currentColor' : 'none' %>" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      </button>
    </div>
    <button title="Quick View" class="w-8 h-8 rounded-full bg-white shadow-md flex items-center justify-center text-gray-600 hover:text-indigo-500 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
    </button>
  </div>
  
  <!-- Product Image with hover effect -->
  <div class="relative aspect-square overflow-hidden">
    <% if product.respond_to?(:product_images) && product.product_images.any? %>
      <%= link_to product_path(product) do %>
        <%= image_tag product.product_images.first.variant(resize_to_fill: [400, 400]), 
                    class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500",
                    alt: product.name,
                    loading: "lazy" %>
      <% end %>
    <% else %>
      <%= link_to product_path(product) do %>
        <div class="w-full h-full bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center text-indigo-400 group-hover:scale-110 transition-transform duration-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      <% end %>
    <% end %>
    
    <!-- Overlay Add to Cart -->
    <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <%= button_to add_to_cart_product_path(product), class: "px-4 py-2 bg-white text-indigo-600 font-medium rounded-lg hover:bg-indigo-600 hover:text-white transition-colors transform -translate-y-4 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 00-1 1v5H4a1 1 0 100 2h5v5a1 1 0 102 0v-5h5a1 1 0 100-2h-5V4a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        Add to Cart
      <% end %>
    </div>
  </div>
  
  <!-- Product Info -->
  <div class="p-4 flex-1 flex flex-col">
    <!-- Category -->
    <% if product.respond_to?(:category) && product.category.present? %>
      <div class="text-xs text-indigo-500 font-medium uppercase tracking-wider mb-1">
        <%= product.category.name %>
      </div>
    <% end %>
    
    <!-- Product Name -->
    <h3 class="text-gray-900 font-bold line-clamp-2 mb-1 group-hover:text-indigo-600 transition-colors">
      <%= link_to product.name, product_path(product) %>
    </h3>
    
    <!-- Product Description (shortened) -->
    <p class="text-gray-600 text-sm line-clamp-2 mb-3 flex-1">
      <%= truncate(strip_tags(product.respond_to?(:description) ? product.description : ""), length: 80) %>
    </p>
    
    <!-- Product Metadata -->
    <div class="mt-auto">
      <!-- Price -->
      <div class="flex items-center justify-between">
        <div class="flex items-end gap-1">
          <% if product.respond_to?(:discounted_price) && product.discounted_price && product.discounted_price < product.price %>
            <span class="text-lg font-bold text-indigo-600">
              <%= number_to_currency(product.discounted_price) %>
            </span>
            <span class="text-sm text-gray-500 line-through">
              <%= number_to_currency(product.price) %>
            </span>
          <% else %>
            <span class="text-lg font-bold text-gray-900">
              <%= number_to_currency(product.price) %>
            </span>
          <% end %>
        </div>
        
        <!-- Ratings (if available) -->
        <% if product.respond_to?(:reviews) && product.reviews.any? %>
          <div class="flex items-center">
            <div class="text-yellow-400 flex">
              <% avg_rating = product.reviews.average(:rating).to_f.round(1) %>
              <% full_stars = avg_rating.floor %>
              <% half_star = avg_rating - full_stars >= 0.5 %>
              
              <% full_stars.times do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% end %>
              
              <% if half_star %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% end %>
              
              <% (5 - full_stars - (half_star ? 1 : 0)).times do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% end %>
            </div>
            <span class="text-xs text-gray-500 ml-1">(<%= product.reviews.count %>)</span>
          </div>
        <% end %>
      </div>
      
      <!-- Digital/Physical Indicator -->
      <div class="mt-2 flex items-center text-xs">
        <% if product.respond_to?(:is_digital) && product.is_digital? %>
          <div class="flex items-center text-emerald-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
            </svg>
            <span>Digital Download</span>
          </div>
        <% else %>
          <div class="flex items-center text-blue-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
            <span>Physical Product</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>