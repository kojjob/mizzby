<div class="p-6 md:p-8 grid grid-cols-1 md:grid-cols-2 gap-8">
  <!-- Close button -->
  <button type="button" class="absolute top-4 right-4 text-gray-400 hover:text-gray-500" data-action="click->quick-view#close">
    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Product images -->
  <div class="relative">
    <% if @product.product_images.any? && @product.product_images.first.image.attached? %>
      <div class="aspect-square overflow-hidden rounded-lg bg-gray-100 mb-4">
        <%= image_tag rails_blob_url(@product.product_images.first.image), class: "h-full w-full object-cover object-center" %>
      </div>
      
      <% if @product.product_images.count > 1 %>
        <div class="grid grid-cols-4 gap-2">
          <% @product.product_images.each_with_index do |image, index| %>
            <% if image.image.attached? %>
              <div class="aspect-square overflow-hidden rounded-lg bg-gray-100 <%= index == 0 ? 'ring-2 ring-indigo-500' : '' %>">
                <%= image_tag rails_blob_url(image.image), class: "h-full w-full object-cover object-center" %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="aspect-square flex items-center justify-center bg-gray-200 rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    <% end %>
  </div>

  <!-- Product details -->
  <div class="flex flex-col">
    <div class="flex-1">
      <!-- Category -->
      <div class="text-sm text-indigo-600 mb-1">
        <%= @product.category.name %>
      </div>
      
      <!-- Product name -->
      <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @product.name %></h2>
      
      <!-- Price -->
      <div class="flex items-center mb-4">
        <% if @product.discounted_price.present? && @product.discounted_price < @product.price %>
          <p class="text-2xl font-bold text-gray-900 mr-2"><%= number_to_currency(@product.discounted_price) %></p>
          <p class="text-lg text-gray-500 line-through"><%= number_to_currency(@product.price) %></p>
          <span class="ml-2 bg-red-500 text-white text-xs font-bold py-1 px-2 rounded">
            <%= number_to_percentage(100 - (@product.discounted_price / @product.price * 100), precision: 0) %> OFF
          </span>
        <% else %>
          <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@product.price) %></p>
        <% end %>
      </div>
      
      <!-- Description -->
      <div class="prose prose-sm text-gray-700 mb-6">
        <%= simple_format @product.description %>
      </div>
      
      <!-- Stock -->
      <div class="mb-6">
        <% if @product.stock_quantity > 0 %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            In Stock (<%= @product.stock_quantity %> available)
          </span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            Out of Stock
          </span>
        <% end %>
      </div>
    </div>
    
    <!-- Actions -->
    <div class="mt-6 flex flex-col space-y-3">
      <%= form_with url: add_item_to_product_path(@product), method: :post, class: "space-y-4", data: { controller: "product-quantity" } do |f| %>
        <div class="flex items-center space-x-3">
          <label for="quantity" class="text-sm font-medium text-gray-700">Quantity</label>
          <div class="flex items-center border border-gray-300 rounded-md">
            <button type="button" class="p-2 text-gray-500 hover:text-gray-700" data-action="product-quantity#decrement">
              <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
              </svg>
            </button>
            <%= f.number_field :quantity, value: 1, min: 1, max: @product.stock_quantity, class: "w-12 text-center border-0 focus:ring-0", data: { "product-quantity-target": "input" } %>
            <button type="button" class="p-2 text-gray-500 hover:text-gray-700" data-action="product-quantity#increment">
              <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
            </button>
          </div>
        </div>
        
        <div class="flex space-x-3">
          <%= f.submit "Add to Cart", class: "flex-1 bg-indigo-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= link_to "View Details", product_path(@product), class: "flex-1 bg-gray-100 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-gray-900 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
