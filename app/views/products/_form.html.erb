<script>
  document.addEventListener('DOMContentLoaded', function() {
    const statusSelect = document.getElementById('product_status');
    const scheduleFields = document.getElementById('schedule-fields');
    const publishedCheckbox = document.getElementById('product_published');

    // Function to toggle schedule fields
    function toggleScheduleFields() {
      if (publishedCheckbox.checked) {
        scheduleFields.classList.remove('hidden');
      } else {
        scheduleFields.classList.add('hidden');
      }
    }

    // Add event listener to published checkbox
    if (publishedCheckbox) {
      publishedCheckbox.addEventListener('change', toggleScheduleFields);
    }
  });
</script>
