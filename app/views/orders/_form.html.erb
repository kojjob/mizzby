<%= form_with(model: order, class: "space-y-6") do |form| %>
  <% if order.errors.any? %>
    <div class="p-4 bg-red-50 border border-red-200 rounded-xl">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <h3 class="text-sm font-semibold text-red-800"><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside space-y-1">
            <% order.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Customer & Product Section -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :user_id, class: "block text-sm font-medium text-slate-700 mb-2" do %>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          Customer ID
        </span>
      <% end %>
      <%= form.number_field :user_id, class: "block w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all #{order.errors[:user_id].any? ? 'border-red-300 focus:border-red-500 focus:ring-red-200' : ''}", placeholder: "Enter user ID" %>
    </div>

    <div>
      <%= form.label :product_id, class: "block text-sm font-medium text-slate-700 mb-2" do %>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          Product ID
        </span>
      <% end %>
      <%= form.number_field :product_id, class: "block w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all #{order.errors[:product_id].any? ? 'border-red-300 focus:border-red-500 focus:ring-red-200' : ''}", placeholder: "Enter product ID" %>
    </div>
  </div>

  <!-- Status & Amount Section -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-slate-700 mb-2" do %>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Order Status
        </span>
      <% end %>
      <%= form.select :status, options_for_select([['Pending', 'pending'], ['Paid', 'paid'], ['Processing', 'processing'], ['Completed', 'completed'], ['Cancelled', 'cancelled'], ['Refunded', 'refunded']], order.status), {}, class: "block w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all bg-white #{order.errors[:status].any? ? 'border-red-300 focus:border-red-500 focus:ring-red-200' : ''}" %>
    </div>

    <div>
      <%= form.label :total_amount, class: "block text-sm font-medium text-slate-700 mb-2" do %>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Total Amount
        </span>
      <% end %>
      <div class="relative">
        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400">$</span>
        <%= form.number_field :total_amount, step: 0.01, class: "block w-full pl-8 pr-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all #{order.errors[:total_amount].any? ? 'border-red-300 focus:border-red-500 focus:ring-red-200' : ''}", placeholder: "0.00" %>
      </div>
    </div>
  </div>

  <!-- Payment Section -->
  <div class="border-t border-slate-200 pt-6">
    <h3 class="text-sm font-semibold text-slate-900 mb-4 flex items-center">
      <svg class="w-4 h-4 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
      </svg>
      Payment Information
    </h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :payment_processor, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.select :payment_processor, options_for_select([['Stripe', 'stripe'], ['PayPal', 'paypal'], ['Default Processor', 'default_processor'], ['Manual', 'manual']], order.payment_processor), {}, class: "block w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all bg-white" %>
      </div>

      <div>
        <%= form.label :payment_id, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.text_field :payment_id, class: "block w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all font-mono text-sm #{order.errors[:payment_id].any? ? 'border-red-300 focus:border-red-500 focus:ring-red-200' : ''}", placeholder: "Payment transaction ID" %>
      </div>

      <div>
        <%= form.label :payment_status, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.select :payment_status, options_for_select([['Pending', 'pending'], ['Processing', 'processing'], ['Paid', 'paid'], ['Failed', 'failed'], ['Refunded', 'refunded']], order.payment_status), {}, class: "block w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all bg-white" %>
      </div>
    </div>

    <div class="mt-6">
      <%= form.label :payment_details, class: "block text-sm font-medium text-slate-700 mb-2" %>
      <%= form.text_area :payment_details, rows: 3, class: "block w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all resize-none", placeholder: "Additional payment details or notes..." %>
    </div>
  </div>

  <!-- Notes Section -->
  <div class="border-t border-slate-200 pt-6">
    <h3 class="text-sm font-semibold text-slate-900 mb-4 flex items-center">
      <svg class="w-4 h-4 mr-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Order Notes
    </h3>
    <%= form.text_area :notes, rows: 4, class: "block w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all resize-none", placeholder: "Internal notes about this order..." %>
  </div>

  <!-- Submit Button -->
  <div class="border-t border-slate-200 pt-6">
    <%= form.submit class: "w-full sm:w-auto px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition-all shadow-sm hover:shadow-md cursor-pointer flex items-center justify-center" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
      <%= order.new_record? ? 'Create Order' : 'Update Order' %>
    <% end %>
  </div>
<% end %>
