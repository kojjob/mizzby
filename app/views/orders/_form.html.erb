<%= form_with(model: order, class: "contents") do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul class="list-disc ml-6">
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:user_id].none?, "border-red-400 focus:outline-red-600": order.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:product_id].none?, "border-red-400 focus:outline-red-600": order.errors[:product_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:status].none?, "border-red-400 focus:outline-red-600": order.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :total_amount %>
    <%= form.text_field :total_amount, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:total_amount].none?, "border-red-400 focus:outline-red-600": order.errors[:total_amount].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :payment_processor %>
    <%= form.text_field :payment_processor, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:payment_processor].none?, "border-red-400 focus:outline-red-600": order.errors[:payment_processor].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :payment_id %>
    <%= form.text_field :payment_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:payment_id].none?, "border-red-400 focus:outline-red-600": order.errors[:payment_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :payment_status %>
    <%= form.text_field :payment_status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:payment_status].none?, "border-red-400 focus:outline-red-600": order.errors[:payment_status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :payment_details %>
    <%= form.textarea :payment_details, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:payment_details].none?, "border-red-400 focus:outline-red-600": order.errors[:payment_details].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:notes].none?, "border-red-400 focus:outline-red-600": order.errors[:notes].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
