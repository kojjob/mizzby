<%= content_for :title, "Edit Order ##{@order.id}" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Breadcrumb Navigation -->
    <nav class="flex items-center space-x-2 text-sm text-slate-500 mb-6">
      <%= link_to root_path, class: "hover:text-blue-600 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
      <% end %>
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to "Orders", orders_path, class: "hover:text-blue-600 transition-colors" %>
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to "##{@order.id}", @order, class: "hover:text-blue-600 transition-colors" %>
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-700 font-medium">Edit</span>
    </nav>

    <!-- Page Header -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden mb-6">
      <div class="px-6 py-5">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
            </div>
            <div>
              <h1 class="text-2xl font-bold text-slate-900">Edit Order</h1>
              <p class="text-slate-500 mt-0.5">Order #<%= @order.id %> Â· <%= @order.created_at.strftime("%b %d, %Y") %></p>
            </div>
          </div>
          
          <!-- Current Status -->
          <% status_config = case @order.status
            when 'completed' then { bg: 'bg-emerald-50', text: 'text-emerald-700', border: 'border-emerald-200' }
            when 'processing' then { bg: 'bg-blue-50', text: 'text-blue-700', border: 'border-blue-200' }
            when 'paid' then { bg: 'bg-indigo-50', text: 'text-indigo-700', border: 'border-indigo-200' }
            when 'pending' then { bg: 'bg-amber-50', text: 'text-amber-700', border: 'border-amber-200' }
            when 'cancelled' then { bg: 'bg-red-50', text: 'text-red-700', border: 'border-red-200' }
            else { bg: 'bg-slate-50', text: 'text-slate-600', border: 'border-slate-200' }
          end %>
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium border <%= status_config[:bg] %> <%= status_config[:text] %> <%= status_config[:border] %>">
            Current: <%= @order.status&.titleize || 'Unknown' %>
          </span>
        </div>
      </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
      <div class="px-6 py-4 border-b border-slate-100">
        <h2 class="text-lg font-semibold text-slate-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Order Details
        </h2>
      </div>
      <div class="p-6">
        <%= render "form", order: @order %>
      </div>
    </div>

    <!-- Action Links -->
    <div class="mt-6 flex flex-wrap items-center gap-4">
      <%= link_to @order, class: "inline-flex items-center px-4 py-2.5 bg-white border border-slate-200 text-slate-700 font-medium rounded-xl hover:bg-slate-50 transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        View Order
      <% end %>
      <%= link_to orders_path, class: "inline-flex items-center px-4 py-2.5 text-slate-600 hover:text-slate-900 font-medium transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"/>
        </svg>
        Back to Orders
      <% end %>
    </div>
  </div>
</div>
