<%= content_for :title, "Orders" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Flash Notice -->
    <% if notice.present? %>
      <div class="mb-6 p-4 bg-emerald-50 border border-emerald-200 rounded-xl flex items-center gap-3">
        <svg class="w-5 h-5 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-emerald-700 font-medium"><%= notice %></p>
      </div>
    <% end %>

    <!-- Page Header -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden mb-6">
      <div class="px-6 py-5">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
              </svg>
            </div>
            <div>
              <h1 class="text-2xl font-bold text-slate-900">Orders</h1>
              <p class="text-slate-500 mt-0.5"><%= @orders.count %> total orders</p>
            </div>
          </div>
          <%= link_to new_order_path, class: "inline-flex items-center px-5 py-2.5 bg-blue-600 text-white font-medium rounded-xl hover:bg-blue-700 transition-all shadow-sm hover:shadow-md" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            New Order
          <% end %>
        </div>
      </div>
      
      <!-- Stats Bar -->
      <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-blue-50/30 border-t border-slate-100">
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
          <% pending_count = @orders.respond_to?(:pending) ? @orders.pending.count : @orders.select { |o| o.status == 'pending' }.count %>
          <% paid_count = @orders.respond_to?(:paid) ? @orders.paid.count : @orders.select { |o| o.status == 'paid' }.count %>
          <% processing_count = @orders.respond_to?(:processing) ? @orders.processing.count : @orders.select { |o| o.status == 'processing' }.count %>
          <% completed_count = @orders.respond_to?(:completed) ? @orders.completed.count : @orders.select { |o| o.status == 'completed' }.count %>
          
          <div class="text-center">
            <p class="text-2xl font-bold text-amber-600"><%= pending_count %></p>
            <p class="text-xs text-slate-500 mt-0.5">Pending</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-bold text-indigo-600"><%= paid_count %></p>
            <p class="text-xs text-slate-500 mt-0.5">Paid</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-bold text-blue-600"><%= processing_count %></p>
            <p class="text-xs text-slate-500 mt-0.5">Processing</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-bold text-emerald-600"><%= completed_count %></p>
            <p class="text-xs text-slate-500 mt-0.5">Completed</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Orders List -->
    <% if @orders.any? %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
        <!-- Table Header (Desktop) -->
        <div class="hidden lg:grid lg:grid-cols-12 gap-4 px-6 py-4 bg-slate-50 border-b border-slate-200 text-sm font-semibold text-slate-600">
          <div class="col-span-1">Order</div>
          <div class="col-span-3">Product</div>
          <div class="col-span-2">Customer</div>
          <div class="col-span-2">Status</div>
          <div class="col-span-2">Amount</div>
          <div class="col-span-2 text-right">Actions</div>
        </div>

        <div class="divide-y divide-slate-100">
          <% @orders.each do |order| %>
            <div class="p-6 hover:bg-slate-50/50 transition-colors">
              <!-- Desktop Layout -->
              <div class="hidden lg:grid lg:grid-cols-12 gap-4 items-center">
                <!-- Order ID -->
                <div class="col-span-1">
                  <span class="text-sm font-mono text-slate-600">#<%= order.id %></span>
                </div>
                
                <!-- Product -->
                <div class="col-span-3">
                  <% if order.product.present? %>
                    <div class="flex items-center gap-3">
                      <% if order.product.cover_image.attached? %>
                        <%= image_tag order.product.cover_image, class: "w-10 h-10 rounded-lg object-cover border border-slate-200" %>
                      <% else %>
                        <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center">
                          <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                          </svg>
                        </div>
                      <% end %>
                      <div class="min-w-0">
                        <p class="font-medium text-slate-900 truncate"><%= order.product.name %></p>
                        <% if order.product.is_digital? %>
                          <span class="text-xs text-purple-600">Digital</span>
                        <% end %>
                      </div>
                    </div>
                  <% else %>
                    <span class="text-slate-400">No product</span>
                  <% end %>
                </div>
                
                <!-- Customer -->
                <div class="col-span-2">
                  <% if order.user.present? %>
                    <div class="flex items-center gap-2">
                      <% if order.user.respond_to?(:avatar) && order.user.avatar.attached? %>
                        <%= image_tag order.user.avatar, class: "w-8 h-8 rounded-full object-cover" %>
                      <% else %>
                        <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white text-xs font-semibold">
                          <%= order.user.email.first.upcase %>
                        </div>
                      <% end %>
                      <span class="text-sm text-slate-600 truncate"><%= order.user.email.split('@').first %></span>
                    </div>
                  <% else %>
                    <span class="text-slate-400">Unknown</span>
                  <% end %>
                </div>
                
                <!-- Status -->
                <div class="col-span-2">
                  <% status_config = case order.status
                    when 'completed' then { bg: 'bg-emerald-50', text: 'text-emerald-700', border: 'border-emerald-200' }
                    when 'processing' then { bg: 'bg-blue-50', text: 'text-blue-700', border: 'border-blue-200' }
                    when 'paid' then { bg: 'bg-indigo-50', text: 'text-indigo-700', border: 'border-indigo-200' }
                    when 'pending' then { bg: 'bg-amber-50', text: 'text-amber-700', border: 'border-amber-200' }
                    when 'cancelled' then { bg: 'bg-red-50', text: 'text-red-700', border: 'border-red-200' }
                    when 'refunded' then { bg: 'bg-slate-50', text: 'text-slate-600', border: 'border-slate-200' }
                    else { bg: 'bg-slate-50', text: 'text-slate-600', border: 'border-slate-200' }
                  end %>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium border <%= status_config[:bg] %> <%= status_config[:text] %> <%= status_config[:border] %>">
                    <%= order.status&.titleize || 'Unknown' %>
                  </span>
                </div>
                
                <!-- Amount -->
                <div class="col-span-2">
                  <span class="text-lg font-semibold text-slate-900"><%= number_to_currency(order.total_amount) %></span>
                  <p class="text-xs text-slate-500"><%= order.created_at.strftime("%b %d, %Y") %></p>
                </div>
                
                <!-- Actions -->
                <div class="col-span-2 flex items-center justify-end gap-2">
                  <%= link_to order_path(order), class: "p-2 text-slate-500 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors", title: "View" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  <% end %>
                  <%= link_to edit_order_path(order), class: "p-2 text-slate-500 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors", title: "Edit" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>
                  <%= button_to order_path(order), method: :delete, data: { turbo_confirm: "Delete this order?" }, class: "p-2 text-slate-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors", title: "Delete" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </div>
              </div>

              <!-- Mobile Layout -->
              <div class="lg:hidden">
                <div class="flex items-start justify-between gap-4 mb-4">
                  <div class="flex items-center gap-3 flex-1 min-w-0">
                    <% if order.product&.cover_image&.attached? %>
                      <%= image_tag order.product.cover_image, class: "w-14 h-14 rounded-xl object-cover border border-slate-200" %>
                    <% else %>
                      <div class="w-14 h-14 rounded-xl bg-slate-100 flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                        </svg>
                      </div>
                    <% end %>
                    <div class="min-w-0">
                      <p class="font-semibold text-slate-900 truncate"><%= order.product&.name || 'No product' %></p>
                      <p class="text-sm text-slate-500">Order #<%= order.id %></p>
                    </div>
                  </div>
                  <% status_config = case order.status
                    when 'completed' then { bg: 'bg-emerald-50', text: 'text-emerald-700', border: 'border-emerald-200' }
                    when 'processing' then { bg: 'bg-blue-50', text: 'text-blue-700', border: 'border-blue-200' }
                    when 'paid' then { bg: 'bg-indigo-50', text: 'text-indigo-700', border: 'border-indigo-200' }
                    when 'pending' then { bg: 'bg-amber-50', text: 'text-amber-700', border: 'border-amber-200' }
                    when 'cancelled' then { bg: 'bg-red-50', text: 'text-red-700', border: 'border-red-200' }
                    else { bg: 'bg-slate-50', text: 'text-slate-600', border: 'border-slate-200' }
                  end %>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium border flex-shrink-0 <%= status_config[:bg] %> <%= status_config[:text] %> <%= status_config[:border] %>">
                    <%= order.status&.titleize || 'Unknown' %>
                  </span>
                </div>
                
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-lg font-bold text-slate-900"><%= number_to_currency(order.total_amount) %></p>
                    <p class="text-xs text-slate-500"><%= order.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>
                  </div>
                  <div class="flex items-center gap-1">
                    <%= link_to order_path(order), class: "p-2.5 text-slate-500 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                    <% end %>
                    <%= link_to edit_order_path(order), class: "p-2.5 text-slate-500 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>
                    <%= button_to order_path(order), method: :delete, data: { turbo_confirm: "Delete this order?" }, class: "p-2.5 text-slate-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
        <div class="px-6 py-16 text-center">
          <div class="w-20 h-20 mx-auto bg-slate-100 rounded-full flex items-center justify-center mb-5">
            <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-2">No orders yet</h3>
          <p class="text-slate-500 mb-6 max-w-sm mx-auto">Orders will appear here once customers start purchasing products from your store.</p>
          <%= link_to new_order_path, class: "inline-flex items-center px-5 py-2.5 bg-blue-600 text-white font-medium rounded-xl hover:bg-blue-700 transition-all" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Create First Order
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
