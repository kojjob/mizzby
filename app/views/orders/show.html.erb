<%= content_for :title, "Order ##{@order.payment_id}" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Flash Notice -->
    <% if notice.present? %>
      <div class="mb-6 p-4 bg-emerald-50 border border-emerald-200 rounded-xl flex items-center gap-3">
        <svg class="w-5 h-5 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-emerald-700 font-medium"><%= notice %></p>
      </div>
    <% end %>

    <!-- Breadcrumb Navigation -->
    <nav class="flex items-center space-x-2 text-sm text-slate-500 mb-6">
      <%= link_to root_path, class: "hover:text-blue-600 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
      <% end %>
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to "Orders", orders_path, class: "hover:text-blue-600 transition-colors" %>
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-700 font-medium">Order #<%= @order.payment_id.to_s.truncate(12) %></span>
    </nav>

    <!-- Order Header Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden mb-6">
      <div class="px-6 py-5 border-b border-slate-100">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
          <div class="flex items-start gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
              </svg>
            </div>
            <div>
              <h1 class="text-2xl font-bold text-slate-900">Order Details</h1>
              <p class="text-slate-500 mt-1 font-mono text-sm">ID: <%= @order.payment_id %></p>
            </div>
          </div>
          
          <!-- Status Badge -->
          <% status_config = case @order.status
            when 'completed' then { bg: 'bg-emerald-50', text: 'text-emerald-700', border: 'border-emerald-200', icon: 'M5 13l4 4L19 7' }
            when 'processing' then { bg: 'bg-blue-50', text: 'text-blue-700', border: 'border-blue-200', icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15' }
            when 'paid' then { bg: 'bg-indigo-50', text: 'text-indigo-700', border: 'border-indigo-200', icon: 'M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z' }
            when 'pending' then { bg: 'bg-amber-50', text: 'text-amber-700', border: 'border-amber-200', icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' }
            when 'cancelled' then { bg: 'bg-red-50', text: 'text-red-700', border: 'border-red-200', icon: 'M6 18L18 6M6 6l12 12' }
            when 'refunded' then { bg: 'bg-slate-50', text: 'text-slate-700', border: 'border-slate-300', icon: 'M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6' }
            else { bg: 'bg-slate-50', text: 'text-slate-700', border: 'border-slate-300', icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' }
          end %>
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold border <%= status_config[:bg] %> <%= status_config[:text] %> <%= status_config[:border] %>">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= status_config[:icon] %>"/>
            </svg>
            <%= @order.status&.titleize || 'Unknown' %>
          </span>
        </div>
      </div>
      
      <!-- Order Progress Timeline -->
      <div class="px-6 py-5 bg-gradient-to-r from-slate-50 to-blue-50/30">
        <div class="flex items-center justify-between max-w-lg mx-auto">
          <% steps = [
            { name: 'Placed', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2' },
            { name: 'Paid', icon: 'M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z' },
            { name: 'Processing', icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15' },
            { name: 'Completed', icon: 'M5 13l4 4L19 7' }
          ] %>
          <% current_step = case @order.status
            when 'pending' then 0
            when 'paid' then 1
            when 'processing' then 2
            when 'completed' then 3
            else 0
          end %>
          <% steps.each_with_index do |step, index| %>
            <div class="flex flex-col items-center relative z-10">
              <div class="w-10 h-10 rounded-full flex items-center justify-center transition-all duration-300
                <%= index <= current_step ? 'bg-blue-600 text-white shadow-lg shadow-blue-200' : 'bg-white text-slate-400 border-2 border-slate-200' %>">
                <% if index < current_step %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                <% else %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= step[:icon] %>"/>
                  </svg>
                <% end %>
              </div>
              <span class="text-xs mt-2 font-medium <%= index <= current_step ? 'text-blue-600' : 'text-slate-400' %>"><%= step[:name] %></span>
            </div>
            <% unless index == steps.length - 1 %>
              <div class="flex-1 h-1 mx-1 rounded-full transition-all duration-300 <%= index < current_step ? 'bg-blue-600' : 'bg-slate-200' %>"></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content Column -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Product Information -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100 flex items-center justify-between">
            <h2 class="text-lg font-semibold text-slate-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
              Product
            </h2>
          </div>
          
          <div class="p-6">
            <% if @order.product.present? %>
              <div class="flex gap-5">
                <div class="flex-shrink-0">
                  <% if @order.product.cover_image.attached? %>
                    <%= image_tag @order.product.cover_image, class: "w-28 h-28 rounded-xl object-cover border border-slate-200 shadow-sm" %>
                  <% else %>
                    <div class="w-28 h-28 rounded-xl bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center">
                      <svg class="w-12 h-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="text-xl font-semibold text-slate-900 mb-2">
                    <%= link_to @order.product.name, product_path(@order.product), class: "hover:text-blue-600 transition-colors" %>
                  </h3>
                  <% if @order.product.category.present? %>
                    <p class="text-sm text-slate-500 mb-3">
                      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-slate-100 text-slate-600">
                        <%= @order.product.category.name %>
                      </span>
                      <% if @order.product.is_digital? %>
                        <span class="inline-flex items-center ml-2 px-2.5 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-700">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                          </svg>
                          Digital Product
                        </span>
                      <% end %>
                    </p>
                  <% end %>
                  <% if @order.product.description.present? %>
                    <p class="text-sm text-slate-600 line-clamp-2"><%= truncate(@order.product.description, length: 150) %></p>
                  <% end %>
                </div>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="w-12 h-12 mx-auto text-slate-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
                <p class="text-slate-500">Product information unavailable</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Order Items (if any) -->
        <% if @order.respond_to?(:order_items) && @order.order_items.any? %>
          <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100">
              <h2 class="text-lg font-semibold text-slate-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                Order Items
                <span class="ml-2 px-2 py-0.5 text-xs font-medium bg-indigo-100 text-indigo-700 rounded-full"><%= @order.order_items.count %></span>
              </h2>
            </div>
            <div class="divide-y divide-slate-100">
              <% @order.order_items.each do |item| %>
                <div class="p-5 hover:bg-slate-50/50 transition-colors">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0">
                      <% if item.product_image_url.present? %>
                        <%= image_tag item.product_image_url, class: "w-16 h-16 rounded-lg object-cover border border-slate-200" %>
                      <% elsif item.product&.cover_image&.attached? %>
                        <%= image_tag item.product.cover_image, class: "w-16 h-16 rounded-lg object-cover border border-slate-200" %>
                      <% else %>
                        <div class="w-16 h-16 rounded-lg bg-slate-100 flex items-center justify-center">
                          <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h4 class="font-semibold text-slate-900"><%= item.product_name %></h4>
                      <p class="text-sm text-slate-500 mt-0.5">SKU: <%= item.product_sku %></p>
                      <div class="flex items-center justify-between mt-2">
                        <span class="text-sm text-slate-500">Qty: <%= item.quantity %></span>
                        <span class="font-semibold text-slate-900"><%= number_to_currency(item.total_price) %></span>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Digital Downloads -->
        <% if @order.product&.is_digital? && @order.respond_to?(:download_links) && @order.download_links.any? %>
          <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100">
              <h2 class="text-lg font-semibold text-slate-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                </svg>
                Digital Downloads
              </h2>
            </div>
            <div class="p-6 space-y-4">
              <% @order.download_links.each do |download_link| %>
                <div class="flex items-center justify-between p-4 bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl border border-purple-100">
                  <div>
                    <p class="font-medium text-purple-900"><%= @order.product.name %></p>
                    <p class="text-sm text-purple-600 mt-1">
                      <% if download_link.expires_at.present? %>
                        <span class="inline-flex items-center">
                          <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          Expires: <%= download_link.expires_at.strftime("%b %d, %Y") %>
                        </span>
                      <% end %>
                      <% if download_link.download_limit.present? %>
                        <span class="ml-3 inline-flex items-center">
                          <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                          </svg>
                          <%= download_link.download_limit - download_link.download_count %> downloads left
                        </span>
                      <% end %>
                    </p>
                  </div>
                  <% if download_link.active? && (download_link.expires_at.nil? || download_link.expires_at > Time.current) %>
                    <%= link_to download_file_path(download_link.token), class: "inline-flex items-center px-4 py-2.5 bg-purple-600 text-white font-medium rounded-xl hover:bg-purple-700 transition-all shadow-sm hover:shadow-md" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                      </svg>
                      Download
                    <% end %>
                  <% else %>
                    <span class="inline-flex items-center px-4 py-2.5 bg-slate-100 text-slate-500 font-medium rounded-xl">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      Expired
                    </span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Notes Section -->
        <% if @order.notes.present? %>
          <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100">
              <h2 class="text-lg font-semibold text-slate-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Order Notes
              </h2>
            </div>
            <div class="p-6">
              <div class="p-4 bg-amber-50 rounded-xl border border-amber-100">
                <p class="text-amber-800"><%= @order.notes %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        
        <!-- Order Summary -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
              Summary
            </h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="flex justify-between text-sm">
                <span class="text-slate-600">Subtotal</span>
                <span class="text-slate-900"><%= number_to_currency(@order.total_amount.to_f - (@order.shipping_cost || 0).to_f + (@order.discount || 0).to_f) %></span>
              </div>
              <% if @order.respond_to?(:shipping_cost) && @order.shipping_cost.present? && @order.shipping_cost > 0 %>
                <div class="flex justify-between text-sm">
                  <span class="text-slate-600">Shipping</span>
                  <span class="text-slate-900"><%= number_to_currency(@order.shipping_cost) %></span>
                </div>
              <% end %>
              <% if @order.respond_to?(:discount) && @order.discount.present? && @order.discount > 0 %>
                <div class="flex justify-between text-sm">
                  <span class="text-slate-600">Discount</span>
                  <span class="text-emerald-600">-<%= number_to_currency(@order.discount) %></span>
                </div>
              <% end %>
              <div class="border-t border-slate-200 pt-4">
                <div class="flex justify-between items-center">
                  <span class="text-lg font-semibold text-slate-900">Total</span>
                  <span class="text-2xl font-bold text-slate-900"><%= number_to_currency(@order.total_amount) %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Information -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
              Payment
            </h2>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Method</span>
              <span class="text-slate-900 capitalize"><%= @order.payment_method&.humanize || 'Credit Card' %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Processor</span>
              <span class="text-slate-900 capitalize"><%= @order.payment_processor&.humanize || 'N/A' %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Status</span>
              <% payment_classes = case @order.payment_status
                when 'paid' then 'text-emerald-600 bg-emerald-50'
                when 'pending' then 'text-amber-600 bg-amber-50'
                when 'failed' then 'text-red-600 bg-red-50'
                when 'refunded' then 'text-slate-600 bg-slate-50'
                else 'text-slate-600 bg-slate-50'
              end %>
              <span class="px-2 py-0.5 rounded-full text-xs font-medium <%= payment_classes %>"><%= @order.payment_status&.humanize || 'N/A' %></span>
            </div>
            <% if @order.transaction_id.present? %>
              <div class="pt-3 border-t border-slate-100">
                <span class="text-xs text-slate-500 block mb-1">Transaction ID</span>
                <span class="text-sm text-slate-900 font-mono bg-slate-50 px-2 py-1 rounded block break-all"><%= @order.transaction_id %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Customer Info -->
        <% if @order.user.present? %>
          <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100">
              <h2 class="text-lg font-semibold text-slate-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Customer
              </h2>
            </div>
            <div class="p-6">
              <div class="flex items-center gap-3">
                <% if @order.user.respond_to?(:avatar) && @order.user.avatar.attached? %>
                  <%= image_tag @order.user.avatar, class: "w-12 h-12 rounded-full object-cover border-2 border-white shadow-sm" %>
                <% else %>
                  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white font-semibold text-lg">
                    <%= @order.user.email.first.upcase %>
                  </div>
                <% end %>
                <div>
                  <p class="font-semibold text-slate-900"><%= @order.user.respond_to?(:full_name) ? @order.user.full_name : @order.user.email.split('@').first.titleize %></p>
                  <p class="text-sm text-slate-500"><%= @order.user.email %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Order Info -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Details
            </h2>
          </div>
          <div class="p-6 space-y-3">
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Order ID</span>
              <span class="text-slate-900 font-mono text-xs"><%= @order.id %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Payment ID</span>
              <span class="text-slate-900 font-mono text-xs truncate max-w-[140px]" title="<%= @order.payment_id %>"><%= @order.payment_id %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Created</span>
              <span class="text-slate-900"><%= @order.created_at.strftime("%b %d, %Y") %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Time</span>
              <span class="text-slate-900"><%= @order.created_at.strftime("%I:%M %p") %></span>
            </div>
            <% if @order.updated_at != @order.created_at %>
              <div class="flex justify-between text-sm">
                <span class="text-slate-600">Updated</span>
                <span class="text-slate-900"><%= @order.updated_at.strftime("%b %d, %Y %I:%M %p") %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Actions -->
        <div class="space-y-3">
          <%= link_to edit_order_path(@order), class: "flex items-center justify-center w-full px-4 py-3 bg-blue-600 text-white font-medium rounded-xl hover:bg-blue-700 transition-all shadow-sm hover:shadow-md" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit Order
          <% end %>
          
          <%= link_to orders_path, class: "flex items-center justify-center w-full px-4 py-3 bg-white border border-slate-200 text-slate-700 font-medium rounded-xl hover:bg-slate-50 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"/>
            </svg>
            Back to Orders
          <% end %>
          
          <%= button_to @order, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this order? This action cannot be undone." }, class: "flex items-center justify-center w-full px-4 py-3 bg-white border border-red-200 text-red-600 font-medium rounded-xl hover:bg-red-50 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Delete Order
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
