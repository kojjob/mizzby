<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-indigo-600 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
          </svg>
          <span class="text-xl font-bold text-gray-900">Digital Store</span>
        <% end %>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-6">
        <%= link_to "Home", root_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Products", products_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Categories", categories_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Stores", stores_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "About", about_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Contact", contact_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
      </nav>

      <!-- User & Cart Actions -->
      <div class="flex items-center space-x-4">
        <% if current_user %>
          <div class="relative group">
            <button class="flex items-center text-gray-700 hover:text-indigo-600 transition-colors focus:outline-none">
              <span class="mr-1"><%= current_user.first_name %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
            <div class="absolute right-0 mt-2 py-2 w-48 bg-white rounded-md shadow-lg hidden group-hover:block z-50">
              <%= link_to "Account", edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600" %>
              <%= link_to "Orders", orders_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600" rescue nil %>
              <% if current_user.respond_to?(:seller) && current_user.seller.present? %>
                <%= link_to "Seller Dashboard", dashboard_sellers_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600" %>
              <% end %>
              <% if current_user.respond_to?(:admin) && current_user.admin? %>
                <%= link_to "Admin Dashboard", admin_root_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600" %>
              <% end %>
              <div class="border-t border-gray-100 my-1"></div>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600" %>
            </div>
          </div>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
          <%= link_to "Register", new_user_registration_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors" %>
        <% end %>

        <%= link_to current_cart_path, class: "p-1 relative" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700 hover:text-indigo-600 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <% if current_user && current_user.respond_to?(:cart) && current_user.cart&.cart_items&.count.to_i > 0 %>
            <span class="absolute -top-1 -right-1 bg-indigo-600 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center">
              <%= current_user.cart.cart_items.count %>
            </span>
          <% end %>
        <% end %>

        <!-- Mobile menu button -->
        <button type="button" class="md:hidden text-gray-700 hover:text-indigo-600 transition-colors" data-controller="mobile-menu" data-action="click->mobile-menu#toggle">
          <svg class="h-6 w-6" data-mobile-menu-target="openIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="h-6 w-6 hidden" data-mobile-menu-target="closeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div class="md:hidden hidden mt-3 border-t border-gray-200 pt-3" data-mobile-menu-target="menu">
      <nav class="space-y-1">
        <%= link_to "Home", root_path, class: "block py-2 text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Products", products_path, class: "block py-2 text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Categories", categories_path, class: "block py-2 text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Stores", stores_path, class: "block py-2 text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "About", about_path, class: "block py-2 text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Contact", contact_path, class: "block py-2 text-gray-700 hover:text-indigo-600 transition-colors" %>
      </nav>
    </div>
  </div>
</header>
