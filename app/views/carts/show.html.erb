<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Your Shopping Cart</h1>
  
  <% if @cart_items.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subtotal</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @cart_items.each do |item| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <% if item.product.product_images.any? %>
                    <%= image_tag item.product.product_images.first, class: "h-12 w-12 rounded-md object-cover mr-4" %>
                  <% else %>
                    <div class="h-12 w-12 rounded-md bg-gray-200 mr-4"></div>
                  <% end %>
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to item.product.name, product_path(item.product) %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= item.product.is_digital ? "Digital Product" : "Physical Product" %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= number_to_currency(item.price) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= form_for item, html: { class: "flex items-center" } do |f| %>
                  <%= f.number_field :quantity, min: 1, max: (item.product.is_digital ? 99 : item.product.stock_quantity), 
                                    class: "w-16 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                  <%= f.submit "Update", class: "ml-2 px-3 py-1 bg-gray-100 text-gray-700 text-xs rounded-md hover:bg-gray-200" %>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= number_to_currency(item.subtotal) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= button_to "Remove", cart_item_path(item), method: :delete,
                    data: { confirm: "Are you sure you want to remove this item?" },
                    class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="mt-8 bg-white rounded-lg shadow overflow-hidden p-6">
      <div class="flex justify-between mb-2">
        <span>Subtotal:</span>
        <span><%= number_to_currency(@cart.total_price) %></span>
      </div>
      <% if @cart.has_physical_products? %>
        <div class="flex justify-between mb-2">
          <span>Shipping:</span>
          <span><%= number_to_currency(@cart.shipping_cost) %></span>
        </div>
      <% end %>
      <div class="flex justify-between font-bold text-lg border-t pt-2 mt-2">
        <span>Total:</span>
        <span><%= number_to_currency(@cart.grand_total) %></span>
      </div>
      
      <div class="mt-6 flex flex-wrap gap-4">
        <%= link_to "Continue Shopping", products_path, class: "px-6 py-3 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300" %>
        <%= link_to "Empty Cart", empty_cart_path, method: :delete, 
              data: { confirm: "Are you sure you want to empty your cart?" }, 
              class: "px-6 py-3 bg-red-100 text-red-800 rounded-md hover:bg-red-200" %>
        <%= link_to "Proceed to Checkout", checkout_path, class: "px-6 py-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Your cart is empty</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by adding some products to your cart.</p>
      <div class="mt-6">
        <%= link_to "Browse Products", products_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>
</div>