<% content_for :title, "Your Wishlist - Digital Store" %>

<div class="bg-gradient-to-r from-indigo-50 to-purple-50">
  <div class="container mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl md:text-3xl font-bold text-indigo-800">Your Wishlist</h1>
      <% if @wishlist_items.any? %>
        <%= button_to "Clear All", clear_wishlist_items_path, method: :delete, 
            class: "py-2 px-4 text-sm bg-white border border-red-300 text-red-600 rounded-full hover:bg-red-50 transition-colors",
            data: { confirm: "Are you sure you want to remove all items from your wishlist?" } %>
      <% end %>
    </div>

    <% if @wishlist_items.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @wishlist_items.each do |item| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:shadow-lg hover:-translate-y-1">
            <div class="relative">
              <%= link_to product_path(item.product) do %>
                <% if item.product.product_images.first&.image&.attached? %>
                  <%= image_tag url_for(item.product.product_images.first.image),
                      class: "w-full h-48 object-cover", alt: item.product.name %>
                <% else %>
                  <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                <% end %>
              <% end %>
              
              <%= button_to wishlist_item_path(item), method: :delete, class: "absolute top-2 right-2 p-2 bg-white/80 backdrop-blur-sm rounded-full hover:bg-red-50 transition-colors" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
              
              <% if item.product.on_sale? %>
                <div class="absolute top-2 left-2 bg-yellow-400 text-indigo-900 text-xs font-bold px-2 py-1 rounded-full">
                  SALE
                </div>
              <% end %>
            </div>
            
            <div class="p-4">
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-semibold text-gray-800 hover:text-indigo-600 transition-colors">
                  <%= link_to item.product.name, product_path(item.product) %>
                </h3>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                  </svg>
                  <span class="text-sm text-gray-600 ml-1"><%= item.product.average_rating || 'N/A' %></span>
                </div>
              </div>
              
              <p class="text-sm text-gray-500 mb-3 line-clamp-2"><%= item.product.description %></p>
              
              <div class="flex justify-between items-center">
                <div>
                  <% if item.product.discount_percentage && item.product.discount_percentage > 0 %>
                    <span class="text-gray-400 line-through text-sm">$<%= sprintf('%.2f', item.product.original_price) %></span>
                    <span class="text-indigo-600 font-bold ml-1">$<%= sprintf('%.2f', item.product.price) %></span>
                  <% else %>
                    <span class="text-indigo-600 font-bold">$<%= sprintf('%.2f', item.product.price) %></span>
                  <% end %>
                </div>
                
                <%= button_to add_to_cart_path(product_id: item.product.id), method: :post, class: "py-1.5 px-3 bg-indigo-600 hover:bg-indigo-700 text-white text-sm rounded-full transition-colors" do %>
                  Add to Cart
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <div class="w-24 h-24 mx-auto mb-4 bg-indigo-100 rounded-full flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Your wishlist is empty</h2>
        <p class="text-gray-600 mb-6">Browse our products and add items to your wishlist</p>
        <%= link_to "Explore Products", products_path, class: "py-2 px-6 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-full transition-colors inline-block" %>
      </div>
    <% end %>
  </div>
</div>
