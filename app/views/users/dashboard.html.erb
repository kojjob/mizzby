<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Your Dashboard</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Account Summary -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
          <h2 class="text-lg font-bold text-gray-900 mb-4">Account Summary</h2>
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 text-lg font-bold mr-3">
              <%= current_user.first_name.first.upcase %><%= current_user.last_name.first.upcase if current_user.last_name.present? %>
            </div>
            <div>
              <p class="font-medium text-gray-900"><%= current_user.first_name %> <%= current_user.last_name %></p>
              <p class="text-sm text-gray-600"><%= current_user.email %></p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to "View Profile", profile_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
          </div>
        </div>
      </div>
      
      <!-- Recent Orders -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
          <h2 class="text-lg font-bold text-gray-900 mb-4">Recent Orders</h2>
          <% if @recent_orders.present? %>
            <div class="space-y-3">
              <% @recent_orders.each do |order| %>
                <div class="flex justify-between items-center">
                  <div>
                    <p class="font-medium text-gray-900">Order #<%= order.id %></p>
                    <p class="text-sm text-gray-600"><%= order.created_at.strftime("%b %d, %Y") %></p>
                  </div>
                  <p class="font-medium text-gray-900"><%= number_to_currency(order.total) %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-600">You haven't placed any orders yet.</p>
          <% end %>
          <div class="mt-4">
            <%= link_to "View All Orders", orders_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
          </div>
        </div>
      </div>
      
      <!-- Wishlist -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
          <h2 class="text-lg font-bold text-gray-900 mb-4">Your Wishlist</h2>
          <% if @wishlist_items.present? %>
            <div class="space-y-3">
              <% @wishlist_items.each do |item| %>
                <div class="flex items-center">
                  <div class="w-10 h-10 bg-gray-100 rounded overflow-hidden mr-3">
                    <% if item.product.product_images.any? && item.product.product_images.first.image.attached? %>
                      <%= image_tag item.product.product_images.first.image, class: "w-full h-full object-cover" %>
                    <% end %>
                  </div>
                  <div class="flex-1">
                    <p class="font-medium text-gray-900 truncate"><%= item.product.name %></p>
                    <p class="text-sm text-gray-600"><%= number_to_currency(item.product.price) %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-600">Your wishlist is empty.</p>
          <% end %>
          <div class="mt-4">
            <%= link_to "View Wishlist", wishlist_items_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Quick Links -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Quick Links</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <%= link_to profile_path, class: "p-4 border border-gray-200 rounded-lg hover:border-indigo-500 hover:bg-indigo-50 transition-colors" do %>
            <div class="flex flex-col items-center text-center">
              <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <span class="font-medium text-gray-900">Profile</span>
            </div>
          <% end %>
          
          <%= link_to account_path, class: "p-4 border border-gray-200 rounded-lg hover:border-indigo-500 hover:bg-indigo-50 transition-colors" do %>
            <div class="flex flex-col items-center text-center">
              <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="font-medium text-gray-900">Settings</span>
            </div>
          <% end %>
          
          <%= link_to orders_path, class: "p-4 border border-gray-200 rounded-lg hover:border-indigo-500 hover:bg-indigo-50 transition-colors" do %>
            <div class="flex flex-col items-center text-center">
              <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
              </div>
              <span class="font-medium text-gray-900">Orders</span>
            </div>
          <% end %>
          
          <%= link_to wishlist_items_path, class: "p-4 border border-gray-200 rounded-lg hover:border-indigo-500 hover:bg-indigo-50 transition-colors" do %>
            <div class="flex flex-col items-center text-center">
              <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </div>
              <span class="font-medium text-gray-900">Wishlist</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
