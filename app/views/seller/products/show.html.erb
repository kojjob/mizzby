<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Breadcrumb -->
  <nav class="flex items-center text-sm text-gray-500 mb-6">
    <%= link_to "Dashboard", seller_root_path, class: "hover:text-indigo-600" %>
    <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /></svg>
    <%= link_to "Products", seller_products_path, class: "hover:text-indigo-600" %>
    <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /></svg>
    <span class="text-gray-900 font-medium truncate"><%= @product.name %></span>
  </nav>

  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
    <!-- Product Header -->
    <div class="relative">
      <% if @product.images.attached? %>
        <div class="aspect-video bg-gray-100">
          <%= image_tag @product.images.first, class: "w-full h-full object-cover" %>
        </div>
      <% else %>
        <div class="aspect-video bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
          <svg class="w-24 h-24 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      <% end %>
      
      <!-- Status Badges -->
      <div class="absolute top-4 right-4 flex items-center space-x-2">
        <% if @product.published? %>
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
            Published
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
            <span class="w-2 h-2 bg-gray-400 rounded-full mr-2"></span>
            Draft
          </span>
        <% end %>
        <% if @product.featured? %>
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-amber-100 text-amber-800">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Featured
          </span>
        <% end %>
      </div>
    </div>

    <!-- Product Info -->
    <div class="p-6 space-y-6">
      <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @product.name %></h1>
          <% if @product.category.present? %>
            <p class="text-sm text-gray-500 mt-1">
              <%= link_to @product.category.name, category_path(@product.category), class: "hover:text-indigo-600" %>
            </p>
          <% end %>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to edit_seller_product_path(@product), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-xl text-gray-700 hover:bg-gray-50 transition font-medium" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
          <%= link_to seller_product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }, class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-xl text-red-600 hover:bg-red-50 transition font-medium" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete
          <% end %>
        </div>
      </div>

      <!-- Pricing -->
      <div class="flex items-baseline space-x-3">
        <span class="text-3xl font-bold text-indigo-600"><%= number_to_currency(@product.price) %></span>
        <% if @product.original_price.present? && @product.original_price > @product.price %>
          <span class="text-lg text-gray-400 line-through"><%= number_to_currency(@product.original_price) %></span>
          <span class="text-sm font-medium text-green-600 bg-green-100 px-2 py-1 rounded-full">
            <%= number_to_percentage((((@product.original_price - @product.price) / @product.original_price) * 100), precision: 0) %> OFF
          </span>
        <% end %>
      </div>

      <!-- Description -->
      <% if @product.description.present? %>
        <div class="prose prose-gray max-w-none">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Description</h3>
          <p class="text-gray-600 whitespace-pre-wrap"><%= @product.description %></p>
        </div>
      <% end %>

      <!-- Product Details Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-4 border-t">
        <div class="bg-gray-50 rounded-xl p-4">
          <p class="text-sm text-gray-500 mb-1">SKU</p>
          <p class="font-medium text-gray-900"><%= @product.sku.presence || "N/A" %></p>
        </div>
        <div class="bg-gray-50 rounded-xl p-4">
          <p class="text-sm text-gray-500 mb-1">Stock</p>
          <p class="font-medium text-gray-900">
            <% if @product.digital? %>
              <span class="text-indigo-600">Digital</span>
            <% else %>
              <%= @product.stock_quantity || 0 %> units
            <% end %>
          </p>
        </div>
        <div class="bg-gray-50 rounded-xl p-4">
          <p class="text-sm text-gray-500 mb-1">Type</p>
          <p class="font-medium text-gray-900"><%= @product.digital? ? "Digital" : "Physical" %></p>
        </div>
        <div class="bg-gray-50 rounded-xl p-4">
          <p class="text-sm text-gray-500 mb-1">Created</p>
          <p class="font-medium text-gray-900"><%= @product.created_at.strftime("%b %d, %Y") %></p>
        </div>
      </div>

      <!-- Image Gallery -->
      <% if @product.images.attached? && @product.images.count > 1 %>
        <div class="pt-4 border-t">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">All Images (<%= @product.images.count %>)</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% @product.images.each do |image| %>
              <div class="aspect-square rounded-xl overflow-hidden bg-gray-100">
                <%= image_tag image, class: "w-full h-full object-cover hover:scale-105 transition duration-300" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
