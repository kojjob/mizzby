<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-indigo-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
        <%= link_to "Dashboard", seller_root_path, class: "hover:text-indigo-600 transition-colors" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <%= link_to "Products", seller_products_path, class: "hover:text-indigo-600 transition-colors" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-gray-900 font-medium">Bulk Upload</span>
      </nav>
      
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            Bulk Product Upload
          </h1>
          <p class="text-gray-500 mt-1">Add multiple products at once via CSV or form</p>
        </div>
        <%= link_to bulk_template_seller_products_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-200 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-300 transition-all duration-200 shadow-sm" do %>
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Download CSV Template
        <% end %>
      </div>
    </div>

    <!-- Upload Method Tabs -->
    <div class="mb-8" data-controller="tabs">
      <div class="flex gap-2 p-1 bg-gray-100 rounded-xl w-fit">
        <button type="button" 
                data-tabs-target="tab" 
                data-action="click->tabs#switch"
                data-tab-id="csv"
                class="tab-btn px-6 py-2.5 rounded-lg font-medium text-sm transition-all duration-200 bg-white text-gray-900 shadow-sm">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            CSV Upload
          </span>
        </button>
        <button type="button" 
                data-tabs-target="tab" 
                data-action="click->tabs#switch"
                data-tab-id="form"
                class="tab-btn px-6 py-2.5 rounded-lg font-medium text-sm transition-all duration-200 text-gray-600 hover:text-gray-900">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
            </svg>
            Manual Entry
          </span>
        </button>
      </div>

      <!-- CSV Upload Panel -->
      <div data-tabs-target="panel" data-tab-id="csv" class="mt-6">
        <%= form_with url: bulk_create_seller_products_path, method: :post, local: true, multipart: true, class: "space-y-6" do |f| %>
          <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
            <div class="max-w-2xl mx-auto">
              <div class="text-center mb-8">
                <div class="w-16 h-16 mx-auto bg-gradient-to-br from-indigo-100 to-purple-100 rounded-2xl flex items-center justify-center mb-4">
                  <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                  </svg>
                </div>
                <h2 class="text-xl font-bold text-gray-900">Upload CSV File</h2>
                <p class="text-gray-500 mt-1">Upload a CSV file with your product data</p>
              </div>

              <!-- Drag & Drop Zone -->
              <div class="relative" data-controller="file-upload">
                <input type="file" 
                       name="csv_file" 
                       accept=".csv" 
                       data-file-upload-target="input"
                       data-action="change->file-upload#handleChange"
                       class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10">
                <div data-file-upload-target="zone" 
                     class="border-2 border-dashed border-gray-200 rounded-2xl p-12 text-center hover:border-indigo-400 hover:bg-indigo-50/50 transition-all duration-300">
                  <svg class="w-12 h-12 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  <p class="text-gray-600 font-medium" data-file-upload-target="text">
                    Drop your CSV file here or <span class="text-indigo-600">browse</span>
                  </p>
                  <p class="text-sm text-gray-400 mt-2">Supports: .csv files up to 10MB</p>
                </div>
              </div>

              <!-- CSV Format Guide -->
              <div class="mt-8 bg-gradient-to-br from-amber-50 to-orange-50 rounded-xl p-6 border border-amber-100">
                <h3 class="font-semibold text-amber-800 flex items-center gap-2 mb-3">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  CSV Format Guide
                </h3>
                <p class="text-sm text-amber-700 mb-3">Your CSV should include these columns:</p>
                <div class="flex flex-wrap gap-2">
                  <% ["name*", "description*", "price*", "discounted_price", "category_name*", "stock_quantity", "sku", "brand*", "condition", "country_of_origin", "is_digital", "product_type", "meta_title", "meta_description", "tags"].each do |col| %>
                    <span class="px-2 py-1 bg-white/80 rounded-lg text-xs font-mono <%= col.include?('*') ? 'text-red-600 font-semibold' : 'text-amber-700' %>">
                      <%= col %>
                    </span>
                  <% end %>
                </div>
                <p class="text-xs text-amber-600 mt-3">* Required fields</p>
              </div>

              <div class="mt-8 flex items-center justify-between">
                <%= link_to seller_products_path, class: "px-6 py-3 text-gray-600 hover:text-gray-900 font-medium transition-colors" do %>
                  Cancel
                <% end %>
                <button type="submit" class="inline-flex items-center gap-2 px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl font-semibold shadow-lg shadow-indigo-500/30 hover:shadow-xl hover:shadow-indigo-500/40 transition-all duration-300 hover:-translate-y-0.5">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                  </svg>
                  Upload & Create Products
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Manual Entry Panel -->
      <div data-tabs-target="panel" data-tab-id="form" class="mt-6 hidden">
        <%= form_with url: bulk_create_seller_products_path, method: :post, local: true, class: "space-y-6", data: { controller: "bulk-products" } do |f| %>
          
          <!-- Products Container -->
          <div data-bulk-products-target="container" class="space-y-6">
            <% 5.times do |index| %>
              <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden product-card" data-bulk-products-target="product">
                <!-- Product Header -->
                <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-white border-b border-gray-100 flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <span class="w-8 h-8 rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center text-white font-bold text-sm">
                      <%= index + 1 %>
                    </span>
                    <h3 class="font-semibold text-gray-900">Product <%= index + 1 %></h3>
                  </div>
                  <button type="button" 
                          data-action="click->bulk-products#toggleProduct"
                          class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
                    <svg class="w-5 h-5 transform transition-transform" data-bulk-products-target="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </button>
                </div>

                <!-- Product Fields -->
                <div class="p-6 space-y-6" data-bulk-products-target="fields">
                  <!-- Row 1: Name & Category -->
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Product Name <span class="text-red-500">*</span>
                      </label>
                      <input type="text" 
                             name="products[<%= index %>][name]" 
                             placeholder="Enter product name"
                             class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200">
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Category <span class="text-red-500">*</span>
                      </label>
                      <select name="products[<%= index %>][category_id]" 
                              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 bg-white">
                        <option value="">Select category</option>
                        <% @categories.each do |category| %>
                          <option value="<%= category.id %>"><%= category.name %></option>
                        <% end %>
                      </select>
                    </div>
                  </div>

                  <!-- Row 2: Description -->
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      Description <span class="text-red-500">*</span>
                    </label>
                    <textarea name="products[<%= index %>][description]" 
                              rows="3" 
                              placeholder="Describe your product..."
                              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 resize-none"></textarea>
                  </div>

                  <!-- Row 3: Price & Discounted Price & Stock -->
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Price <span class="text-red-500">*</span>
                      </label>
                      <div class="relative">
                        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 font-medium">$</span>
                        <input type="number" 
                               name="products[<%= index %>][price]" 
                               step="0.01" 
                               min="0"
                               placeholder="0.00"
                               class="w-full pl-8 pr-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200">
                      </div>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Sale Price <span class="text-gray-400 text-xs">(Optional)</span>
                      </label>
                      <div class="relative">
                        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 font-medium">$</span>
                        <input type="number" 
                               name="products[<%= index %>][discounted_price]" 
                               step="0.01" 
                               min="0"
                               placeholder="0.00"
                               class="w-full pl-8 pr-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200">
                      </div>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Stock Quantity
                      </label>
                      <input type="number" 
                             name="products[<%= index %>][stock_quantity]" 
                             min="0"
                             value="0"
                             placeholder="0"
                             class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200">
                    </div>
                  </div>

                  <!-- Row 4: Brand & SKU & Condition -->
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Brand <span class="text-red-500">*</span>
                      </label>
                      <input type="text" 
                             name="products[<%= index %>][brand]" 
                             placeholder="Brand name"
                             class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200">
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        SKU <span class="text-gray-400 text-xs">(Auto-generated if empty)</span>
                      </label>
                      <input type="text" 
                             name="products[<%= index %>][sku]" 
                             placeholder="e.g., SKU-001"
                             class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200">
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Condition
                      </label>
                      <select name="products[<%= index %>][condition]" 
                              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 bg-white">
                        <option value="new" selected>New</option>
                        <option value="refurbished">Refurbished</option>
                        <option value="used">Used</option>
                      </select>
                    </div>
                  </div>

                  <!-- Row 5: Country & Product Type & Digital -->
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Country of Origin
                      </label>
                      <select name="products[<%= index %>][country_of_origin]" 
                              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 bg-white">
                        <option value="Ghana" selected>Ghana</option>
                        <option value="Nigeria">Nigeria</option>
                        <option value="Kenya">Kenya</option>
                        <option value="South Africa">South Africa</option>
                        <option value="China">China</option>
                        <option value="USA">USA</option>
                        <option value="UK">UK</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">
                        Product Type
                      </label>
                      <select name="products[<%= index %>][product_type]" 
                              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 bg-white">
                        <option value="0" selected>Physical</option>
                        <option value="1">Digital</option>
                      </select>
                    </div>
                    <div class="flex items-end">
                      <label class="flex items-center gap-3 cursor-pointer p-3 rounded-xl hover:bg-gray-50 transition-colors">
                        <input type="hidden" name="products[<%= index %>][is_digital]" value="0">
                        <input type="checkbox" 
                               name="products[<%= index %>][is_digital]" 
                               value="1"
                               class="w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
                        <span class="text-sm font-medium text-gray-700">Digital Product</span>
                      </label>
                    </div>
                  </div>

                  <!-- Row 6: SEO Fields -->
                  <div class="pt-4 border-t border-gray-100">
                    <h4 class="text-sm font-semibold text-gray-900 mb-4 flex items-center gap-2">
                      <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                      </svg>
                      SEO Settings <span class="text-gray-400 font-normal">(Optional - Auto-filled from name/description)</span>
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                      <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Meta Title</label>
                        <input type="text" 
                               name="products[<%= index %>][meta_title]" 
                               placeholder="SEO title (max 60 chars)"
                               maxlength="60"
                               class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200">
                      </div>
                      <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Meta Description</label>
                        <input type="text" 
                               name="products[<%= index %>][meta_description]" 
                               placeholder="SEO description (max 160 chars)"
                               maxlength="160"
                               class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Add More Products Button -->
          <div class="flex justify-center">
            <button type="button" 
                    data-action="click->bulk-products#addProduct"
                    class="inline-flex items-center gap-2 px-6 py-3 border-2 border-dashed border-gray-300 rounded-xl text-gray-600 font-medium hover:border-indigo-400 hover:text-indigo-600 hover:bg-indigo-50/50 transition-all duration-200">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Add Another Product
            </button>
          </div>

          <!-- Form Actions -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <div class="flex items-center gap-4">
              <%= link_to seller_products_path, class: "px-6 py-3 text-gray-600 hover:text-gray-900 font-medium transition-colors" do %>
                Cancel
              <% end %>
              <span class="text-sm text-gray-400">Products will be saved as drafts</span>
            </div>
            <button type="submit" class="inline-flex items-center gap-2 px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl font-semibold shadow-lg shadow-indigo-500/30 hover:shadow-xl hover:shadow-indigo-500/40 transition-all duration-300 hover:-translate-y-0.5">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Create All Products
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Help Section -->
    <div class="mt-12 bg-gradient-to-r from-slate-800 to-slate-900 rounded-2xl shadow-xl p-8 text-white">
      <div class="flex flex-col md:flex-row md:items-start gap-8">
        <div class="flex-1">
          <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
            Tips for Bulk Uploading
          </h2>
          <ul class="space-y-3 text-slate-300">
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-green-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Download the CSV template first to ensure correct formatting</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-green-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Use exact category names as they appear in your store</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-green-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Leave SKU blank for auto-generation</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-green-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Products are created as drafts - publish them after adding images</span>
            </li>
          </ul>
        </div>
        <div class="md:w-64 bg-white/5 backdrop-blur rounded-xl p-6 border border-white/10">
          <h3 class="font-semibold text-white mb-3">Need Help?</h3>
          <p class="text-sm text-slate-400 mb-4">Check our guide for detailed instructions on bulk uploading.</p>
          <a href="#" class="inline-flex items-center gap-2 text-sm text-indigo-400 hover:text-indigo-300 font-medium">
            View Documentation
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Stimulus Controllers -->
<script>
// Simple tabs controller
document.addEventListener('DOMContentLoaded', function() {
  const tabs = document.querySelectorAll('[data-tab-id]');
  const panels = document.querySelectorAll('[data-tabs-target="panel"]');
  
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const tabId = this.dataset.tabId;
      
      // Update tab styles
      document.querySelectorAll('.tab-btn').forEach(t => {
        t.classList.remove('bg-white', 'text-gray-900', 'shadow-sm');
        t.classList.add('text-gray-600');
      });
      this.classList.add('bg-white', 'text-gray-900', 'shadow-sm');
      this.classList.remove('text-gray-600');
      
      // Show/hide panels
      panels.forEach(panel => {
        if (panel.dataset.tabId === tabId) {
          panel.classList.remove('hidden');
        } else {
          panel.classList.add('hidden');
        }
      });
    });
  });

  // File upload visual feedback
  const fileInput = document.querySelector('[name="csv_file"]');
  const fileText = document.querySelector('[data-file-upload-target="text"]');
  const dropZone = document.querySelector('[data-file-upload-target="zone"]');
  
  if (fileInput && fileText) {
    fileInput.addEventListener('change', function() {
      if (this.files.length > 0) {
        fileText.innerHTML = `<span class="text-indigo-600 font-semibold">${this.files[0].name}</span> selected`;
        dropZone.classList.add('border-indigo-400', 'bg-indigo-50/50');
      }
    });
  }

  // Product toggle
  document.querySelectorAll('.product-card').forEach(card => {
    const toggle = card.querySelector('[data-action="click->bulk-products#toggleProduct"]');
    const fields = card.querySelector('[data-bulk-products-target="fields"]');
    const chevron = card.querySelector('[data-bulk-products-target="chevron"]');
    
    if (toggle && fields && chevron) {
      toggle.addEventListener('click', function() {
        fields.classList.toggle('hidden');
        chevron.classList.toggle('rotate-180');
      });
    }
  });
});
</script>
