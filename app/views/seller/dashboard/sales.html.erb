<%= content_for :head do %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-indigo-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
      <div>
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-2">
          <%= link_to "Dashboard", seller_root_path, class: "hover:text-indigo-600 transition-colors" %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <span class="text-gray-900 font-medium">Sales Analytics</span>
        </nav>
        <h1 class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
          Sales Analytics
        </h1>
        <p class="text-gray-500 mt-1">Track your revenue and order performance</p>
      </div>
      <div class="flex items-center gap-3">
        <div class="flex items-center gap-2 px-4 py-2 bg-white border border-gray-200 rounded-xl text-sm">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <span class="text-gray-600">Last 30 days</span>
        </div>
        <%= link_to "#", class: "inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-200 rounded-xl text-gray-700 font-medium hover:bg-gray-50 transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Export
        <% end %>
      </div>
    </div>

    <!-- Revenue Stats -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
      <!-- Today -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-5 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-3">
          <div class="p-2.5 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-xl">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <span class="text-xs font-medium text-emerald-600 bg-emerald-50 px-2 py-1 rounded-full">Today</span>
        </div>
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@today_sales) %></p>
        <p class="text-sm text-gray-500 mt-1">Today's Revenue</p>
      </div>

      <!-- This Week -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-5 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-3">
          <div class="p-2.5 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-xl">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <span class="text-xs font-medium text-blue-600 bg-blue-50 px-2 py-1 rounded-full">7 days</span>
        </div>
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@weekly_sales) %></p>
        <p class="text-sm text-gray-500 mt-1">Weekly Revenue</p>
      </div>

      <!-- This Month -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-5 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-3">
          <div class="p-2.5 bg-gradient-to-br from-purple-400 to-pink-500 rounded-xl">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
          <% if @sales_growth > 0 %>
            <span class="text-xs font-medium text-green-600 bg-green-50 px-2 py-1 rounded-full flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
              </svg>
              <%= @sales_growth %>%
            </span>
          <% elsif @sales_growth < 0 %>
            <span class="text-xs font-medium text-red-600 bg-red-50 px-2 py-1 rounded-full flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
              </svg>
              <%= @sales_growth.abs %>%
            </span>
          <% else %>
            <span class="text-xs font-medium text-gray-600 bg-gray-50 px-2 py-1 rounded-full">30 days</span>
          <% end %>
        </div>
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@monthly_sales) %></p>
        <p class="text-sm text-gray-500 mt-1">Monthly Revenue</p>
      </div>

      <!-- Total Sales -->
      <div class="bg-gradient-to-br from-indigo-600 to-purple-700 rounded-2xl shadow-lg p-5 text-white">
        <div class="flex items-center justify-between mb-3">
          <div class="p-2.5 bg-white/20 rounded-xl">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <span class="text-xs font-medium bg-white/20 px-2 py-1 rounded-full">All time</span>
        </div>
        <p class="text-2xl font-bold"><%= number_to_currency(@total_sales) %></p>
        <p class="text-sm text-indigo-100 mt-1">Total Revenue</p>
      </div>
    </div>

    <!-- Charts & Order Stats Row -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <!-- Sales Chart -->
      <div class="lg:col-span-2 bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-lg font-bold text-gray-900">Revenue Trend</h2>
            <p class="text-sm text-gray-500">Daily sales over the last 14 days</p>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-3 h-3 bg-indigo-500 rounded-full"></span>
            <span class="text-sm text-gray-600">Revenue</span>
          </div>
        </div>
        <div class="h-64">
          <canvas id="salesChart"></canvas>
        </div>
      </div>

      <!-- Order Status Breakdown -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-6">Order Status</h2>
        <div class="space-y-4">
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">Total Orders</p>
                <p class="text-xs text-gray-500">All time</p>
              </div>
            </div>
            <span class="text-xl font-bold text-gray-900"><%= @total_orders %></span>
          </div>
          
          <div class="flex items-center justify-between p-3 bg-amber-50 rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">Pending</p>
                <p class="text-xs text-gray-500">Awaiting action</p>
              </div>
            </div>
            <span class="text-xl font-bold text-amber-600"><%= @pending_orders %></span>
          </div>
          
          <div class="flex items-center justify-between p-3 bg-green-50 rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">Completed</p>
                <p class="text-xs text-gray-500">Successfully delivered</p>
              </div>
            </div>
            <span class="text-xl font-bold text-green-600"><%= @completed_orders %></span>
          </div>
          
          <div class="flex items-center justify-between p-3 bg-red-50 rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">Cancelled</p>
                <p class="text-xs text-gray-500">Refunded</p>
              </div>
            </div>
            <span class="text-xl font-bold text-red-600"><%= @cancelled_orders %></span>
          </div>
        </div>
        
        <!-- Average Order Value -->
        <div class="mt-6 pt-6 border-t border-gray-100">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-500">Average Order Value</span>
            <span class="text-lg font-bold text-indigo-600"><%= number_to_currency(@average_order_value) %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Top Products & Orders Table Row -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Top Products -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-lg font-bold text-gray-900">Top Sellers</h2>
          <span class="text-xs text-gray-500">This month</span>
        </div>
        <% if @top_products&.any? %>
          <div class="space-y-4">
            <% @top_products.each_with_index do |product, index| %>
              <div class="flex items-center gap-4">
                <span class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-bold
                  <%= case index
                      when 0 then 'bg-gradient-to-br from-amber-400 to-orange-500 text-white'
                      when 1 then 'bg-gradient-to-br from-gray-300 to-gray-400 text-white'
                      when 2 then 'bg-gradient-to-br from-amber-600 to-amber-700 text-white'
                      else 'bg-gray-100 text-gray-600'
                      end %>">
                  <%= index + 1 %>
                </span>
                <% if product.images.attached? %>
                  <%= image_tag product.images.first, class: "w-10 h-10 rounded-lg object-cover" %>
                <% else %>
                  <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
                <div class="flex-1 min-w-0">
                  <p class="font-medium text-gray-900 truncate"><%= product.name %></p>
                  <p class="text-xs text-gray-500"><%= product.order_count %> sales</p>
                </div>
                <span class="font-semibold text-gray-900"><%= number_to_currency(product.revenue) %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="w-12 h-12 mx-auto text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
            <p class="text-gray-500">No sales yet</p>
          </div>
        <% end %>
      </div>

      <!-- Orders Table -->
      <div class="lg:col-span-2 bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
          <h2 class="text-lg font-bold text-gray-900">Recent Orders</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-100">
            <thead class="bg-gray-50/50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Order</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Customer</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Date</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% if @orders&.any? %>
                <% @orders.limit(10).each do |order| %>
                  <tr class="hover:bg-gray-50/50 transition-colors">
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-3">
                        <% if order.product&.images&.attached? %>
                          <%= image_tag order.product.images.first, class: "w-10 h-10 rounded-lg object-cover" %>
                        <% else %>
                          <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                            </svg>
                          </div>
                        <% end %>
                        <div>
                          <p class="font-medium text-gray-900">#<%= order.id.to_s.rjust(5, '0') %></p>
                          <p class="text-xs text-gray-500 truncate max-w-[120px]"><%= order.product&.name %></p>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <p class="text-sm text-gray-900"><%= order.user&.full_name rescue order.user&.email&.split('@')&.first %></p>
                      <p class="text-xs text-gray-500"><%= order.user&.email&.truncate(25) %></p>
                    </td>
                    <td class="px-6 py-4">
                      <span class="font-semibold text-gray-900"><%= number_to_currency(order.total_amount) %></span>
                    </td>
                    <td class="px-6 py-4">
                      <span class="inline-flex items-center gap-1 px-2.5 py-1 text-xs rounded-full font-medium
                        <%= case order.status
                            when 'completed' then 'bg-green-100 text-green-700'
                            when 'pending' then 'bg-amber-100 text-amber-700'
                            when 'processing' then 'bg-blue-100 text-blue-700'
                            when 'cancelled' then 'bg-red-100 text-red-700'
                            when 'refunded' then 'bg-purple-100 text-purple-700'
                            else 'bg-gray-100 text-gray-700'
                            end %>">
                        <span class="w-1.5 h-1.5 rounded-full 
                          <%= case order.status
                              when 'completed' then 'bg-green-500'
                              when 'pending' then 'bg-amber-500'
                              when 'processing' then 'bg-blue-500'
                              when 'cancelled' then 'bg-red-500'
                              when 'refunded' then 'bg-purple-500'
                              else 'bg-gray-500'
                              end %>"></span>
                        <%= order.status&.titleize %>
                      </span>
                    </td>
                    <td class="px-6 py-4">
                      <p class="text-sm text-gray-600"><%= order.created_at.strftime("%b %d, %Y") %></p>
                      <p class="text-xs text-gray-400"><%= order.created_at.strftime("%I:%M %p") %></p>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="5" class="px-6 py-12 text-center">
                    <svg class="w-12 h-12 mx-auto text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    </svg>
                    <p class="text-gray-500 font-medium">No orders yet</p>
                    <p class="text-sm text-gray-400 mt-1">Orders will appear here once customers start buying</p>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const ctx = document.getElementById('salesChart');
  if (ctx) {
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: <%= raw @chart_labels.map { |d| d.strftime("%b %d") }.to_json %>,
        datasets: [{
          label: 'Revenue',
          data: <%= raw @chart_data.to_json %>,
          borderColor: 'rgb(99, 102, 241)',
          backgroundColor: 'rgba(99, 102, 241, 0.1)',
          borderWidth: 2,
          fill: true,
          tension: 0.4,
          pointBackgroundColor: 'rgb(99, 102, 241)',
          pointBorderColor: '#fff',
          pointBorderWidth: 2,
          pointRadius: 4,
          pointHoverRadius: 6
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false },
          tooltip: {
            backgroundColor: 'rgba(17, 24, 39, 0.9)',
            padding: 12,
            cornerRadius: 8,
            displayColors: false,
            callbacks: {
              label: function(context) {
                return '$' + context.raw.toLocaleString('en-US', {minimumFractionDigits: 2});
              }
            }
          }
        },
        scales: {
          x: { grid: { display: false }, ticks: { font: { size: 11 }, color: '#9CA3AF' } },
          y: {
            beginAtZero: true,
            grid: { color: 'rgba(0, 0, 0, 0.05)' },
            ticks: { font: { size: 11 }, color: '#9CA3AF', callback: function(value) { return '$' + value.toLocaleString(); } }
          }
        }
      }
    });
  }
});
</script>
