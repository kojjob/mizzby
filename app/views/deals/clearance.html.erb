<% content_for :title, @page_title %>

<div class="bg-gradient-to-r from-emerald-600 via-teal-600 to-cyan-600 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 rounded-full mb-4">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
        <span class="font-semibold">Up to 50%+ Off</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4"><%= @page_title %></h1>
      <p class="text-xl opacity-90"><%= @page_description %></p>
    </div>
  </div>
</div>

<div class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold text-gray-900">Clearance Items</h2>
      <%= link_to deals_path, class: "text-indigo-600 hover:text-indigo-700 font-medium flex items-center gap-1" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        All Deals
      <% end %>
    </div>

    <% if @products.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @products.each do |product| %>
          <%= render "deals/product_card", product: product %>
        <% end %>
      </div>
    <% else %>
      <%= render "deals/empty_state", message: "No clearance items available right now." %>
    <% end %>
  </div>
</div>
