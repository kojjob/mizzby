<div class="bg-gradient-to-b from-indigo-50 to-white">
  <div class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-indigo-800 mb-2">Special Deals & Discounts</h1>
      <p class="text-gray-600 max-w-2xl mx-auto">Discover our best digital products at unbeatable prices. Limited time offers updated regularly.</p>
    </div>

    <% if @featured_deals.any? %>
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-indigo-700 mb-6">Featured Deals</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% @featured_deals.each do |product| %>
            <div class="bg-white rounded-xl shadow-md overflow-hidden transition-transform duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="relative">
                <%= link_to product_path(product) do %>
                  <% if product.cover_image.attached? %>
                    <%= image_tag product.cover_image, class: "w-full h-48 object-cover" %>
                  <% else %>
                    <div class="w-full h-48 bg-indigo-100 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-indigo-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  <% end %>
                <% end %>
                <div class="absolute top-3 right-3 bg-red-500 text-white text-sm font-bold px-3 py-1 rounded-full">
                  <%= number_to_percentage(product.discount_percentage, precision: 0) %> OFF
                </div>
              </div>
              <div class="p-4">
                <div class="flex justify-between items-start mb-2">
                  <h3 class="font-bold text-lg text-indigo-800 hover:text-indigo-600 transition-colors">
                    <%= link_to product.name, product_path(product) %>
                  </h3>
                  <div class="flex items-center">
                    <span class="text-yellow-500">★</span>
                    <span class="text-gray-700 ml-1"><%= product.average_rating || 0 %></span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= product.short_description %></p>
                <div class="flex items-center justify-between">
                  <div>
                    <span class="text-red-500 font-bold"><%= format_price(product.discounted_price) %></span>
                    <span class="text-gray-400 line-through text-sm ml-2"><%= format_price(product.price) %></span>
                  </div>
                  <%= link_to "View Deal", product_path(product), class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div>
      <h2 class="text-2xl font-bold text-indigo-700 mb-6">All Deals</h2>
      <% if @deals.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <% @deals.each do |product| %>
            <div class="bg-white rounded-lg shadow overflow-hidden transition-transform duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="relative">
                <%= link_to product_path(product) do %>
                  <% if product.cover_image.attached? %>
                    <%= image_tag product.cover_image, class: "w-full h-40 object-cover" %>
                  <% else %>
                    <div class="w-full h-40 bg-indigo-100 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-indigo-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  <% end %>
                <% end %>
                <div class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full">
                  <%= number_to_percentage(product.discount_percentage, precision: 0) %> OFF
                </div>
              </div>
              <div class="p-4">
                <h3 class="font-medium text-indigo-800 hover:text-indigo-600 transition-colors mb-1">
                  <%= link_to product.name, product_path(product) %>
                </h3>
                <p class="text-gray-600 text-xs mb-2 line-clamp-1"><%= product.short_description %></p>
                <div class="flex items-center justify-between">
                  <div>
                    <span class="text-red-500 font-bold"><%= format_price(product.discounted_price) %></span>
                    <span class="text-gray-400 line-through text-xs ml-1"><%= format_price(product.price) %></span>
                  </div>
                  <div class="flex items-center text-xs text-gray-500">
                    <span class="text-yellow-500">★</span>
                    <span class="ml-1"><%= product.average_rating || 0 %></span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <!-- Replace the pagination section with this -->
        <div class="mt-8 flex justify-center">
          <nav class="inline-flex rounded-md shadow">
            <% if @page > 1 %>
              <%= link_to deals_path(page: @page - 1), class: "relative inline-flex items-center px-4 py-2 rounded-l-md border border-indigo-300 bg-white text-sm font-medium text-indigo-700 hover:bg-indigo-50" do %>
                <span>Previous</span>
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-4 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 cursor-not-allowed">
                Previous
              </span>
            <% end %>
            
            <% (1..[@total_pages, 5].min).each do |page_num| %>
              <% if page_num == @page %>
                <span class="relative inline-flex items-center px-4 py-2 border border-indigo-500 bg-indigo-600 text-sm font-medium text-white">
                  <%= page_num %>
                </span>
              <% else %>
                <%= link_to page_num, deals_path(page: page_num), class: "relative inline-flex items-center px-4 py-2 border border-indigo-300 bg-white text-sm font-medium text-indigo-700 hover:bg-indigo-50" %>
              <% end %>
            <% end %>
            
            <% if @page < @total_pages %>
              <%= link_to deals_path(page: @page + 1), class: "relative inline-flex items-center px-4 py-2 rounded-r-md border border-indigo-300 bg-white text-sm font-medium text-indigo-700 hover:bg-indigo-50" do %>
                <span>Next</span>
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-4 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 cursor-not-allowed">
                Next
              </span>
            <% end %>
          </nav>
        </div>
      <% else %>
        <div class="text-center py-12 bg-indigo-50 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-indigo-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-medium text-indigo-700 mb-2">No deals available at the moment</h3>
          <p class="text-gray-600">Check back soon for new special offers and discounts!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>