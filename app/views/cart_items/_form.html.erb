<%= form_with(model: cart_item, class: "space-y-6") do |form| %>
  
  <!-- Error Messages -->
  <% if cart_item.errors.any? %>
    <div class="p-4 bg-rose-50 border border-rose-200 rounded-xl">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0 w-10 h-10 bg-rose-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-rose-800"><%= pluralize(cart_item.errors.count, "error") %> prevented saving:</h3>
          <ul class="mt-2 space-y-1 text-sm text-rose-700">
            <% cart_item.errors.each do |error| %>
              <li class="flex items-center gap-2">
                <svg class="w-3 h-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <%= error.full_message %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Product Selection Section -->
  <div class="space-y-4">
    <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider flex items-center gap-2">
      <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
      </svg>
      Product Selection
    </h3>
    
    <div class="grid gap-4">
      <!-- Product -->
      <div class="space-y-2">
        <%= form.label :product_id, class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center gap-1">
            Product
            <span class="text-rose-500">*</span>
          </span>
        <% end %>
        <%= form.collection_select :product_id, 
            Product.where(published: true).order(:name), 
            :id, :name,
            { prompt: "Select a product..." },
            { class: ["w-full px-4 py-3 border rounded-xl bg-white shadow-sm transition-all focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", 
                      cart_item.errors[:product_id].any? ? "border-rose-300 bg-rose-50" : "border-gray-200 hover:border-gray-300"] } %>
        <% if cart_item.errors[:product_id].any? %>
          <p class="text-sm text-rose-600"><%= cart_item.errors[:product_id].first %></p>
        <% end %>
      </div>

      <!-- Quantity -->
      <div class="space-y-2">
        <%= form.label :quantity, class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center gap-1">
            Quantity
            <span class="text-rose-500">*</span>
          </span>
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
            </svg>
          </div>
          <%= form.number_field :quantity, 
              min: 1, 
              max: 99,
              placeholder: "Enter quantity",
              class: ["w-full pl-12 pr-4 py-3 border rounded-xl shadow-sm transition-all focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", 
                      cart_item.errors[:quantity].any? ? "border-rose-300 bg-rose-50" : "border-gray-200 hover:border-gray-300"] %>
        </div>
        <% if cart_item.errors[:quantity].any? %>
          <p class="text-sm text-rose-600"><%= cart_item.errors[:quantity].first %></p>
        <% else %>
          <p class="text-xs text-gray-500">Enter a quantity between 1 and 99</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Advanced Options (Hidden by default, for admin use) -->
  <% if current_user&.admin? %>
    <div class="space-y-4 pt-4 border-t border-gray-100">
      <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider flex items-center gap-2">
        <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        Admin Options
      </h3>

      <div class="grid sm:grid-cols-2 gap-4">
        <!-- Cart ID -->
        <div class="space-y-2">
          <%= form.label :cart_id, "Cart ID", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :cart_id, 
              placeholder: "Cart ID",
              class: ["w-full px-4 py-3 border rounded-xl shadow-sm transition-all focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", 
                      cart_item.errors[:cart_id].any? ? "border-rose-300 bg-rose-50" : "border-gray-200 hover:border-gray-300"] %>
        </div>

        <!-- Override Price -->
        <div class="space-y-2">
          <%= form.label :price, "Override Price", class: "block text-sm font-medium text-gray-700" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <span class="text-gray-400">$</span>
            </div>
            <%= form.text_field :price, 
                placeholder: "0.00",
                class: ["w-full pl-8 pr-4 py-3 border rounded-xl shadow-sm transition-all focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", 
                        cart_item.errors[:price].any? ? "border-rose-300 bg-rose-50" : "border-gray-200 hover:border-gray-300"] %>
          </div>
          <p class="text-xs text-gray-500">Leave blank to use product price</p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Submit Button -->
  <div class="pt-4">
    <%= form.submit cart_item.new_record? ? "Add to Cart" : "Update Cart Item", 
        class: "w-full inline-flex items-center justify-center gap-2 px-6 py-3 text-white bg-gradient-to-r from-indigo-600 to-blue-600 rounded-xl font-semibold hover:from-indigo-700 hover:to-blue-700 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 cursor-pointer" %>
  </div>
<% end %>
