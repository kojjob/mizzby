<div id="<%= dom_id cart_item %>" class="p-4 sm:p-6 hover:bg-gray-50/50 transition-colors">
  <div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
    
    <!-- Product Image -->
    <div class="flex-shrink-0">
      <%= link_to cart_item.product, class: "block" do %>
        <div class="w-full sm:w-24 h-32 sm:h-24 bg-gradient-to-br from-gray-100 to-gray-50 rounded-xl overflow-hidden group">
          <% if cart_item.product.product_images.any? %>
            <%= image_tag cart_item.product.product_images.first.image, 
                class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300", 
                alt: cart_item.product.name %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center">
              <svg class="w-10 h-10 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Product Details -->
    <div class="flex-1 min-w-0">
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
        
        <!-- Left: Product Info -->
        <div class="flex-1 min-w-0">
          <!-- Category Badge -->
          <% if cart_item.product.category %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-50 text-indigo-700 mb-2">
              <%= cart_item.product.category.name %>
            </span>
          <% end %>
          
          <!-- Product Name -->
          <h3 class="text-lg font-semibold text-gray-900 mb-1 line-clamp-2">
            <%= link_to cart_item.product.name, cart_item.product, class: "hover:text-indigo-600 transition-colors" %>
          </h3>
          
          <!-- Seller -->
          <% if cart_item.product.seller %>
            <p class="text-sm text-gray-500 mb-2">
              by <%= link_to cart_item.product.seller.business_name, seller_path(cart_item.product.seller), class: "text-indigo-600 hover:text-indigo-700" %>
            </p>
          <% end %>

          <!-- Digital Badge -->
          <% if cart_item.product.is_digital %>
            <div class="inline-flex items-center gap-1.5 px-2 py-1 bg-purple-50 text-purple-700 rounded-md text-xs font-medium">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
              </svg>
              Digital Download
            </div>
          <% end %>

          <!-- Price per item -->
          <div class="mt-2">
            <% if cart_item.product.discounted_price.present? && cart_item.product.discounted_price < cart_item.product.price %>
              <div class="flex items-center gap-2">
                <span class="text-lg font-bold text-gray-900"><%= number_to_currency(cart_item.price) %></span>
                <span class="text-sm text-gray-400 line-through"><%= number_to_currency(cart_item.product.price) %></span>
              </div>
            <% else %>
              <span class="text-lg font-bold text-gray-900"><%= number_to_currency(cart_item.price) %></span>
            <% end %>
          </div>
        </div>

        <!-- Right: Quantity & Actions -->
        <div class="flex flex-col sm:items-end gap-3">
          
          <!-- Quantity Selector -->
          <%= form_with model: cart_item, class: "flex items-center gap-2" do |form| %>
            <label class="text-sm text-gray-500 sr-only">Qty:</label>
            <div class="flex items-center border border-gray-200 rounded-lg overflow-hidden">
              <button type="button" 
                      onclick="this.parentElement.querySelector('input').stepDown(); this.closest('form').requestSubmit();"
                      class="px-3 py-2 bg-gray-50 hover:bg-gray-100 text-gray-600 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                </svg>
              </button>
              <%= form.number_field :quantity, 
                  value: cart_item.quantity, 
                  min: 1, 
                  max: cart_item.product.is_digital ? 99 : (cart_item.product.stock_quantity || 99),
                  class: "w-14 px-2 py-2 text-center border-x border-gray-200 focus:outline-none text-gray-900 font-medium",
                  onchange: "this.closest('form').requestSubmit();" %>
              <button type="button" 
                      onclick="this.parentElement.querySelector('input').stepUp(); this.closest('form').requestSubmit();"
                      class="px-3 py-2 bg-gray-50 hover:bg-gray-100 text-gray-600 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
              </button>
            </div>
            <noscript>
              <%= form.submit "Update", class: "px-3 py-2 bg-gray-100 rounded-lg text-sm font-medium cursor-pointer" %>
            </noscript>
          <% end %>

          <!-- Subtotal -->
          <div class="text-right">
            <p class="text-xs text-gray-500">Subtotal</p>
            <p class="text-xl font-bold text-indigo-600"><%= number_to_currency(cart_item.subtotal) %></p>
          </div>

          <!-- Remove Button -->
          <%= button_to cart_item, 
              method: :delete,
              class: "inline-flex items-center gap-1.5 text-sm text-gray-400 hover:text-rose-600 transition-colors cursor-pointer",
              data: { turbo_confirm: "Remove #{cart_item.product.name} from your cart?" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Remove
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
