<% content_for :title, "Edit Cart Item" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <ol class="flex items-center gap-2 text-sm text-gray-500">
        <%= link_to root_path, class: "hover:text-gray-700 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
        <% end %>
        <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <%= link_to "Cart", cart_items_path, class: "hover:text-gray-700 transition-colors" %>
        <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <%= link_to @cart_item.product.name.truncate(20), @cart_item, class: "hover:text-gray-700 transition-colors" %>
        <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <span class="text-gray-900 font-medium">Edit</span>
      </ol>
    </nav>

    <!-- Header Card with Product Info -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden mb-6">
      <div class="p-6 sm:p-8 bg-gradient-to-r from-amber-50 to-orange-50 border-b border-gray-100">
        <div class="flex items-start gap-4">
          
          <!-- Product Image -->
          <div class="flex-shrink-0 w-20 h-20 bg-white rounded-xl overflow-hidden shadow-sm">
            <% if @cart_item.product.product_images.any? %>
              <%= image_tag @cart_item.product.product_images.first.image, 
                  class: "w-full h-full object-cover", 
                  alt: @cart_item.product.name %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center bg-gray-50">
                <svg class="w-8 h-8 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
            <% end %>
          </div>

          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-8 h-8 bg-gradient-to-br from-amber-500 to-orange-600 rounded-lg flex items-center justify-center shadow-sm">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
              </div>
              <h1 class="text-2xl font-bold text-gray-900">Edit Cart Item</h1>
            </div>
            <p class="text-gray-600 line-clamp-1"><%= @cart_item.product.name %></p>
            <div class="flex items-center gap-3 mt-2">
              <span class="text-sm text-gray-500">Current qty: <span class="font-semibold text-gray-900"><%= @cart_item.quantity %></span></span>
              <span class="text-gray-300">|</span>
              <span class="text-sm text-gray-500">Price: <span class="font-semibold text-gray-900"><%= number_to_currency(@cart_item.price) %></span></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="p-6 sm:p-8">
        <%= render "form", cart_item: @cart_item %>
      </div>
      
      <!-- Actions -->
      <div class="p-6 sm:p-8 bg-gray-50/50 border-t border-gray-100">
        <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
          <%= link_to @cart_item, class: "inline-flex items-center justify-center gap-2 px-5 py-2.5 text-gray-700 bg-white border border-gray-200 rounded-xl font-medium hover:bg-gray-50 hover:border-gray-300 transition-all" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            View Item
          <% end %>

          <%= link_to cart_items_path, class: "inline-flex items-center justify-center gap-2 px-5 py-2.5 text-indigo-600 bg-indigo-50 border border-indigo-100 rounded-xl font-medium hover:bg-indigo-100 transition-all" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Back to Cart
          <% end %>

          <div class="flex-1 hidden sm:block"></div>

          <%= button_to @cart_item, 
              method: :delete,
              class: "inline-flex items-center justify-center gap-2 px-5 py-2.5 text-rose-600 bg-rose-50 border border-rose-200 rounded-xl font-medium hover:bg-rose-100 hover:border-rose-300 transition-all cursor-pointer",
              data: { turbo_confirm: "Remove #{@cart_item.product.name} from your cart?" } do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Remove Item
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
