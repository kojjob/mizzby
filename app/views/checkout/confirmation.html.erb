<%= content_for :title, "Order Confirmed" %>

<div class="min-h-screen bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Success Animation Header -->
    <div class="text-center mb-10">
      <div class="relative inline-flex">
        <!-- Animated Success Circle -->
        <div class="w-24 h-24 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full flex items-center justify-center shadow-lg shadow-emerald-200 animate-bounce-slow">
          <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <!-- Sparkle Decorations -->
        <div class="absolute -top-2 -right-2 w-6 h-6 text-amber-400 animate-pulse">
          <svg fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L9.19 8.63L2 9.24L7.46 13.97L5.82 21L12 17.27L18.18 21L16.54 13.97L22 9.24L14.81 8.63L12 2Z"/>
          </svg>
        </div>
        <div class="absolute -bottom-1 -left-3 w-4 h-4 text-emerald-400 animate-pulse delay-100">
          <svg fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L9.19 8.63L2 9.24L7.46 13.97L5.82 21L12 17.27L18.18 21L16.54 13.97L22 9.24L14.81 8.63L12 2Z"/>
          </svg>
        </div>
      </div>
      
      <h1 class="mt-6 text-3xl font-bold text-gray-900">Payment Successful!</h1>
      <p class="mt-2 text-lg text-gray-600">Thank you for your purchase. Your order has been confirmed.</p>
    </div>

    <!-- Order Summary Card -->
    <div class="bg-white rounded-3xl shadow-xl shadow-gray-200/50 overflow-hidden mb-6">
      <!-- Header with Gradient -->
      <div class="bg-gradient-to-r from-emerald-500 via-teal-500 to-cyan-500 px-6 py-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-emerald-100 text-sm font-medium">Order Number</p>
            <p class="text-xl font-bold font-mono"><%= @order.payment_id %></p>
          </div>
          <div class="text-right">
            <p class="text-emerald-100 text-sm font-medium">Date</p>
            <p class="text-lg font-semibold"><%= @order.created_at.strftime("%B %d, %Y") %></p>
          </div>
        </div>
      </div>

      <!-- Order Items -->
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
          Order Items
        </h2>
        
        <div class="space-y-4">
          <% @orders.each do |order| %>
            <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-2xl">
              <!-- Product Image -->
              <div class="flex-shrink-0 w-20 h-20 bg-white rounded-xl overflow-hidden shadow-sm">
                <% if order.product&.cover_image&.attached? %>
                  <%= image_tag order.product.cover_image, class: "w-full h-full object-cover" %>
                <% elsif order.product&.product_images&.any? %>
                  <%= image_tag order.product.product_images.first.image, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                  </div>
                <% end %>
              </div>
              
              <!-- Product Details -->
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <h3 class="font-semibold text-gray-900"><%= order.product&.name %></h3>
                    <div class="mt-1 flex flex-wrap items-center gap-2">
                      <% if order.product&.is_digital? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-700">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                          </svg>
                          Digital Download
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                          </svg>
                          Physical Product
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <p class="text-lg font-bold text-gray-900"><%= number_to_currency(order.total_amount) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Payment Summary -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="space-y-3">
            <% subtotal = @orders.sum { |o| o.total_amount - (o.shipping_cost || 0) } %>
            <% shipping = @orders.sum { |o| o.shipping_cost || 0 } %>
            
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Subtotal</span>
              <span class="text-gray-900"><%= number_to_currency(subtotal) %></span>
            </div>
            
            <% if shipping > 0 %>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Shipping</span>
                <span class="text-gray-900"><%= number_to_currency(shipping) %></span>
              </div>
            <% end %>
            
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Tax (5%)</span>
              <span class="text-gray-900"><%= number_to_currency(@total * 0.05 / 1.05) %></span>
            </div>
            
            <div class="pt-3 border-t border-gray-200">
              <div class="flex justify-between">
                <span class="text-lg font-semibold text-gray-900">Total Paid</span>
                <span class="text-2xl font-bold text-emerald-600"><%= number_to_currency(@total) %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Payment Info Card -->
    <div class="bg-white rounded-2xl shadow-lg shadow-gray-200/50 overflow-hidden mb-6">
      <div class="px-6 py-4 border-b border-gray-100">
        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
          Payment Information
        </h2>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-2 gap-6">
          <div>
            <p class="text-sm text-gray-500">Payment Method</p>
            <p class="mt-1 font-medium text-gray-900 capitalize flex items-center">
              <% case @order.payment_processor %>
              <% when 'credit_card' %>
                <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
                Credit Card
              <% when 'paypal' %>
                <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2z"/>
                </svg>
                PayPal
              <% when 'mobile_money' %>
                <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
                Mobile Money
              <% else %>
                <%= @order.payment_processor&.humanize || 'Credit Card' %>
              <% end %>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Payment Status</p>
            <p class="mt-1">
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-sm font-medium bg-emerald-100 text-emerald-700">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <%= @order.payment_status&.humanize || 'Paid' %>
              </span>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Transaction ID</p>
            <p class="mt-1 font-mono text-sm text-gray-900 break-all"><%= @order.transaction_id || @order.payment_id %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Order Status</p>
            <p class="mt-1">
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-sm font-medium <%= @order.status == 'completed' ? 'bg-emerald-100 text-emerald-700' : 'bg-blue-100 text-blue-700' %>">
                <%= @order.status&.humanize || 'Processing' %>
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Digital Downloads Section (if applicable) -->
    <% digital_orders = @orders.select { |o| o.product&.is_digital? } %>
    <% if digital_orders.any? %>
      <div class="bg-gradient-to-br from-purple-50 to-indigo-50 rounded-2xl shadow-lg shadow-purple-200/30 overflow-hidden mb-6 border border-purple-100">
        <div class="px-6 py-4 border-b border-purple-200/50 bg-purple-100/30">
          <h2 class="text-lg font-semibold text-purple-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
            </svg>
            Your Downloads Are Ready!
          </h2>
        </div>
        <div class="p-6 space-y-4">
          <% digital_orders.each do |order| %>
            <% order.download_links.each do |download_link| %>
              <div class="flex items-center justify-between p-4 bg-white rounded-xl border border-purple-100">
                <div>
                  <p class="font-medium text-purple-900"><%= order.product.name %></p>
                  <p class="text-sm text-purple-600 mt-1">
                    <% if download_link.download_limit.present? %>
                      <%= download_link.download_limit %> downloads available
                    <% end %>
                    <% if download_link.expires_at.present? %>
                      Â· Expires <%= download_link.expires_at.strftime("%B %d, %Y") %>
                    <% end %>
                  </p>
                </div>
                <%= link_to download_file_path(download_link.token), class: "inline-flex items-center px-5 py-2.5 bg-purple-600 text-white font-medium rounded-xl hover:bg-purple-700 transition-all shadow-md hover:shadow-lg" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                  </svg>
                  Download Now
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- What's Next Section -->
    <div class="bg-white rounded-2xl shadow-lg shadow-gray-200/50 overflow-hidden mb-6">
      <div class="px-6 py-4 border-b border-gray-100">
        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          What Happens Next?
        </h2>
      </div>
      <div class="p-6">
        <div class="space-y-6">
          <!-- Step 1 -->
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="font-medium text-gray-900">Confirmation Email Sent</h3>
              <p class="text-sm text-gray-500 mt-1">We've sent a confirmation email to <strong><%= current_user.email %></strong> with your order details and receipt.</p>
            </div>
          </div>
          
          <% if digital_orders.any? %>
            <!-- Step 2 - Digital -->
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="font-medium text-gray-900">Download Your Files</h3>
                <p class="text-sm text-gray-500 mt-1">Your digital products are ready for download. You can access them anytime from your <%= link_to "Downloads page", account_downloads_path, class: "text-purple-600 hover:text-purple-700 underline" %>.</p>
              </div>
            </div>
          <% end %>
          
          <% physical_orders = @orders.reject { |o| o.product&.is_digital? } %>
          <% if physical_orders.any? %>
            <!-- Step 2 - Physical -->
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="font-medium text-gray-900">Order Processing</h3>
                <p class="text-sm text-gray-500 mt-1">Your order is being prepared for shipment. You'll receive a shipping confirmation with tracking information once it's on its way.</p>
              </div>
            </div>
          <% end %>
          
          <!-- Track Order -->
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 rounded-full bg-teal-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="font-medium text-gray-900">Track Your Order</h3>
              <p class="text-sm text-gray-500 mt-1">You can track your order status anytime from your <%= link_to "Order History", account_orders_path, class: "text-teal-600 hover:text-teal-700 underline" %>.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to account_orders_path, class: "inline-flex items-center justify-center px-6 py-3.5 bg-white border border-gray-200 text-gray-700 font-semibold rounded-xl hover:bg-gray-50 transition-all shadow-sm" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        View My Orders
      <% end %>
      
      <%= link_to products_path, class: "inline-flex items-center justify-center px-6 py-3.5 bg-gradient-to-r from-emerald-500 to-teal-500 text-white font-semibold rounded-xl hover:from-emerald-600 hover:to-teal-600 transition-all shadow-md hover:shadow-lg" do %>
        Continue Shopping
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      <% end %>
    </div>

    <!-- Help Section -->
    <div class="mt-10 text-center">
      <p class="text-gray-500">
        Need help? <%= link_to "Contact our support team", contact_path, class: "text-teal-600 hover:text-teal-700 underline" %>
      </p>
    </div>
  </div>
</div>

<style>
  @keyframes bounce-slow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  .animate-bounce-slow {
    animation: bounce-slow 2s ease-in-out infinite;
  }
</style>
