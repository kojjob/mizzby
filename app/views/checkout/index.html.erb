<%= content_for :title, "Checkout" %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-indigo-50/30 to-purple-50/30 py-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Checkout</h1>
        <p class="mt-1 text-gray-600">Complete your purchase securely</p>
      </div>
      <div class="flex items-center text-sm text-gray-500">
        <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        Secure SSL Encryption
      </div>
    </div>

    <%= form_with url: checkout_create_path, method: :post, local: true, id: "checkout-form", data: { turbo: false } do |form| %>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column: Order Summary & Payment Details -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Order Summary -->
          <div class="bg-white rounded-2xl shadow-lg shadow-gray-200/50 overflow-hidden">
            <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-fuchsia-600 text-white px-6 py-4">
              <div class="flex items-center justify-between">
                <h2 class="text-xl font-bold flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                  </svg>
                  Order Summary
                </h2>
                <span class="px-3 py-1 bg-white/20 rounded-full text-sm"><%= @cart_items.count %> <%= 'item'.pluralize(@cart_items.count) %></span>
              </div>
            </div>
            
            <div class="divide-y divide-gray-100">
              <% @cart_items.each do |item| %>
                <div class="flex items-start gap-4 p-6 hover:bg-gray-50/50 transition-colors">
                  <!-- Product Image -->
                  <div class="flex-shrink-0 w-24 h-24 bg-gray-100 rounded-xl overflow-hidden shadow-sm">
                    <% if item.product.cover_image&.attached? %>
                      <%= image_tag item.product.cover_image, class: "w-full h-full object-cover" %>
                    <% elsif item.product.product_images.any? %>
                      <%= image_tag item.product.product_images.first.image, class: "w-full h-full object-cover" %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-200 to-gray-300">
                        <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Product Info -->
                  <div class="flex-1 min-w-0">
                    <div class="flex justify-between items-start">
                      <div>
                        <h3 class="font-semibold text-gray-900">
                          <%= link_to item.product.name, product_path(item.product), class: "hover:text-indigo-600 transition-colors" %>
                        </h3>
                        <div class="mt-2 flex flex-wrap gap-2">
                          <% if item.product.is_digital %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-700">
                              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                              </svg>
                              Digital Download
                            </span>
                          <% else %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                              </svg>
                              Physical
                            </span>
                          <% end %>
                        </div>
                        <p class="mt-2 text-sm text-gray-500">Qty: <%= item.quantity || 1 %></p>
                      </div>
                      
                      <div class="text-right">
                        <% if item.product.on_sale? %>
                          <p class="text-sm text-gray-400 line-through"><%= number_to_currency(item.product.price) %></p>
                          <p class="text-lg font-bold text-indigo-600"><%= number_to_currency(item.product.discounted_price) %></p>
                        <% else %>
                          <p class="text-lg font-bold text-gray-900"><%= number_to_currency(item.product.price) %></p>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Payment Method Selection -->
          <div class="bg-white rounded-2xl shadow-lg shadow-gray-200/50 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100">
              <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
                Payment Method
              </h2>
            </div>
            
            <div class="p-6">
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
                <!-- Credit Card Option -->
                <label class="payment-option relative cursor-pointer" data-payment="credit_card">
                  <%= form.radio_button :payment_method, "credit_card", class: "sr-only peer", checked: true, data: { payment_toggle: true } %>
                  <div class="p-4 border-2 rounded-xl transition-all peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:border-indigo-300">
                    <div class="flex items-center justify-center mb-2">
                      <svg class="w-8 h-8 text-gray-600 peer-checked:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                      </svg>
                    </div>
                    <p class="text-center text-sm font-medium text-gray-900">Credit Card</p>
                    <div class="flex justify-center gap-1 mt-2">
                      <div class="w-8 h-5 bg-blue-600 rounded text-white text-xs flex items-center justify-center font-bold">VISA</div>
                      <div class="w-8 h-5 bg-red-500 rounded text-white text-xs flex items-center justify-center font-bold">MC</div>
                      <div class="w-8 h-5 bg-blue-400 rounded text-white text-xs flex items-center justify-center font-bold">AMEX</div>
                    </div>
                  </div>
                </label>

                <!-- PayPal Option -->
                <label class="payment-option relative cursor-pointer" data-payment="paypal">
                  <%= form.radio_button :payment_method, "paypal", class: "sr-only peer", data: { payment_toggle: true } %>
                  <div class="p-4 border-2 rounded-xl transition-all peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:border-indigo-300">
                    <div class="flex items-center justify-center mb-2">
                      <svg class="w-8 h-8 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M7.076 21.337H2.47a.641.641 0 0 1-.633-.74L4.944.901C5.026.382 5.474 0 5.998 0h7.46c2.57 0 4.578.543 5.69 1.81 1.01 1.15 1.304 2.42 1.012 4.287-.023.143-.047.288-.077.437-.983 5.05-4.349 6.797-8.647 6.797h-2.19c-.524 0-.968.382-1.05.9l-1.12 7.106z"/>
                      </svg>
                    </div>
                    <p class="text-center text-sm font-medium text-gray-900">PayPal</p>
                    <p class="text-center text-xs text-gray-500 mt-2">Pay securely</p>
                  </div>
                </label>

                <!-- Mobile Money Option -->
                <label class="payment-option relative cursor-pointer" data-payment="mobile_money">
                  <%= form.radio_button :payment_method, "mobile_money", class: "sr-only peer", data: { payment_toggle: true } %>
                  <div class="p-4 border-2 rounded-xl transition-all peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:border-indigo-300">
                    <div class="flex items-center justify-center mb-2">
                      <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <p class="text-center text-sm font-medium text-gray-900">Mobile Money</p>
                    <p class="text-center text-xs text-gray-500 mt-2">MTN, Vodafone, etc.</p>
                  </div>
                </label>
              </div>

              <!-- Credit Card Form Fields -->
              <div id="credit-card-fields" class="payment-fields space-y-4 pt-4 border-t border-gray-200">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Cardholder Name</label>
                  <%= form.text_field :card_name, 
                      class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                      placeholder: "John Doe",
                      autocomplete: "cc-name" %>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Card Number</label>
                  <div class="relative">
                    <%= form.text_field :card_number, 
                        class: "w-full px-4 py-3 pr-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                        placeholder: "1234 5678 9012 3456",
                        autocomplete: "cc-number",
                        maxlength: 19,
                        id: "card-number-input" %>
                    <div id="card-type-icon" class="absolute right-3 top-1/2 -translate-y-1/2">
                      <svg class="w-8 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                      </svg>
                    </div>
                  </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Expiry Date</label>
                    <%= form.text_field :card_expiry, 
                        class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                        placeholder: "MM/YY",
                        autocomplete: "cc-exp",
                        maxlength: 5,
                        id: "card-expiry-input" %>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">CVV</label>
                    <div class="relative">
                      <%= form.password_field :card_cvv, 
                          class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                          placeholder: "123",
                          autocomplete: "cc-csc",
                          maxlength: 4 %>
                      <div class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 cursor-help" title="3 or 4 digit security code on the back of your card">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Save Card Option -->
                <label class="flex items-center gap-3 p-3 bg-gray-50 rounded-xl cursor-pointer hover:bg-gray-100 transition-colors">
                  <%= form.check_box :save_card, class: "w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
                  <span class="text-sm text-gray-700">Save this card for future purchases</span>
                </label>
              </div>

              <!-- PayPal Fields -->
              <div id="paypal-fields" class="payment-fields hidden pt-4 border-t border-gray-200">
                <div class="text-center py-8 bg-gray-50 rounded-xl">
                  <svg class="w-16 h-16 mx-auto text-blue-600 mb-4" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M7.076 21.337H2.47a.641.641 0 0 1-.633-.74L4.944.901C5.026.382 5.474 0 5.998 0h7.46c2.57 0 4.578.543 5.69 1.81 1.01 1.15 1.304 2.42 1.012 4.287-.023.143-.047.288-.077.437-.983 5.05-4.349 6.797-8.647 6.797h-2.19c-.524 0-.968.382-1.05.9l-1.12 7.106z"/>
                  </svg>
                  <p class="text-gray-600 mb-2">You'll be redirected to PayPal to complete your payment securely.</p>
                  <p class="text-sm text-gray-500">Click "Complete Order" to continue</p>
                </div>
              </div>

              <!-- Mobile Money Fields -->
              <div id="mobile-money-fields" class="payment-fields hidden space-y-4 pt-4 border-t border-gray-200">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Select Provider</label>
                  <div class="grid grid-cols-3 gap-3">
                    <label class="cursor-pointer">
                      <%= form.radio_button :mobile_provider, "mtn", class: "sr-only peer" %>
                      <div class="p-3 border-2 rounded-xl text-center peer-checked:border-yellow-500 peer-checked:bg-yellow-50 hover:border-yellow-300 transition-colors">
                        <div class="w-10 h-10 mx-auto bg-yellow-400 rounded-full flex items-center justify-center mb-1">
                          <span class="font-bold text-black text-xs">MTN</span>
                        </div>
                        <p class="text-xs font-medium">MTN MoMo</p>
                      </div>
                    </label>
                    <label class="cursor-pointer">
                      <%= form.radio_button :mobile_provider, "vodafone", class: "sr-only peer" %>
                      <div class="p-3 border-2 rounded-xl text-center peer-checked:border-red-500 peer-checked:bg-red-50 hover:border-red-300 transition-colors">
                        <div class="w-10 h-10 mx-auto bg-red-600 rounded-full flex items-center justify-center mb-1">
                          <span class="font-bold text-white text-xs">VF</span>
                        </div>
                        <p class="text-xs font-medium">Vodafone Cash</p>
                      </div>
                    </label>
                    <label class="cursor-pointer">
                      <%= form.radio_button :mobile_provider, "airteltigo", class: "sr-only peer" %>
                      <div class="p-3 border-2 rounded-xl text-center peer-checked:border-blue-500 peer-checked:bg-blue-50 hover:border-blue-300 transition-colors">
                        <div class="w-10 h-10 mx-auto bg-blue-600 rounded-full flex items-center justify-center mb-1">
                          <span class="font-bold text-white text-xs">AT</span>
                        </div>
                        <p class="text-xs font-medium">AirtelTigo</p>
                      </div>
                    </label>
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Mobile Number</label>
                  <%= form.text_field :mobile_number, 
                      class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                      placeholder: "024 XXX XXXX",
                      type: "tel" %>
                  <p class="mt-1 text-xs text-gray-500">Enter the mobile number linked to your mobile money account</p>
                </div>
              </div>
            </div>
          </div>

          <%# Guest Email (for non-logged-in users) %>
          <% unless user_signed_in? %>
            <div class="bg-white rounded-2xl shadow-lg shadow-gray-200/50 overflow-hidden">
              <div class="px-6 py-4 border-b border-gray-100">
                <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                  Contact Information
                </h2>
              </div>
              <div class="p-6 space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Email Address <span class="text-red-500">*</span></label>
                  <%= form.email_field :guest_email, 
                      class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                      placeholder: "your@email.com",
                      required: true %>
                  <p class="mt-1 text-xs text-gray-500">We'll send your order confirmation and receipt to this email</p>
                </div>
                <div class="p-4 bg-indigo-50 rounded-xl">
                  <p class="text-sm text-indigo-700">
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Already have an account? <%= link_to "Sign in", new_user_session_path, class: "font-medium underline hover:text-indigo-800" %> for faster checkout.
                  </p>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Shipping Address (for physical products) -->
          <% has_physical = @cart_items.any? { |item| !item.product.is_digital } %>
          <% if has_physical %>
            <div class="bg-white rounded-2xl shadow-lg shadow-gray-200/50 overflow-hidden">
              <div class="px-6 py-4 border-b border-gray-100">
                <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  Shipping Address
                  <span class="ml-2 text-xs text-red-500 font-normal">(Required for physical products)</span>
                </h2>
              </div>
              <div class="p-6 space-y-4">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">First Name <span class="text-red-500">*</span></label>
                    <%= form.text_field :shipping_first_name, 
                        value: current_user&.first_name,
                        required: true,
                        class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Last Name <span class="text-red-500">*</span></label>
                    <%= form.text_field :shipping_last_name, 
                        value: current_user&.last_name,
                        required: true,
                        class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Street Address <span class="text-red-500">*</span></label>
                  <%= form.text_field :shipping_address, 
                      required: true,
                      class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                      placeholder: "123 Main Street" %>
                </div>
                
                <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">City <span class="text-red-500">*</span></label>
                    <%= form.text_field :shipping_city, 
                        required: true,
                        class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Region/State <span class="text-red-500">*</span></label>
                    <%= form.text_field :shipping_state, 
                        required: true,
                        class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Postal Code</label>
                    <%= form.text_field :shipping_zip, 
                        class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                  <%= form.text_field :shipping_phone, 
                      value: current_user&.phone_number,
                      class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                      type: "tel" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Right Column: Order Total & Submit -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-2xl shadow-lg shadow-gray-200/50 overflow-hidden sticky top-6">
            <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-fuchsia-600 text-white px-6 py-4">
              <h2 class="text-xl font-bold">Order Total</h2>
            </div>
            
            <div class="p-6 space-y-4">
              <% subtotal = @cart_items.sum { |item| (item.product.discounted_price || item.product.price) * (item.quantity || 1) } %>
              <% shipping = has_physical ? 15.00 : 0 %>
              <% tax = subtotal * 0.05 %>
              <% total = subtotal + tax + shipping %>
              
              <div class="space-y-3">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Subtotal</span>
                  <span class="text-gray-900"><%= number_to_currency(subtotal) %></span>
                </div>
                
                <% if has_physical %>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600">Shipping</span>
                    <span class="text-gray-900"><%= number_to_currency(shipping) %></span>
                  </div>
                <% end %>
                
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Tax (5%)</span>
                  <span class="text-gray-900"><%= number_to_currency(tax) %></span>
                </div>
                
                <div class="pt-3 border-t border-gray-200">
                  <div class="flex justify-between">
                    <span class="text-lg font-semibold text-gray-900">Total</span>
                    <span class="text-2xl font-bold text-indigo-600"><%= number_to_currency(total) %></span>
                  </div>
                </div>
              </div>
              
              <!-- Promo Code -->
              <div class="pt-4 border-t border-gray-200">
                <button type="button" class="text-sm text-indigo-600 hover:text-indigo-700 flex items-center" onclick="document.getElementById('promo-field').classList.toggle('hidden')">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                  </svg>
                  Have a promo code?
                </button>
                <div id="promo-field" class="hidden mt-3">
                  <div class="flex gap-2">
                    <%= form.text_field :promo_code, 
                        class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
                        placeholder: "Enter code" %>
                    <button type="button" class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors">
                      Apply
                    </button>
                  </div>
                </div>
              </div>
              
              <!-- Security Badges -->
              <div class="flex items-center justify-center gap-4 py-4 border-t border-gray-200">
                <div class="flex items-center text-xs text-gray-500">
                  <svg class="w-4 h-4 mr-1 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                  SSL Secure
                </div>
                <div class="flex items-center text-xs text-gray-500">
                  <svg class="w-4 h-4 mr-1 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                  Encrypted
                </div>
              </div>
              
              <!-- Submit Button -->
              <%= form.submit "Complete Order", 
                  class: "w-full py-4 px-6 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-lg font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all shadow-lg hover:shadow-xl cursor-pointer flex items-center justify-center gap-2",
                  id: "submit-btn" %>
              
              <!-- Back to Cart -->
              <%= link_to current_cart_path, class: "block w-full py-3 px-4 bg-gray-100 text-gray-700 text-center font-medium rounded-xl hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 transition-colors mt-3" do %>
                <span class="flex items-center justify-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                  </svg>
                  Return to Cart
                </span>
              <% end %>
              
              <!-- Terms -->
              <p class="text-xs text-gray-500 text-center mt-4">
                By completing this purchase you agree to our 
                <%= link_to "Terms of Service", term_of_service_path, class: "text-indigo-600 hover:underline" %> 
                and 
                <%= link_to "Privacy Policy", privacy_policy_path, class: "text-indigo-600 hover:underline" %>.
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Payment method toggle
  const paymentRadios = document.querySelectorAll('[data-payment-toggle]');
  const creditCardFields = document.getElementById('credit-card-fields');
  const paypalFields = document.getElementById('paypal-fields');
  const mobilemoneyFields = document.getElementById('mobile-money-fields');
  
  function togglePaymentFields() {
    const selectedMethod = document.querySelector('[data-payment-toggle]:checked')?.value;
    
    creditCardFields.classList.add('hidden');
    paypalFields.classList.add('hidden');
    mobilemoneyFields.classList.add('hidden');
    
    if (selectedMethod === 'credit_card') {
      creditCardFields.classList.remove('hidden');
    } else if (selectedMethod === 'paypal') {
      paypalFields.classList.remove('hidden');
    } else if (selectedMethod === 'mobile_money') {
      mobilemoneyFields.classList.remove('hidden');
    }
  }
  
  paymentRadios.forEach(radio => {
    radio.addEventListener('change', togglePaymentFields);
  });
  
  // Initialize
  togglePaymentFields();
  
  // Card number formatting
  const cardNumberInput = document.getElementById('card-number-input');
  if (cardNumberInput) {
    cardNumberInput.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\s/g, '').replace(/\D/g, '');
      let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
      e.target.value = formattedValue;
      
      // Detect card type
      const cardTypeIcon = document.getElementById('card-type-icon');
      if (value.startsWith('4')) {
        cardTypeIcon.innerHTML = '<div class="w-8 h-5 bg-blue-600 rounded text-white text-xs flex items-center justify-center font-bold">VISA</div>';
      } else if (value.startsWith('5') || value.startsWith('2')) {
        cardTypeIcon.innerHTML = '<div class="w-8 h-5 bg-red-500 rounded text-white text-xs flex items-center justify-center font-bold">MC</div>';
      } else if (value.startsWith('3')) {
        cardTypeIcon.innerHTML = '<div class="w-8 h-5 bg-blue-400 rounded text-white text-xs flex items-center justify-center font-bold">AMEX</div>';
      } else {
        cardTypeIcon.innerHTML = '<svg class="w-8 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/></svg>';
      }
    });
  }
  
  // Expiry date formatting
  const expiryInput = document.getElementById('card-expiry-input');
  if (expiryInput) {
    expiryInput.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\D/g, '');
      if (value.length >= 2) {
        value = value.substring(0, 2) + '/' + value.substring(2, 4);
      }
      e.target.value = value;
    });
  }
});
</script>
