<% content_for :title, "Checkout" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Checkout</h1>
  
  <%= form_with url: checkout_create_path, method: :post, local: true, class: "grid grid-cols-1 lg:grid-cols-3 gap-8" do |form| %>
    <!-- Order Summary -->
    <div class="lg:col-span-2 bg-white rounded-xl shadow-md overflow-hidden">
      <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-fuchsia-600 text-white p-4">
        <h2 class="text-xl font-bold">Order Summary</h2>
        <p class="text-indigo-100 text-sm"><%= @cart_items.count %> <%= 'item'.pluralize(@cart_items.count) %> in your cart</p>
      </div>
      
      <div class="p-4">
        <!-- Cart Items -->
        <div class="space-y-4">
          <% @cart_items.each do |item| %>
            <div class="flex items-start border-b border-gray-100 pb-4">
              <!-- Product Image -->
              <div class="flex-shrink-0 w-20 h-20 bg-gray-100 rounded-md overflow-hidden">
                <% if item.product.product_images.any? %>
                  <%= image_tag item.product.product_images.first.image, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center bg-gray-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                <% end %>
              </div>
              
              <!-- Product Info -->
              <div class="ml-4 flex-1">
                <div class="flex justify-between">
                  <h3 class="text-sm font-medium text-gray-900">
                    <%= link_to item.product.name, product_path(item.product), class: "hover:text-indigo-600" %>
                  </h3>
                  <p class="text-sm font-medium text-gray-900">
                    <% if item.product.on_sale? %>
                      <span class="line-through text-gray-500 mr-2"><%= number_to_currency(item.product.price) %></span>
                      <%= number_to_currency(item.product.discounted_price) %>
                    <% else %>
                      <%= number_to_currency(item.product.price) %>
                    <% end %>
                  </p>
                </div>
                
                <!-- Digital Badge -->
                <% if item.product.is_digital %>
                  <span class="inline-flex items-center px-2 py-0.5 mt-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    Digital
                  </span>
                <% end %>
                
                <!-- Quantity -->
                <div class="mt-1 text-sm text-gray-600">
                  Quantity: <%= item.quantity || 1 %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Payment Summary -->
    <div class="lg:col-span-1 bg-white rounded-xl shadow-md overflow-hidden h-fit">
      <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-fuchsia-600 text-white p-4">
        <h2 class="text-xl font-bold">Payment Summary</h2>
      </div>
      
      <div class="p-4 space-y-4">
        <% subtotal = @cart_items.sum { |item| (item.product.discounted_price || item.product.price) * (item.quantity || 1) } %>
        <% tax = subtotal * 0.05 %>
        <% total = subtotal + tax %>
        
        <div class="flex justify-between text-sm text-gray-600 border-b border-gray-100 pb-2">
          <span>Subtotal</span>
          <span><%= number_to_currency(subtotal) %></span>
        </div>
        
        <div class="flex justify-between text-sm text-gray-600 border-b border-gray-100 pb-2">
          <span>Tax (5%)</span>
          <span><%= number_to_currency(tax) %></span>
        </div>
        
        <div class="flex justify-between font-semibold text-gray-900 pt-2">
          <span>Total</span>
          <span class="text-indigo-600">
            <%= number_to_currency(total) %>
          </span>
        </div>
        
        <!-- Payment Method Selection -->
        <div class="mt-4">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Payment Method</h3>
          
          <div class="space-y-2">
            <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:border-indigo-500 cursor-pointer transition-colors has-[:checked]:border-indigo-500 has-[:checked]:bg-indigo-50">
              <%= form.radio_button :payment_method, "credit_card", class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300", checked: true %>
              <span class="ml-3 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
                Credit Card
              </span>
            </label>
            
            <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:border-indigo-500 cursor-pointer transition-colors has-[:checked]:border-indigo-500 has-[:checked]:bg-indigo-50">
              <%= form.radio_button :payment_method, "paypal", class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
              <span class="ml-3 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2z" />
                </svg>
                PayPal
              </span>
            </label>
            
            <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:border-indigo-500 cursor-pointer transition-colors has-[:checked]:border-indigo-500 has-[:checked]:bg-indigo-50">
              <%= form.radio_button :payment_method, "mobile_money", class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
              <span class="ml-3 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                Mobile Money
              </span>
            </label>
          </div>
        </div>
        
        <!-- Complete Order Button -->
        <%= form.submit "Complete Order", class: "w-full py-3 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-center font-medium rounded-md hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors mt-6 cursor-pointer" %>
        
        <!-- Return to Cart -->
        <%= link_to "Return to Cart", current_cart_path, class: "block w-full py-3 px-4 bg-gray-100 text-gray-800 text-center font-medium rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors mt-2" %>
      </div>
    </div>
  <% end %>
</div>
