<%= form_with(model: seller, class: "contents") do |form| %>
  <% if seller.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(seller.errors.count, "error") %> prohibited this seller from being saved:</h2>

      <ul class="list-disc ml-6">
        <% seller.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:user_id].none?, "border-red-400 focus:outline-red-600": seller.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :business_name %>
    <%= form.text_field :business_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:business_name].none?, "border-red-400 focus:outline-red-600": seller.errors[:business_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:description].none?, "border-red-400 focus:outline-red-600": seller.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :location %>
    <%= form.text_field :location, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:location].none?, "border-red-400 focus:outline-red-600": seller.errors[:location].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :country %>
    <%= form.text_field :country, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:country].none?, "border-red-400 focus:outline-red-600": seller.errors[:country].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:phone_number].none?, "border-red-400 focus:outline-red-600": seller.errors[:phone_number].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :verified %>
    <%= form.checkbox :verified, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": seller.errors[:verified].none?, "border-red-400 focus:outline-red-600": seller.errors[:verified].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :commission_rate %>
    <%= form.text_field :commission_rate, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:commission_rate].none?, "border-red-400 focus:outline-red-600": seller.errors[:commission_rate].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :acceptance_rate %>
    <%= form.text_field :acceptance_rate, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:acceptance_rate].none?, "border-red-400 focus:outline-red-600": seller.errors[:acceptance_rate].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :average_response_time %>
    <%= form.number_field :average_response_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:average_response_time].none?, "border-red-400 focus:outline-red-600": seller.errors[:average_response_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :bank_account_details %>
    <%= form.textarea :bank_account_details, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:bank_account_details].none?, "border-red-400 focus:outline-red-600": seller.errors[:bank_account_details].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :mobile_money_details %>
    <%= form.textarea :mobile_money_details, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": seller.errors[:mobile_money_details].none?, "border-red-400 focus:outline-red-600": seller.errors[:mobile_money_details].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
