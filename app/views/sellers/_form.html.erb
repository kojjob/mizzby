<%= form_with(model: seller, class: "max-w-4xl mx-auto", data: { controller: "seller-form", turbo: true }) do |form| %>
  <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
    <!-- Error Messages -->
    <% if seller.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6" role="alert" data-seller-form-target="errors">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(seller.errors.count, "error") %> prohibited this seller from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% seller.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="px-4 py-5 sm:px-6 space-y-6">
      <!-- Business Information Section -->
      <div>
        <h3 class="text-lg font-medium text-gray-900 border-b border-gray-200 pb-2 mb-4">Business Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-5">
          <!-- Business Name -->
          <div class="col-span-1 md:col-span-2">
            <%= form.label :business_name, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <%= form.text_field :business_name, class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:business_name].any? ? 'border-red-300' : ''}", placeholder: "Your Business Name" %>
            </div>
            <% if seller.errors[:business_name].any? %>
              <p class="mt-1 text-sm text-red-600"><%= seller.errors[:business_name].first %></p>
            <% end %>
          </div>

          <!-- Description -->
          <div class="col-span-1 md:col-span-2">
            <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_area :description, rows: 3, class: "shadow-sm block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:description].any? ? 'border-red-300' : ''}", placeholder: "Describe your business and what you sell" %>
            </div>
            <% if seller.errors[:description].any? %>
              <p class="mt-1 text-sm text-red-600"><%= seller.errors[:description].first %></p>
            <% else %>
              <p class="mt-1 text-xs text-gray-500">This description will be shown to customers on your seller profile.</p>
            <% end %>
          </div>

          <!-- Location -->
          <div>
            <%= form.label :location, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <%= form.text_field :location, class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:location].any? ? 'border-red-300' : ''}", placeholder: "City, State" %>
            </div>
            <% if seller.errors[:location].any? %>
              <p class="mt-1 text-sm text-red-600"><%= seller.errors[:location].first %></p>
            <% end %>
          </div>

          <!-- Country -->
          <div>
            <%= form.label :country, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
                </svg>
              </div>
              <%= form.select :country, 
                              ["Ghana", "Nigeria", "Kenya", "South Africa", "United States", "United Kingdom", "Canada"],
                              { include_blank: "Select a country" },
                              { class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:country].any? ? 'border-red-300' : ''}" } %>
            </div>
            <% if seller.errors[:country].any? %>
              <p class="mt-1 text-sm text-red-600"><%= seller.errors[:country].first %></p>
            <% end %>
          </div>

          <!-- Phone Number -->
          <div>
            <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <%= form.telephone_field :phone_number, class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:phone_number].any? ? 'border-red-300' : ''}", placeholder: "+1 (555) 987-6543" %>
            </div>
            <% if seller.errors[:phone_number].any? %>
              <p class="mt-1 text-sm text-red-600"><%= seller.errors[:phone_number].first %></p>
            <% else %>
              <p class="mt-1 text-xs text-gray-500">Business phone number for customer inquiries</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Payment Information Section -->
      <div>
        <h3 class="text-lg font-medium text-gray-900 border-b border-gray-200 pb-2 mb-4">Payment Details</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-5">
          <!-- Bank Account Details -->
          <div class="col-span-1 md:col-span-2">
            <%= form.label :bank_account_details, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_area :bank_account_details, rows: 3, class: "shadow-sm block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:bank_account_details].any? ? 'border-red-300' : ''}", placeholder: "Bank name, account number, account name, etc." %>
            </div>
            <% if seller.errors[:bank_account_details].any? %>
              <p class="mt-1 text-sm text-red-600"><%= seller.errors[:bank_account_details].first %></p>
            <% else %>
              <p class="mt-1 text-xs text-gray-500">Your bank account information for receiving payments</p>
            <% end %>
          </div>

          <!-- Mobile Money Details -->
          <div class="col-span-1 md:col-span-2">
            <%= form.label :mobile_money_details, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_area :mobile_money_details, rows: 3, class: "shadow-sm block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:mobile_money_details].any? ? 'border-red-300' : ''}", placeholder: "Mobile money provider, phone number, account name, etc." %>
            </div>
            <% if seller.errors[:mobile_money_details].any? %>
              <p class="mt-1 text-sm text-red-600"><%= seller.errors[:mobile_money_details].first %></p>
            <% else %>
              <p class="mt-1 text-xs text-gray-500">Alternative payment method through mobile money services</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Admin Section (conditional display) -->
      <% if current_user&.admin? %>
        <div class="border-t border-gray-200 pt-5">
          <h3 class="text-lg font-medium text-gray-900 border-b border-gray-200 pb-2 mb-4">Admin Settings</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-x-6 gap-y-5">
            <!-- User ID (hidden for non-admin) -->
            <div>
              <%= form.label :user_id, class: "block text-sm font-medium text-gray-700" %>
              <%= form.collection_select :user_id, User.all, :id, :email, 
                                { prompt: "Select a user" }, 
                                { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:user_id].any? ? 'border-red-300' : ''}" } %>
              <% if seller.errors[:user_id].any? %>
                <p class="mt-1 text-sm text-red-600"><%= seller.errors[:user_id].first %></p>
              <% end %>
            </div>

            <!-- Verification Status -->
            <div>
              <div class="flex items-center">
                <%= form.check_box :verified, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                <%= form.label :verified, "Verified Seller", class: "ml-2 block text-sm text-gray-700" %>
              </div>
              <p class="mt-1 text-xs text-gray-500">Mark this seller as verified</p>
            </div>

            <!-- Commission Rate -->
            <div>
              <%= form.label :commission_rate, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 sm:text-sm">%</span>
                </div>
                <%= form.number_field :commission_rate, step: "0.01", min: "0", max: "100", class: "pl-7 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{seller.errors[:commission_rate].any? ? 'border-red-300' : ''}", placeholder: "5.00" %>
              </div>
              <% if seller.errors[:commission_rate].any? %>
                <p class="mt-1 text-sm text-red-600"><%= seller.errors[:commission_rate].first %></p>
              <% else %>
                <p class="mt-1 text-xs text-gray-500">Commission percentage charged per sale</p>
              <% end %>
            </div>

            <!-- Performance Metrics (display only for existing sellers) -->
            <% if seller.persisted? %>
              <div>
                <%= form.label :acceptance_rate, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="text-gray-500 sm:text-sm">%</span>
                  </div>
                  <%= form.number_field :acceptance_rate, step: "0.01", min: "0", max: "100", class: "pl-7 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "95.00" %>
                </div>
                <p class="mt-1 text-xs text-gray-500">Rate at which seller accepts orders</p>
              </div>

              <div>
                <%= form.label :average_response_time, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                    <span class="text-gray-500 sm:text-sm">mins</span>
                  </div>
                  <%= form.number_field :average_response_time, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm pr-12", placeholder: "30" %>
                </div>
                <p class="mt-1 text-xs text-gray-500">Average time to respond to customer inquiries</p>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <%= form.hidden_field :user_id, value: current_user&.id || seller.user_id %>
      <% end %>
    </div>

    <!-- Form Actions -->
    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 space-x-3">
      <% if seller.persisted? %>
        <%= link_to "Cancel", seller_path(seller), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% else %>
        <%= link_to "Cancel", root_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>
      
      <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>