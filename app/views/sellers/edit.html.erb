<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <div class="flex items-center justify-between">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Edit Seller Profile
          </h3>
          <div>
            <%= link_to "Cancel", seller_dashboard_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
          </div>
        </div>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
          Update your seller profile information.
        </p>
      </div>
      
      <div class="px-4 py-5 sm:p-6">
        <% if @seller.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@seller.errors.count, "error") %> prohibited this seller profile from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @seller.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        
        <%= form_with(model: @seller, local: true, class: "space-y-6") do |form| %>
          <div>
            <h3 class="text-lg font-medium text-gray-900">Business Information</h3>
            <p class="mt-1 text-sm text-gray-500">
              This information will be displayed publicly on your seller profile.
            </p>
            
            <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
              <div class="sm:col-span-6">
                <%= form.label :business_name, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.text_field :business_name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
              </div>
              
              <div class="sm:col-span-6">
                <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.text_area :description, rows: 4, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                  Brief description of your business or the products you sell.
                </p>
              </div>
              
              <div class="sm:col-span-3">
                <%= form.label :location, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.text_field :location, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
              </div>
              
              <div class="sm:col-span-3">
                <%= form.label :country, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.select :country, 
                                 [["Ghana", "Ghana"], ["Nigeria", "Nigeria"], ["Other", "Other"]], 
                                 { include_blank: "Select country" }, 
                                 { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
                </div>
              </div>
              
              <div class="sm:col-span-3">
                <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.telephone_field :phone_number, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                  Your business phone number (will not be shared publicly).
                </p>
              </div>
            </div>
          </div>
          
          <div class="pt-6">
            <h3 class="text-lg font-medium text-gray-900">Payment Information</h3>
            <p class="mt-1 text-sm text-gray-500">
              We need this information to send you payments. This information is encrypted and securely stored.
            </p>
            
            <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
              <div class="sm:col-span-6">
                <%= form.label :bank_account_details, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.text_area :bank_account_details, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                  We'll use this information to send your payments. This is encrypted and stored securely.
                </p>
              </div>
              
              <div class="sm:col-span-6">
                <%= form.label :mobile_money_details, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.text_area :mobile_money_details, rows: 2, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                  Alternative payment method. Leave blank if you prefer bank transfers only.
                </p>
              </div>
            </div>
          </div>
          
          <div class="bg-indigo-50 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-indigo-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-indigo-800">Account Status</h3>
                <div class="mt-2 text-sm text-indigo-700">
                  <% if @seller.verified? %>
                    <p>Your seller account is verified. Current commission rate: <%= number_to_percentage(@seller.commission_rate, precision: 1) %></p>
                  <% else %>
                    <p>Your seller account is pending verification. Once verified, you'll be able to receive payments for your sales.</p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          
          <div class="pt-5">
            <div class="flex justify-end">
              <%= link_to "Cancel", seller_dashboard_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <%= form.submit "Update Profile", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
