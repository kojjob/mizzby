<% content_for :page_title, "Product Details" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-800"><%= @product.name %></h1>
      <p class="text-gray-600">Product ID: <%= @product.id %></p>
    </div>
    <div class="flex space-x-2">
      <%= link_to edit_admin_product_path(@product), class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Product
      <% end %>
      
      <%= link_to admin_products_path, class: "bg-gray-100 text-gray-700 hover:bg-gray-200 px-4 py-2 rounded-md text-sm font-medium flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
        </svg>
        Back to Products
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Main Content Column -->
    <div class="md:col-span-2 space-y-6">
      <!-- Product Images -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
          <h3 class="font-medium text-gray-900">Product Images</h3>
        </div>
        <div class="p-4">
          <% if @product_images.any? %>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
              <% @product_images.each do |image| %>
                <div class="relative group">
                  <% if image.image.attached? %>
                    <div class="aspect-square rounded-lg overflow-hidden bg-gray-100">
                      <%= image_tag image.image, class: "w-full h-full object-cover" %>
                    </div>
                  <% else %>
                    <div class="aspect-square rounded-lg overflow-hidden bg-gray-100 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No images</h3>
              <p class="mt-1 text-sm text-gray-500">This product doesn't have any images yet.</p>
              <div class="mt-6">
                <%= link_to edit_admin_product_path(@product), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                  Add Images
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Product Description -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
          <h3 class="font-medium text-gray-900">Description</h3>
        </div>
        <div class="p-4">
          <% if @product.description.present? %>
            <div class="prose max-w-none">
              <%= simple_format(@product.description) %>
            </div>
          <% else %>
            <p class="text-gray-500 italic">No description provided</p>
          <% end %>
        </div>
      </div>

      <!-- Product Reviews -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200 flex justify-between items-center">
          <h3 class="font-medium text-gray-900">Recent Reviews</h3>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= @reviews.count %> Reviews
          </span>
        </div>
        <div class="divide-y divide-gray-200">
          <% if @reviews.any? %>
            <% @reviews.each do |review| %>
              <div class="p-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <% if review.user&.profile_picture&.attached? %>
                      <%= image_tag review.user.profile_picture, class: "h-10 w-10 rounded-full" %>
                    <% else %>
                      <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-3 flex-1">
                    <div class="flex items-center justify-between">
                      <h4 class="text-sm font-medium text-gray-900">
                        <%= review.user ? "#{review.user.first_name} #{review.user.last_name}" : "Anonymous" %>
                      </h4>
                      <p class="text-xs text-gray-500"><%= review.created_at.strftime("%b %d, %Y") %></p>
                    </div>
                    <div class="flex items-center mt-1">
                      <% (1..5).each do |i| %>
                        <% if i <= review.rating %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                        <% else %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="mt-2 text-sm text-gray-700">
                      <%= review.content %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="p-4 text-center">
              <p class="text-gray-500">No reviews yet</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Orders -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200 flex justify-between items-center">
          <h3 class="font-medium text-gray-900">Recent Orders</h3>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <%= @orders.count %> Orders
          </span>
        </div>
        <div class="overflow-x-auto">
          <% if @orders.any? %>
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                  <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @orders.each do |order| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#<%= order.id %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= order.user ? "#{order.user.first_name} #{order.user.last_name}" : "Guest" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= number_to_currency(order.total_amount) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% status_colors = {
                        'pending' => 'bg-yellow-100 text-yellow-800',
                        'processing' => 'bg-blue-100 text-blue-800',
                        'paid' => 'bg-green-100 text-green-800',
                        'completed' => 'bg-green-100 text-green-800',
                        'cancelled' => 'bg-red-100 text-red-800',
                        'refunded' => 'bg-gray-100 text-gray-800'
                      } %>
                      <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_colors[order.status.to_s.downcase] || 'bg-gray-100 text-gray-800' %>">
                        <%= order.status.present? ? order.status.titleize : 'Unknown' %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= order.created_at.strftime("%b %d, %Y") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <%= link_to admin_order_path(order), class: "text-indigo-600 hover:text-indigo-900" do %>
                        View
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="p-4 text-center">
              <p class="text-gray-500">No orders yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar Information -->
    <div class="md:col-span-1 space-y-6">
      <!-- Product Status -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
          <h3 class="font-medium text-gray-900">Status</h3>
        </div>
        <div class="p-4">
          <div class="flex justify-between items-center">
            <div class="flex items-center">
              <% status_colors = {
                'active' => 'bg-green-100 text-green-800',
                'inactive' => 'bg-red-100 text-red-800',
                'draft' => 'bg-yellow-100 text-yellow-800'
              } %>
              <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_colors[@product.status.to_s.downcase] || 'bg-gray-100 text-gray-800' %>">
                <%= @product.status.present? ? @product.status.titleize : 'Unknown' %>
              </span>
              <% if @product.featured? %>
                <span class="ml-2 px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                  Featured
                </span>
              <% end %>
            </div>
            <div>
              <%= button_to toggle_status_admin_product_path(@product), method: :post, form: { data: { turbo: false } }, class: "text-sm text-indigo-600 hover:text-indigo-900" do %>
                <%= @product.status == 'active' ? 'Deactivate' : 'Activate' %>
              <% end %>
            </div>
          </div>
          <div class="mt-4 flex justify-between items-center">
            <span class="text-sm text-gray-500">Featured Product</span>
            <div>
              <%= button_to toggle_featured_admin_product_path(@product), method: :post, form: { data: { turbo: false } }, class: "text-sm text-indigo-600 hover:text-indigo-900" do %>
                <%= @product.featured? ? 'Remove Featured' : 'Make Featured' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Product Details -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
          <h3 class="font-medium text-gray-900">Product Details</h3>
        </div>
        <div class="p-4 space-y-4">
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Price</span>
            <span class="text-sm font-medium text-gray-900"><%= number_to_currency(@product.price) %></span>
          </div>
          
          <% if @product.discounted_price.present? && @product.discounted_price < @product.price %>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Discounted Price</span>
              <span class="text-sm font-medium text-red-600"><%= number_to_currency(@product.discounted_price) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Discount</span>
              <span class="text-sm font-medium text-green-600">
                <%= number_to_percentage(100 - (@product.discounted_price / @product.price * 100), precision: 0) %>
              </span>
            </div>
          <% end %>
          
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Type</span>
            <span class="text-sm font-medium text-gray-900"><%= @product.is_digital? ? 'Digital' : 'Physical' %></span>
          </div>
          
          <% unless @product.is_digital? %>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Stock</span>
              <span class="text-sm font-medium <%= @product.stock_quantity.to_i <= 0 ? 'text-red-600' : 'text-gray-900' %>">
                <%= @product.stock_quantity.to_i %>
              </span>
            </div>
          <% end %>
          
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">SKU</span>
            <span class="text-sm font-medium text-gray-900"><%= @product.sku.presence || 'N/A' %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Brand</span>
            <span class="text-sm font-medium text-gray-900"><%= @product.brand.presence || 'N/A' %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Category</span>
            <span class="text-sm font-medium text-gray-900"><%= @product.category&.name || 'Uncategorized' %></span>
          </div>
          
          <% if @product.dimensions.present? %>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Dimensions</span>
              <span class="text-sm font-medium text-gray-900"><%= @product.dimensions %></span>
            </div>
          <% end %>
          
          <% if @product.weight.present? %>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Weight</span>
              <span class="text-sm font-medium text-gray-900"><%= @product.weight %> kg</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Seller Information -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
          <h3 class="font-medium text-gray-900">Seller Information</h3>
        </div>
        <div class="p-4">
          <% if @product.seller %>
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                <% if @product.seller.user&.profile_picture&.attached? %>
                  <%= image_tag @product.seller.user.profile_picture, class: "h-10 w-10 rounded-full object-cover" %>
                <% else %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                <% end %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">
                  <%= @product.seller.respond_to?(:business_name) ? @product.seller.business_name : @product.seller.id %>
                </p>
                <% if @product.seller.respond_to?(:verified?) && @product.seller.verified? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Verified
                  </span>
                <% end %>
              </div>
            </div>
            <div class="mt-4">
              <%= link_to admin_seller_path(@product.seller), class: "text-sm text-indigo-600 hover:text-indigo-900" do %>
                View Seller Profile
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No seller information</p>
          <% end %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-4 space-y-3">
          <%= link_to edit_admin_product_path(@product), class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 text-center block" do %>
            Edit Product
          <% end %>
          
          <%= link_to product_path(@product), target: "_blank", class: "w-full py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 text-center block" do %>
            View on Site
          <% end %>
          
          <%= button_to admin_product_path(@product), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this product? This action cannot be undone." } }, class: "w-full py-2 px-4 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 text-center block" do %>
            Delete Product
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
