<div class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
  <div class="container mx-auto px-4 py-8">
    <!-- Header with date and welcome message -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-1">Admin Dashboard</h1>
        <p class="text-gray-500 text-sm md:text-base"><%= Time.now.strftime("%A, %B %d, %Y") %></p>
      </div>
      <div class="mt-4 md:mt-0 bg-white shadow-sm rounded-lg p-3 flex items-center">
        <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center mr-3">
          <% if current_user.profile_picture.present? %>
            <%= image_tag current_user.profile_picture, class: "h-10 w-10 rounded-full object-cover" %>
          <% else %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          <% end %>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-900">Welcome back,</p>
          <p class="text-xs text-gray-500"><%= current_user.first_name %> <%= current_user.last_name %></p>
        </div>
      </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
      <!-- Users Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition duration-300 transform hover:-translate-y-1 overflow-hidden">
        <div class="flex p-6">
          <div class="flex-1">
            <div class="flex items-center">
              <div class="bg-indigo-100 p-3 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <h3 class="ml-3 text-gray-500 font-medium text-sm uppercase tracking-wider">Users</h3>
            </div>
            <p class="mt-4 text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_users) %></p>

            <div class="mt-2 flex items-center">
              <% user_growth = rand(1..15) # Placeholder - replace with actual calculation %>
              <span class="text-green-500 flex items-center text-sm font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                </svg>
                <%= user_growth %>%
              </span>
              <span class="text-gray-400 text-sm ml-1">from last month</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 border-t px-6 py-3">
          <%= link_to admin_users_path, class: "text-indigo-600 text-sm font-medium flex items-center" do %>
            View Users
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>

      <!-- Products Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition duration-300 transform hover:-translate-y-1 overflow-hidden">
        <div class="flex p-6">
          <div class="flex-1">
            <div class="flex items-center">
              <div class="bg-green-100 p-3 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
              </div>
              <h3 class="ml-3 text-gray-500 font-medium text-sm uppercase tracking-wider">Products</h3>
            </div>
            <p class="mt-4 text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_products) %></p>

            <div class="mt-2 flex items-center">
              <% product_growth = rand(1..20) # Placeholder - replace with actual calculation %>
              <span class="text-green-500 flex items-center text-sm font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                </svg>
                <%= product_growth %>%
              </span>
              <span class="text-gray-400 text-sm ml-1">from last month</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 border-t px-6 py-3">
          <%= link_to admin_products_path, class: "text-green-600 text-sm font-medium flex items-center" do %>
            View Products
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>

      <!-- Orders Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition duration-300 transform hover:-translate-y-1 overflow-hidden">
        <div class="flex p-6">
          <div class="flex-1">
            <div class="flex items-center">
              <div class="bg-purple-100 p-3 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
              </div>
              <h3 class="ml-3 text-gray-500 font-medium text-sm uppercase tracking-wider">Orders</h3>
            </div>
            <p class="mt-4 text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_orders) %></p>

            <div class="mt-2 flex items-center">
              <% order_growth = rand(-5..15) # Placeholder - replace with actual calculation %>
              <span class="<%= order_growth >= 0 ? 'text-green-500' : 'text-red-500' %> flex items-center text-sm font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= order_growth >= 0 ? 'M5 10l7-7m0 0l7 7m-7-7v18' : 'M19 14l-7 7m0 0l-7-7m7 7V3' %>" />
                </svg>
                <%= order_growth.abs %>%
              </span>
              <span class="text-gray-400 text-sm ml-1">from last month</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 border-t px-6 py-3">
          <%= link_to admin_orders_path, class: "text-purple-600 text-sm font-medium flex items-center" do %>
            View Orders
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>

      <!-- Revenue Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition duration-300 transform hover:-translate-y-1 overflow-hidden">
        <div class="flex p-6">
          <div class="flex-1">
            <div class="flex items-center">
              <div class="bg-yellow-100 p-3 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="ml-3 text-gray-500 font-medium text-sm uppercase tracking-wider">Revenue</h3>
            </div>
            <p class="mt-4 text-3xl font-bold text-gray-900"><%= number_to_currency(@total_revenue) %></p>

            <div class="mt-2 flex items-center">
              <% revenue_growth = rand(1..25) # Placeholder - replace with actual calculation %>
              <span class="text-green-500 flex items-center text-sm font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                </svg>
                <%= revenue_growth %>%
              </span>
              <span class="text-gray-400 text-sm ml-1">from last month</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 border-t px-6 py-3">
          <%= link_to admin_analytics_path, class: "text-yellow-600 text-sm font-medium flex items-center" do %>
            View Analytics
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sales Overview Chart -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
        <h2 class="text-xl font-bold text-gray-800">Sales Overview</h2>
        <div class="mt-4 md:mt-0">
          <select class="rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 text-sm">
            <option value="7days">Last 7 Days</option>
            <option value="30days" selected>Last 30 Days</option>
            <option value="90days">Last 90 Days</option>
            <option value="year">This Year</option>
          </select>
        </div>
      </div>

      <!-- Fake chart display - in a real app, use a charting library like Chart.js -->
      <div class="w-full h-64 bg-gradient-to-br from-indigo-50 to-blue-50 rounded-lg flex items-center justify-center">
        <div class="relative w-full h-full p-4">
          <!-- This would be replaced by an actual chart -->
          <div class="absolute bottom-0 left-0 right-0 h-48">
            <div class="flex h-full items-end justify-between px-2">
              <% 12.times do |i| %>
                <% height = rand(20..100) %>
                <div class="group relative h-full flex flex-col items-center" style="width: 7%;">
                  <div class="absolute bottom-full mb-2 opacity-0 group-hover:opacity-100 transition-opacity bg-gray-800 text-white text-xs px-2 py-1 rounded pointer-events-none whitespace-nowrap">
                    <%= number_to_currency(height * 100) %> (<%= height %>%)
                  </div>
                  <div class="w-full bg-indigo-500 rounded-t" style="height: <%= height %>%;"></div>
                  <div class="text-xs text-gray-500 mt-1 whitespace-nowrap overflow-hidden text-ellipsis" style="max-width: 100%;">
                    <%= Date::ABBR_MONTHNAMES[(i % 12) + 1] %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Recent Orders Panel -->
      <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-800">Recent Orders</h2>
          <div>
            <select class="rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 text-sm">
              <option value="all">All Orders</option>
              <option value="pending">Pending</option>
              <option value="processing">Processing</option>
              <option value="completed">Completed</option>
              <option value="cancelled">Cancelled</option>
            </select>
          </div>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if @recent_orders.present? %>
                <% @recent_orders.each do |order| %>
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 h-8 w-8 bg-indigo-100 rounded-md flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                          </svg>
                        </div>
                        <div class="ml-3">
                          <div class="text-sm font-medium text-gray-900">
                            #<%= order.id %>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900"><%= order.user&.first_name %> <%= order.user&.last_name %></div>
                      <div class="text-xs text-gray-500"><%= order.user&.email || 'Unknown' %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900">
                        <%= number_to_currency(order.total_amount) %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% status_colors = {
                        'pending' => 'bg-yellow-100 text-yellow-800',
                        'processing' => 'bg-blue-100 text-blue-800',
                        'paid' => 'bg-green-100 text-green-800',
                        'completed' => 'bg-green-100 text-green-800',
                        'cancelled' => 'bg-red-100 text-red-800',
                        'refunded' => 'bg-gray-100 text-gray-800'
                      } %>
                      <span class="px-2 py-1 inline-flex text-xs leading-5 font-medium rounded-full <%= status_colors[order.status.to_s.downcase] || 'bg-gray-100 text-gray-800' %>">
                        <%= order.status&.titleize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <div class="flex flex-col">
                        <span><%= order.created_at.strftime("%b %d, %Y") %></span>
                        <span class="text-xs text-gray-400"><%= order.created_at.strftime("%I:%M %p") %></span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <div class="flex space-x-2">
                        <%= link_to admin_order_path(order), class: "text-indigo-600 hover:text-indigo-900 transition-colors" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                          </svg>
                        <% end %>

                        <%= link_to edit_admin_order_path(order), class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                          </svg>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6" class="px-6 py-4 text-sm text-gray-500 text-center">No orders yet</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
          <%= link_to admin_orders_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium flex items-center" do %>
            View all orders
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          <% end %>
        </div>
      </div>

      <!-- Side Panel -->
      <div class="space-y-8">
        <!-- User Activity Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-100">
            <h2 class="text-lg font-bold text-gray-800">Recent Users</h2>
          </div>

          <div class="divide-y divide-gray-100">
            <% if @recent_users.present? %>
              <% @recent_users.each do |user| %>
                <div class="p-4 hover:bg-gray-50 transition-colors">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <% if user.profile_picture.present? %>
                        <%= image_tag user.profile_picture, class: "h-10 w-10 rounded-full object-cover" %>
                      <% else %>
                        <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                          </svg>
                        </div>
                      <% end %>
                    </div>

                    <div class="ml-3 flex-1">
                      <div class="flex items-center justify-between">
                        <p class="text-sm font-medium text-gray-900">
                          <%= user.first_name %> <%= user.last_name %>
                        </p>
                        <span class="text-xs text-gray-500">
                          <%= time_ago_in_words(user.created_at) %> ago
                        </span>
                      </div>
                      <p class="text-xs text-gray-500 truncate">
                        <%= user.email %>
                      </p>
                    </div>
                  </div>
                  <div class="mt-2 flex justify-end">
                    <%= link_to admin_user_path(user), class: "text-indigo-600 hover:text-indigo-900 text-xs font-medium transition-colors" do %>
                      View Profile
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="p-6 text-center text-gray-500">No users yet</div>
            <% end %>
          </div>

          <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
            <%= link_to admin_users_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium flex items-center" do %>
              View all users
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Popular Products Card (Remove error-causing code) -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-100">
            <h2 class="text-lg font-bold text-gray-800">Popular Products</h2>
          </div>

          <div class="p-6">
            <% # Temporary fix until the product-orders association is corrected %>
            <p class="text-center text-gray-500">
              Product popularity data is currently being processed.
            </p>

            <div class="mt-4 grid grid-cols-2 gap-4">
              <% # Simple placeholder content %>
              <% 4.times do |i| %>
                <div class="p-3 rounded-lg bg-gray-50 flex flex-col items-center justify-center h-24">
                  <div class="w-10 h-10 rounded-md bg-indigo-100 flex items-center justify-center mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                    </svg>
                  </div>
                  <div class="text-xs font-medium text-gray-600 text-center">Product <%= i + 1 %></div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
            <%= link_to admin_products_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium flex items-center" do %>
              View all products
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Cards Grid -->
