      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 font-medium">Products</p>
            <div class="flex items-center">
              <p class="text-2xl font-bold text-gray-900 mr-2"><%= @total_products %></p>
              <% digital_percent = rand(30..70) # Placeholder - replace with actual value %>
              <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                <%= digital_percent %>% Digital
              </span>
            </div>
          </div>
          <div class="p-3 rounded-full bg-blue-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <div class="w-full h-2 bg-gray-100 rounded-full">
            <div class="h-2 bg-blue-500 rounded-full" style="width: <%= digital_percent %>%;"></div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 font-medium">Reviews</p>
            <div class="flex items-center">
              <% review_count = rand(10..500) # Placeholder - replace with actual count %>
              <p class="text-2xl font-bold text-gray-900 mr-2"><%= number_with_delimiter(review_count) %></p>
              <% avg_rating = (rand(35..49) / 10.0).round(1) # Placeholder rating between 3.5-4.9 %>
              <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full flex items-center">
                <%= avg_rating %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1 text-yellow-500" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              </span>
            </div>
          </div>
          <div class="p-3 rounded-full bg-yellow-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex items-center space-x-1">
            <% 5.times do |i| %>
              <div class="w-full h-1 <%= i < (avg_rating.to_i) ? 'bg-yellow-500' : 'bg-gray-200' %> <%= i == 0 ? 'rounded-l-full' : '' %> <%= i == 4 ? 'rounded-r-full' : '' %>"></div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 font-medium">Sellers</p>
            <div class="flex items-center">
              <% sellers_count = rand(5..50) # Placeholder - replace with actual count %>
              <p class="text-2xl font-bold text-gray-900 mr-2"><%= number_with_delimiter(sellers_count) %></p>
              <% verified_percent = rand(50..95) # Placeholder - replace with actual value %>
              <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">
                <%= verified_percent %>% Verified
              </span>
            </div>
          </div>
          <div class="p-3 rounded-full bg-green-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <div class="w-full h-2 bg-gray-100 rounded-full">
            <div class="h-2 bg-green-500 rounded-full" style="width: <%= verified_percent %>%;"></div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 font-medium">Conversion Rate</p>
            <div class="flex items-center">
              <% conversion_rate = (rand(20..65) / 10.0).round(1) # Placeholder between 2.0-6.5% %>
              <p class="text-2xl font-bold text-gray-900 mr-2"><%= conversion_rate %>%</p>
              <% month_change = rand(-15..20) / 10.0 # Placeholder change between -1.5 and 2.0 %>
              <span class="<%= month_change >= 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> text-xs px-2 py-1 rounded-full flex items-center">
                <%= month_change >= 0 ? '+' : '' %><%= month_change %>%
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= month_change >= 0 ? 'M5 10l7-7m0 0l7 7m-7-7v18' : 'M19 14l-7 7m0 0l-7-7m7 7V3' %>" />
                </svg>
              </span>
            </div>
          </div>
          <div class="p-3 rounded-full bg-purple-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
        </div>
        <div class="mt-4 grid grid-cols-7 gap-1">
          <% 7.times do |i| %>
            <% height = rand(15..100) %>
            <div class="flex flex-col items-center">
              <div class="w-full bg-purple-200 rounded-sm relative">
                <div class="absolute bottom-0 w-full bg-purple-500 rounded-sm" style="height: <%= height %>%;"></div>
              </div>
              <div class="text-xs text-gray-400 mt-1">
                <%= %w[M T W T F S S][i] %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if current_user.super_admin? %>
      <!-- Super Admin Tools Section -->
      <div class="mt-10 bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 bg-indigo-600">
          <h2 class="text-lg font-medium text-white flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Super Admin Tools
          </h2>
        </div>

        <div class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- System Monitoring Card -->
          <div class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition duration-300">
            <%= link_to admin_system_path, class: "flex flex-col h-full" do %>
              <div class="flex items-center mb-4">
                <div class="p-3 rounded-full bg-indigo-100 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900">System Monitoring</h3>
              </div>
              <p class="text-sm text-gray-600 mb-4 flex-grow">Monitor system health, logs, and performance metrics. Track application errors and background jobs.</p>
              <div class="flex justify-between items-center text-indigo-600 text-sm font-medium">
                <span>View Dashboard</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </div>
            <% end %>
          </div>

          <!-- System Logs Card -->
          <div class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition duration-300">
            <%= link_to admin_system_logs_path, class: "flex flex-col h-full" do %>
              <div class="flex items-center mb-4">
                <div class="p-3 rounded-full bg-red-100 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900">System Logs</h3>
              </div>
              <p class="text-sm text-gray-600 mb-4 flex-grow">View and analyze application logs. Filter for errors and warnings to quickly identify issues.</p>
              <div class="flex justify-between items-center text-indigo-600 text-sm font-medium">
                <span>View Logs</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </div>
            <% end %>
          </div>

          <!-- Cache Management Card -->
          <div class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition duration-300">
            <%= link_to admin_system_cache_path, class: "flex flex-col h-full" do %>
              <div class="flex items-center mb-4">
                <div class="p-3 rounded-full bg-blue-100 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                  </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900">Cache Management</h3>
              </div>
              <p class="text-sm text-gray-600 mb-4 flex-grow">View and manage application cache. Clear cache to refresh application data when needed.</p>
              <div class="flex justify-between items-center text-indigo-600 text-sm font-medium">
                <span>Manage Cache</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>