<% content_for :page_title, "New User" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">Create New User</h1>
      <p class="text-gray-600">Add a new user to the platform</p>
    </div>
    <div class="flex space-x-2">
      <%= link_to admin_users_path, class: "bg-gray-100 text-gray-700 hover:bg-gray-200 px-4 py-2 rounded-md text-sm font-medium flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
        </svg>
        Back to Users
      <% end %>
    </div>
  </div>

  <%= form_with(model: [:admin, @user], class: "contents") do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 rounded-md mb-6">
        <div class="flex items-center mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          <h2 class="font-bold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        </div>
        <ul class="list-disc pl-5">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Main Information Column -->
      <div class="md:col-span-2 space-y-6">
        <!-- Basic Information Section -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
            <h3 class="font-medium text-gray-900">Basic Information</h3>
          </div>
          <div class="p-4 space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :first_name, class: "py-2 px-3 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "First Name" %>
              </div>

              <div>
                <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :last_name, class: "py-2 px-3 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Last Name" %>
              </div>
            </div>

            <div>
              <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
              <%= form.email_field :email, class: "py-2 px-3 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Email Address" %>
            </div>
          </div>
        </div>

        <!-- Password Section -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
            <h3 class="font-medium text-gray-900">Password</h3>
          </div>
          <div class="p-4 space-y-4">
            <div class="flex items-center mb-4">
              <%= check_box_tag :generate_password, "1", false, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
              <%= label_tag :generate_password, "Generate random password", class: "ml-2 block text-sm text-gray-700" %>
            </div>
            
            <div id="password_fields">
              <div>
                <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
                <%= form.password_field :password, class: "py-2 px-3 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Password" %>
              </div>

              <div class="mt-4">
                <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
                <%= form.password_field :password_confirmation, class: "py-2 px-3 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Confirm Password" %>
              </div>
            </div>
          </div>
        </div>

        <!-- User Role Section -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
            <h3 class="font-medium text-gray-900">User Role</h3>
          </div>
          <div class="p-4 space-y-4">
            <div class="flex items-center">
              <%= check_box_tag "user[seller]", "1", false, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
              <%= label_tag "user[seller]", "Create as Seller", class: "ml-2 block text-sm text-gray-700" %>
              <p class="ml-6 text-xs text-gray-500">A seller account will be created for this user.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar Information -->
      <div class="md:col-span-1 space-y-6">
        <!-- Account Status -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
            <h3 class="font-medium text-gray-900">Account Status</h3>
          </div>
          <div class="p-4">
            <div class="flex items-center">
              <%= form.check_box :active, { class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" }, true, false %>
              <%= form.label :active, "Active Account", class: "ml-2 block text-sm text-gray-700" %>
            </div>
            <p class="mt-2 text-xs text-gray-500">Inactive accounts cannot log in to the platform.</p>
          </div>
        </div>

        <!-- Admin Status -->
        <% if current_user.super_admin? %>
          <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
              <h3 class="font-medium text-gray-900">Admin Status</h3>
            </div>
            <div class="p-4 space-y-3">
              <div class="flex items-center">
                <%= form.check_box :admin, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
                <%= form.label :admin, "Admin Privileges", class: "ml-2 block text-sm text-gray-700" %>
              </div>
              
              <div class="flex items-center">
                <%= form.check_box :super_admin, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
                <%= form.label :super_admin, "Super Admin Privileges", class: "ml-2 block text-sm text-gray-700" %>
              </div>
              
              <p class="text-xs text-gray-500">Super admins have full access to all features and can manage other admins.</p>
            </div>
          </div>
        <% end %>

        <!-- Submission Buttons -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="p-4 space-y-3">
            <%= form.submit "Create User", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            
            <%= link_to 'Cancel', admin_users_path, class: "block w-full text-center py-2 px-4 border border-transparent rounded-md text-sm font-medium text-gray-700 hover:text-gray-500" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const generatePasswordCheckbox = document.getElementById('generate_password');
    const passwordFields = document.getElementById('password_fields');
    
    generatePasswordCheckbox.addEventListener('change', function() {
      if (this.checked) {
        passwordFields.style.display = 'none';
      } else {
        passwordFields.style.display = 'block';
      }
    });
  });
</script>
