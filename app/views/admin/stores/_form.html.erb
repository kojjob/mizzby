<%= form_with(model: [:admin, store], class: "space-y-8") do |form| %>
  <% if store.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were <%= pluralize(store.errors.count, "error") %> with your submission</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% store.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-8 divide-y divide-gray-200">
    <div>
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Store Information</h3>
        <p class="mt-1 text-sm text-gray-500">Basic information about the store.</p>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :slug, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            <p class="mt-1 text-xs text-gray-500">This will be used in the store URL: /stores/<span class="font-mono text-gray-700"><%= store.slug.presence || 'your-store-slug' %></span></p>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :description, rows: 4, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Brief description of the store. This will be displayed on the store page.</p>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :seller_id, "Seller", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.collection_select :seller_id, @sellers, :id, :business_name, { include_blank: "Select a seller" }, { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :published, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <div class="flex items-center">
              <%= form.check_box :published, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
              <span class="ml-2 text-sm text-gray-600">Make this store visible to customers</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="pt-8">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Store Appearance</h3>
        <p class="mt-1 text-sm text-gray-500">Customize how the store looks.</p>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <%= form.label :theme, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :theme,
              options_for_select([
                ["Default", "default"],
                ["Modern", "modern"],
                ["Classic", "classic"],
                ["Minimal", "minimal"],
                ["Bold", "bold"]
              ], store.theme),
              { include_blank: "Select a theme" },
              { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                data: { action: "change->theme-preview#updatePreview" } }
            %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Choose a theme that best represents your store's brand identity.</p>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :color_scheme, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :color_scheme,
              options_for_select([
                ["Light", "light"],
                ["Dark", "dark"],
                ["Blue", "blue"],
                ["Green", "green"],
                ["Purple", "purple"],
                ["Red", "red"]
              ], store.color_scheme),
              { include_blank: "Select a color scheme" },
              { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                data: { action: "change->theme-preview#updatePreview" } }
            %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Select a color scheme that complements your store's theme.</p>
        </div>

        <!-- Theme Preview -->
        <div class="sm:col-span-6 mt-4" data-controller="theme-preview">
          <h4 class="text-sm font-medium text-gray-700 mb-2">Theme Preview</h4>
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <div id="theme-preview" class="store-theme <%= store.theme || 'default' %>-theme <%= store.color_scheme || 'light' %>-scheme p-4">
              <div class="bg-white shadow rounded-lg overflow-hidden">
                <div class="p-4" style="background-color: var(--primary-color);">
                  <h3 class="text-lg font-bold text-white">Store Header</h3>
                </div>
                <div class="p-4">
                  <h4 class="text-lg font-medium mb-2" style="color: var(--text-color);">Featured Products</h4>
                  <div class="grid grid-cols-3 gap-2">
                    <div class="border rounded p-2">
                      <div class="bg-gray-200 h-12 w-full mb-2 rounded"></div>
                      <div class="h-3 bg-gray-200 rounded mb-1"></div>
                      <div class="h-3 bg-gray-200 rounded w-2/3"></div>
                    </div>
                    <div class="border rounded p-2">
                      <div class="bg-gray-200 h-12 w-full mb-2 rounded"></div>
                      <div class="h-3 bg-gray-200 rounded mb-1"></div>
                      <div class="h-3 bg-gray-200 rounded w-2/3"></div>
                    </div>
                    <div class="border rounded p-2">
                      <div class="bg-gray-200 h-12 w-full mb-2 rounded"></div>
                      <div class="h-3 bg-gray-200 rounded mb-1"></div>
                      <div class="h-3 bg-gray-200 rounded w-2/3"></div>
                    </div>
                  </div>
                  <div class="mt-3">
                    <button class="px-3 py-1 text-sm text-white rounded" style="background-color: var(--primary-color);">Primary Button</button>
                    <button class="px-3 py-1 text-sm text-white rounded ml-2" style="background-color: var(--secondary-color);">Secondary Button</button>
                  </div>
                </div>
                <div class="p-3" style="background-color: var(--footer-bg);">
                  <p class="text-xs text-white text-center">Store Footer</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :logo, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex items-center">
            <% if store.logo.attached? %>
              <div class="mr-4">
                <%= image_tag store.logo.variant(resize_to_limit: [100, 100]), class: "h-16 w-16 object-contain rounded-md" %>
              </div>
            <% end %>
            <div class="flex-1">
              <%= form.file_field :logo, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
              <p class="mt-1 text-xs text-gray-500">PNG, JPG, GIF up to 2MB</p>
            </div>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :banner_image, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex items-center">
            <% if store.banner_image.attached? %>
              <div class="mr-4">
                <%= image_tag store.banner_image.variant(resize_to_limit: [200, 100]), class: "h-16 w-32 object-cover rounded-md" %>
              </div>
            <% end %>
            <div class="flex-1">
              <%= form.file_field :banner_image, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
              <p class="mt-1 text-xs text-gray-500">PNG, JPG, GIF up to 5MB. Recommended size: 1200x400px</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", admin_stores_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= form.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>
