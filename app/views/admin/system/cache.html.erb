<% content_for :page_title, "Cache Management" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">Cache Management</h1>
      <p class="text-gray-600">View and manage application cache</p>
    </div>
    <div class="flex space-x-2">
      <%= link_to admin_system_path, class: "bg-gray-100 text-gray-700 hover:bg-gray-200 px-4 py-2 rounded-md text-sm font-medium flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
        </svg>
        Back to Dashboard
      <% end %>
    </div>
  </div>

  <!-- Cache Info Card -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden mb-6">
    <div class="bg-blue-600 px-4 py-2">
      <h2 class="text-lg font-medium text-white flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
        </svg>
        Cache Information
      </h2>
    </div>
    <div class="p-4">
      <dl class="space-y-2">
        <div class="flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Cache Store Type:</dt>
          <dd class="text-sm text-gray-900"><%= @cache_stats[:cache_store_type] %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Estimated Entries:</dt>
          <dd class="text-sm text-gray-900"><%= @cache_stats[:cache_entries] %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Cache Actions -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="bg-indigo-600 px-4 py-2">
      <h2 class="text-lg font-medium text-white flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
        </svg>
        Cache Actions
      </h2>
    </div>
    <div class="p-6">
      <div class="max-w-md mx-auto">
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-yellow-700">
                Clearing the cache will remove all cached data. This may temporarily slow down the application while the cache is rebuilt.
              </p>
            </div>
          </div>
        </div>
        
        <%= form_with url: admin_system_cache_path, method: :post, class: "space-y-4" do |f| %>
          <%= f.hidden_field :clear_cache, value: true %>
          
          <div class="flex items-center">
            <input id="confirm-clear" name="confirm_clear" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
            <label for="confirm-clear" class="ml-2 block text-sm text-gray-900">
              I understand the consequences of clearing the cache
            </label>
          </div>
          
          <%= f.submit "Clear All Cache", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 disabled:opacity-50 disabled:cursor-not-allowed", disabled: true, id: "clear-cache-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const confirmCheckbox = document.getElementById('confirm-clear');
    const clearButton = document.getElementById('clear-cache-button');
    
    confirmCheckbox.addEventListener('change', function() {
      clearButton.disabled = !this.checked;
    });
  });
</script>
