<%= form_with(model: download_link, class: "contents") do |form| %>
  <% if download_link.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(download_link.errors.count, "error") %> prohibited this download_link from being saved:</h2>

      <ul class="list-disc ml-6">
        <% download_link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": download_link.errors[:product_id].none?, "border-red-400 focus:outline-red-600": download_link.errors[:product_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": download_link.errors[:user_id].none?, "border-red-400 focus:outline-red-600": download_link.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :token %>
    <%= form.text_field :token, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": download_link.errors[:token].none?, "border-red-400 focus:outline-red-600": download_link.errors[:token].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :expires_at %>
    <%= form.datetime_field :expires_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": download_link.errors[:expires_at].none?, "border-red-400 focus:outline-red-600": download_link.errors[:expires_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :download_count %>
    <%= form.number_field :download_count, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": download_link.errors[:download_count].none?, "border-red-400 focus:outline-red-600": download_link.errors[:download_count].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :download_limit %>
    <%= form.number_field :download_limit, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": download_link.errors[:download_limit].none?, "border-red-400 focus:outline-red-600": download_link.errors[:download_limit].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :active %>
    <%= form.checkbox :active, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": download_link.errors[:active].none?, "border-red-400 focus:outline-red-600": download_link.errors[:active].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :order_id %>
    <%= form.text_field :order_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": download_link.errors[:order_id].none?, "border-red-400 focus:outline-red-600": download_link.errors[:order_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
