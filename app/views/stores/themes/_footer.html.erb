<footer class="store-footer <%= store.respond_to?(:theme) ? store.theme : 'default' %>-footer bg-gray-100 mt-16">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <h3 class="text-lg font-semibold mb-4">About <%= store.name %></h3>
        <p class="text-gray-600 mb-4">
          <%= truncate(store.description.to_s, length: 150) %>
        </p>
        <%= link_to "Learn more", store_about_path(store.slug), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <%= link_to "Home", store_path(store.slug), class: "text-gray-600 hover:text-indigo-600 transition" %>
          </li>
          <li>
            <%= link_to "Products", store_products_path(store.slug), class: "text-gray-600 hover:text-indigo-600 transition" %>
          </li>
          <% if store.respond_to?(:store_categories) && store.store_categories.any? %>
            <li>
              <%= link_to "Categories", store_categories_path(store.slug), class: "text-gray-600 hover:text-indigo-600 transition" %>
            </li>
          <% end %>
          <li>
            <%= link_to "About", store_about_path(store.slug), class: "text-gray-600 hover:text-indigo-600 transition" %>
          </li>
          <li>
            <%= link_to "Contact", store_contact_path(store.slug), class: "text-gray-600 hover:text-indigo-600 transition" %>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Categories</h3>
        <ul class="space-y-2">
          <% categories = store.respond_to?(:store_categories) ? store.store_categories : []
             categories = categories.respond_to?(:limit) ? categories.limit(5) : categories.first(5)
             categories.each do |category| %>
            <li>
              <%= link_to category.name, store_category_products_path(store.slug, category), class: "text-gray-600 hover:text-indigo-600 transition" %>
            </li>
          <% end %>

          <% all_categories = store.respond_to?(:store_categories) ? store.store_categories : []
             if all_categories.respond_to?(:count) ? all_categories.count > 5 : all_categories.size > 5 %>
            <li>
              <%= link_to "View all categories", store_categories_path(store.slug), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
            </li>
          <% end %>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Contact</h3>
        <% if store.respond_to?(:seller) && store.seller.present? && store.seller.respond_to?(:phone_number) && store.seller.phone_number.present? %>
          <p class="flex items-center text-gray-600 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <%= store.seller.phone_number %>
          </p>
        <% end %>

        <p class="flex items-center text-gray-600 mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <%= store.respond_to?(:seller) && store.seller.present? && store.seller.respond_to?(:user) && store.seller.user.present? ? store.seller.user.email : 'Email not available' %>
        </p>

        <% if store.respond_to?(:seller) && store.seller.present? && store.seller.respond_to?(:location) && store.seller.location.present? %>
          <p class="flex items-center text-gray-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <%= store.seller.location.presence || 'Location not specified' %>
          </p>
        <% end %>

        <%= link_to "Contact Us", store_contact_path(store.slug), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>

    <div class="border-t border-gray-200 mt-8 pt-8 text-center">
      <p class="text-gray-500 text-sm">
        &copy; <%= Date.current.year %> <%= store.name %>. All rights reserved.
      </p>
      <p class="text-gray-400 text-xs mt-2">
        Powered by Digital Store
      </p>
    </div>
  </div>
</footer>
