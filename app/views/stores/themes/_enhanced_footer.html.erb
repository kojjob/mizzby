<footer class="text-white pt-16 pb-8" style="background-color: var(--footer-bg);">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Store Info -->
      <div>
        <!-- Store Logo/Name -->
        <div class="mb-6">
          <% if store.respond_to?(:logo) && store.logo.attached? %>
            <%= image_tag store.logo.variant(resize_to_limit: [150, 60]),
                         class: "h-12 mb-2",
                         alt: "#{store.name} logo" %>
          <% else %>
            <h2 class="text-2xl font-bold text-white"><%= store.name %></h2>
          <% end %>
        </div>

        <!-- Store Description -->
        <p class="text-gray-400 mb-6 text-sm">
          <%= truncate(store.description.to_s, length: 120) %>
        </p>

        <!-- Social Media Links -->
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
              <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
            </svg>
          </a>
