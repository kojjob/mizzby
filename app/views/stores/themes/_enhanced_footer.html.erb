            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
              <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-instagram" viewBox="0 0 16 16">
              <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pinterest" viewBox="0 0 16 16">
              <path d="M8 0a8 8 0 0 0-2.915 15.452c-.07-.633-.134-1.606.027-2.297.146-.625.938-3.977.938-3.977s-.239-.479-.239-1.187c0-1.113.645-1.943 1.448-1.943.682 0 1.012.512 1.012 1.127 0 .686-.437 1.712-.663 2.663-.188.796.4 1.446 1.185 1.446 1.422 0 2.515-1.5 2.515-3.664 0-1.915-1.377-3.254-3.342-3.254-2.276 0-3.612 1.707-3.612 3.471 0 .688.265 1.425.595 1.826a.24.24 0 0 1 .056.23c-.061.252-.196.796-.222.907-.035.146-.116.177-.268.107-1-.465-1.624-1.926-1.624-3.1 0-2.523 1.834-4.84 5.286-4.84 2.775 0 4.932 1.977 4.932 4.62 0 2.757-1.739 4.976-4.151 4.976-.811 0-1.573-.421-1.834-.919l-.498 1.902c-.181.695-.669 1.566-.995 2.097A8 8 0 1 0 8 0z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-6 border-b border-gray-800 pb-2">Quick Links</h3>
        <ul class="space-y-3">
          <li>
            <%= link_to "Home", store_path(store.slug), class: "text-gray-400 hover:text-white transition-colors" %>
          </li>
          <li>
            <%= link_to "Products", store_products_path(store.slug), class: "text-gray-400 hover:text-white transition-colors" %>
          </li>
          <li>
            <%= link_to "Categories", store_categories_path(store.slug), class: "text-gray-400 hover:text-white transition-colors" %>
          </li>
          <li>
            <%= link_to "About Us", store_about_path(store.slug), class: "text-gray-400 hover:text-white transition-colors" %>
          </li>
          <li>
            <%= link_to "Contact", store_contact_path(store.slug), class: "text-gray-400 hover:text-white transition-colors" %>
          </li>
          <% if store.respond_to?(:setting) && store.setting('blog_enabled') == 'true' %>
            <li>
              <%= link_to "Blog", store_blog_path(store.slug), class: "text-gray-400 hover:text-white transition-colors" %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Categories -->
      <div>
        <h3 class="text-lg font-bold mb-6 border-b border-gray-800 pb-2">Top Categories</h3>
        <ul class="space-y-3">
          <% if store.respond_to?(:store_categories) && store.store_categories.any? %>
            <% store.store_categories.order(position: :asc).limit(5).each do |category| %>
              <li>
                <%= link_to category.name, store_category_products_path(store.slug, category), class: "text-gray-400 hover:text-white transition-colors" %>
              </li>
            <% end %>
          <% else %>
            <li class="text-gray-400">No categories available</li>
          <% end %>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-bold mb-6 border-b border-gray-800 pb-2">Contact Us</h3>
        <ul class="space-y-3">
          <% if store.respond_to?(:seller) && store.seller.respond_to?(:email) && store.seller.email.present? %>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href="mailto:<%= store.seller.email %>" class="text-gray-400 hover:text-white transition-colors">
                <%= store.seller.email %>
              </a>
            </li>
          <% end %>

          <% if store.respond_to?(:seller) && store.seller.respond_to?(:phone_number) && store.seller.phone_number.present? %>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <a href="tel:<%= store.seller.phone_number %>" class="text-gray-400 hover:text-white transition-colors">
                <%= store.seller.phone_number %>
              </a>
            </li>
          <% end %>

          <% if store.respond_to?(:seller) && store.seller.respond_to?(:location) && store.seller.location.present? %>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="text-gray-400">
                <%= store.seller.location %>
              </span>
            </li>
          <% end %>

          <!-- Business Hours -->
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="text-gray-400">
              <div>Monday - Friday: 9am - 5pm</div>
              <div>Saturday: 10am - 4pm</div>
              <div>Sunday: Closed</div>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- Payment Methods -->
    <div class="mt-12 border-t border-gray-800 pt-8">
      <div class="flex flex-wrap items-center justify-between">
        <div class="mb-4 md:mb-0">
          <h4 class="text-sm font-semibold text-gray-400 mb-3">PAYMENT METHODS</h4>
          <div class="flex space-x-4">
            <img src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/visa.svg" alt="Visa" class="h-8 w-auto filter invert opacity-50">
            <img src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/mastercard.svg" alt="Mastercard" class="h-8 w-auto filter invert opacity-50">
            <img src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/applepay.svg" alt="Apple Pay" class="h-8 w-auto filter invert opacity-50">
            <img src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/paypal.svg" alt="PayPal" class="h-8 w-auto filter invert opacity-50">
          </div>
        </div>

        <!-- Newsletter Mini Form -->
        <div>
          <h4 class="text-sm font-semibold text-gray-400 mb-3">GET UPDATES</h4>
          <form class="flex">
            <input type="email" placeholder="Your email" class="px-3 py-2 rounded-l-md text-sm bg-gray-800 border-gray-700 text-white focus:outline-none focus:ring-1 focus:ring-indigo-500">
            <button type="submit" class="px-3 py-2 bg-indigo-600 text-white rounded-r-md text-sm hover:bg-indigo-700 transition-colors">
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-500 text-sm">
      <p>Â© <%= Time.now.year %> <%= store.name %>. All rights reserved.</p>
      <div class="mt-2 space-x-4">
        <a href="#" class="hover:text-gray-400 transition-colors">Privacy Policy</a>
        <a href="#" class="hover:text-gray-400 transition-colors">Terms & Conditions</a>
        <a href="#" class="hover:text-gray-400 transition-colors">Shipping Info</a>
      </div>
    </div>
  </div>
</footer>