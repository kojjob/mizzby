<% @page_title = "Contact Us" %>

<div class="bg-gray-100 py-8">
  <div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Contact <%= @seller&.store_name || @store&.name || 'Store' %></h1>
    <p class="text-gray-600">We'd love to hear from you!</p>
  </div>
</div>

<div class="container mx-auto px-4 py-12">
  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Send us a message</h2>

          <%= form_with url: store_contact_path(@store.slug), method: :post, class: "space-y-4" do |form| %>
            <div>
              <%= form.label :name, "Your Name", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            </div>

            <div>
              <%= form.label :email, "Your Email", class: "block text-sm font-medium text-gray-700" %>
              <%= form.email_field :email, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            </div>

            <div>
              <%= form.label :message, "Message", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_area :message, rows: 5, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            </div>

            <div>
              <%= form.submit "Send Message", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Contact Information</h2>

          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-gray-900">Address</h3>
                <p class="text-sm text-gray-500"><%= @seller&.location || 'Location not specified' %>, <%= @seller&.country || 'Country not specified' %></p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-gray-900">Phone</h3>
                <p class="text-sm text-gray-500"><%= @seller&.phone_number.presence || "Not provided" %></p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-gray-900">Email</h3>
                <p class="text-sm text-gray-500"><%= @seller&.user&.email || "Email not provided" %></p>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Business Hours</h2>

            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Monday - Friday</span>
                <span class="text-sm text-gray-900">9:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Saturday</span>
                <span class="text-sm text-gray-900">10:00 AM - 2:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Sunday</span>
                <span class="text-sm text-gray-900">Closed</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
