<div class="category-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
  <div class="h-32 bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center">
    <% if category.respond_to?(:icon_name) && category.icon_name.present? %>
      <i class="<%= category.icon_name %> text-5xl text-white"></i>
    <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
    <% end %>
  </div>
  <div class="p-4">
    <h3 class="text-lg font-semibold mb-2"><%= category.name %></h3>
    <% if category.description.present? %>
      <p class="text-gray-600 text-sm mb-4"><%= truncate(category.description, length: 100) %></p>
    <% end %>
    <%= link_to "Browse Products", store_category_products_path(@store.slug, category), class: "text-indigo-600 hover:text-indigo-800 font-medium flex items-center" do %>
      <span>Browse Products</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</div>
