<div class="min-h-screen bg-gray-50 py-12">
  <div class="mx-auto w-full max-w-6xl">
    <div class="flex rounded-xl shadow-xl overflow-hidden bg-white">
      <!-- Left side - Image and profile info -->
      <div class="hidden md:block md:w-1/3 bg-gradient-to-br from-indigo-600 to-violet-700 text-white p-12">
        <div class="h-full flex flex-col">
          <div class="text-center mb-8">
            <div class="relative inline-block">
              <div class="w-32 h-32 rounded-full bg-indigo-300 bg-opacity-30 flex items-center justify-center mx-auto overflow-hidden border-4 border-indigo-300 border-opacity-30">
                <% if resource.profile_picture.attached? %>
                  <%= image_tag resource.profile_picture, class: "w-full h-full object-cover" %>
                <% else %>
                  <svg class="w-20 h-20 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                  </svg>
                <% end %>
              </div>
              <label for="user_profile_picture" class="absolute bottom-0 right-0 bg-white rounded-full p-2 shadow-lg text-indigo-600 hover:text-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" title="Change profile picture">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4 5a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.121-1.121A2 2 0 0011.172 3H8.828a2 2 0 00-1.414.586L6.293 4.707A1 1 0 015.586 5H4zm6 9a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                </svg>
              </label>
            </div>
            <h2 class="mt-4 text-2xl font-bold"><%= resource.first_name %> <%= resource.last_name %></h2>
            <p class="text-indigo-200"><%= resource.email %></p>
          </div>
          
          <div class="space-y-6 mt-8">
            <div>
              <h3 class="text-lg font-medium text-white">Account Information</h3>
              <div class="mt-2 space-y-2 text-indigo-100">
                <p>
                  <span class="text-indigo-300">Member since:</span> 
                  <%= resource.created_at.strftime("%B %d, %Y") %>
                </p>
                
                <% if resource.respond_to?(:last_sign_in_at) && resource.last_sign_in_at.present? %>
                  <p>
                    <span class="text-indigo-300">Last login:</span> 
                    <%= resource.last_sign_in_at.strftime("%B %d, %Y") %>
                  </p>
                <% end %>
                
                <% if resource.respond_to?(:sign_in_count) %>
                  <p>
                    <span class="text-indigo-300">Login count:</span> 
                    <%= resource.sign_in_count %>
                  </p>
                <% end %>
              </div>
            </div>

            <div>
              <h3 class="text-lg font-medium text-white">Account Status</h3>
              <div class="mt-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  <svg class="-ml-1 mr-1.5 h-2 w-2 text-green-600" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                  </svg>
                  Active
                </span>
              </div>
            </div>
            
            <% if resource.respond_to?(:seller) && resource.seller.present? %>
              <div>
                <h3 class="text-lg font-medium text-white">Seller Status</h3>
                <div class="mt-2">
                  <% if resource.seller.verified %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                      <svg class="-ml-1 mr-1.5 h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                      Verified Seller
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                      <svg class="-ml-1 mr-1.5 h-4 w-4 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                      </svg>
                      Pending Verification
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          
          <div class="mt-auto">
            <%= button_to destroy_user_session_path, method: :delete, 
                           class: "w-full flex justify-center items-center px-4 py-3 border border-transparent text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white focus:ring-offset-indigo-700" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Log out
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Right side - Edit Form -->
      <div class="w-full md:w-2/3 p-8 md:p-12">
        <div class="max-w-2xl mx-auto">
          <div class="text-center md:text-left">
            <h2 class="text-2xl font-bold text-gray-900">Edit Your Profile</h2>
            <p class="mt-2 text-sm text-gray-600">Update your account information and settings</p>
          </div>
          
          <% if resource.errors.any? %>
            <div class="bg-red-50 border-l-4 border-red-400 p-4 mt-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(resource.errors.count, "error") %> prohibited this account from being saved:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% resource.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          
          <div class="mt-8">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true, class: "space-y-6" }) do |f| %>
              <div>
                <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>
                <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1">
                      <%= f.text_field :first_name, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "First name" %>
                    </div>
                  </div>
                  
                  <div>
                    <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1">
                      <%= f.text_field :last_name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Last name" %>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="pt-6">
                <h3 class="text-lg font-medium text-gray-900">Profile Picture</h3>
                <div class="mt-4">
                  <%= f.label :profile_picture, class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1 flex items-center">
                    <% if resource.profile_picture.attached? %>
                      <div class="relative">
                        <%= image_tag resource.profile_picture, class: "h-16 w-16 rounded-full object-cover" %>
                        <span class="ml-3 text-sm text-gray-600">Current profile picture</span>
                      </div>
                    <% end %>
                  </div>
                  <div class="mt-2">
                    <%= f.file_field :profile_picture, id: "user_profile_picture", class: "sr-only", accept: "image/*" %>
                    <label for="user_profile_picture" class="cursor-pointer py-2 px-3 border border-gray-300 rounded-md shadow-sm text-sm leading-4 font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                      Choose file
                    </label>
                    <span id="profile-picture-filename" class="ml-2 text-sm text-gray-600">No file chosen</span>
                  </div>
                  <p class="mt-1 text-xs text-gray-500">JPG, PNG, or GIF up to 5MB</p>
                </div>
              </div>

              <div class="pt-6">
                <h3 class="text-lg font-medium text-gray-900">Contact Information</h3>
                <div class="mt-4">
                  <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= f.email_field :email, autocomplete: "email", 
                                     class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                                     placeholder: "your@email.com" %>
                  </div>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p class="mt-2 text-sm text-yellow-600">
                      Currently waiting confirmation for: <%= resource.unconfirmed_email %>
                    </p>
                  <% end %>
                </div>
              </div>
              
              <div class="pt-6">
                <h3 class="text-lg font-medium text-gray-900">Password</h3>
                <p class="mt-1 text-sm text-gray-500">Leave blank if you don't want to change it</p>
                
                <div class="mt-4 space-y-6">
                  <div>
                    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1">
                      <%= f.password_field :password, autocomplete: "new-password", 
                                         class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                                         placeholder: "New password" %>
                    </div>
                    <% if @minimum_password_length %>
                      <p class="mt-1 text-xs text-gray-500">Must be at least <%= @minimum_password_length %> characters</p>
                    <% end %>
                  </div>
                  
                  <div>
                    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                                         class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                                         placeholder: "Confirm new password" %>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="pt-6">
                <h3 class="text-lg font-medium text-gray-900">Current Password</h3>
                <p class="mt-1 text-sm text-gray-500">We need your current password to confirm your changes</p>
                
                <div class="mt-4">
                  <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= f.password_field :current_password, autocomplete: "current-password", 
                                       class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                                       placeholder: "Current password" %>
                  </div>
                </div>
              </div>
              
              <% if resource.respond_to?(:seller) && resource.seller.nil? %>
                <div class="pt-6 bg-indigo-50 border border-indigo-100 rounded-lg p-4 mb-6">
                  <div class="flex items-center">
                    <%= check_box_tag :become_seller, '1', false, class: 'h-5 w-5 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' %>
                    <label for="become_seller" class="ml-2 block text-base font-medium text-indigo-700">
                      I want to sell products on Digital Store
                    </label>
                  </div>
                  
                  <div class="seller-fields mt-4 pl-7 hidden" id="seller-fields">
                    <div>
                      <%= label_tag :business_name, "Business Name", class: "block text-sm font-medium text-gray-700" %>
                      <div class="mt-1">
                        <%= text_field_tag :business_name, nil, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Your Business Name" %>
                      </div>
                    </div>
                    
                    <div class="mt-4">
                      <h5 class="text-sm font-semibold text-indigo-800 mb-2">Benefits of selling with us:</h5>
                      <ul class="text-sm text-indigo-600 space-y-1">
                        <li class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          Reach thousands of customers across Ghana and Nigeria
                        </li>
                        <li class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          Set up your digital store in minutes
                        </li>
                        <li class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          Low commission rates starting at 5%
                        </li>
                        <li class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          Secure payment processing and digital delivery
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              <% end %>
              
              <div class="pt-6 flex justify-between items-center">
                <div>
                  <%= f.submit "Update Profile", class: "py-3 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-indigo-600 to-violet-700 hover:from-indigo-700 hover:to-violet-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transform transition duration-200 hover:translate-y-[-1px]" %>
                </div>
              </div>
            <% end %>
            
            <!-- Mobile display for account information -->
            <div class="block md:hidden pt-12 border-t border-gray-200 mt-12">
              <h3 class="text-lg font-medium text-gray-900">Account Information</h3>
              <dl class="mt-3 space-y-3">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Email</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= resource.email %></dd>
                </div>
                
                <div>
                  <dt class="text-sm font-medium text-gray-500">Member since</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= resource.created_at.strftime("%B %d, %Y") %></dd>
                </div>
                
                <% if resource.respond_to?(:sign_in_count) %>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Login count</dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= resource.sign_in_count %></dd>
                  </div>
                <% end %>
              </dl>
              
              <div class="mt-8">
                <%= button_to  destroy_user_session_path, method: :delete, 
                               class: "w-full flex justify-center items-center px-4 py-3 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                  Log out
                <% end %>
              </div>
            </div>
            
            <div class="pt-12 border-t border-gray-200 mt-12">
              <h3 class="text-lg font-medium text-gray-900">Delete Account</h3>
              <p class="mt-1 text-sm text-gray-500">Permanently delete your account and all your data</p>
              
              <div class="mt-4">
                <%= button_to "Delete my account", registration_path(resource_name), 
                               method: :delete, 
                               data: { confirm: "Are you sure you want to delete your account? This action cannot be undone." }, 
                               class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const fileInput = document.getElementById('user_profile_picture');
    const fileNameDisplay = document.getElementById('profile-picture-filename');
    
    fileInput.addEventListener('change', function() {
      if (fileInput.files.length > 0) {
        fileNameDisplay.textContent = fileInput.files[0].name;
      } else {
        fileNameDisplay.textContent = 'No file chosen';
      }
    });
    
    // Seller signup functionality
    const becomeSellerCheckbox = document.getElementById('become_seller');
    const sellerFields = document.getElementById('seller-fields');
    
    if (becomeSellerCheckbox && sellerFields) {
      becomeSellerCheckbox.addEventListener('change', function() {
        if (this.checked) {
          sellerFields.classList.remove('hidden');
        } else {
          sellerFields.classList.add('hidden');
        }
      });
    }
  });
</script>