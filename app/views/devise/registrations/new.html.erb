<div class="min-h-screen bg-gray-50 flex flex-col justify-center">
  <div class="mx-auto w-full max-w-6xl">
    <div class="flex rounded-xl shadow-xl overflow-hidden bg-white">
      <!-- Left side - Image -->
      <div class="hidden md:block md:w-1/2 bg-gradient-to-br from-indigo-600 to-violet-700 text-white p-12">
        <div class="h-full flex flex-col justify-between">
          <div>
            <h2 class="text-3xl font-bold">Join Digital Store</h2>
            <p class="mt-4 text-indigo-100 text-lg">Create an account to start selling or purchasing digital and physical products.</p>
            <ul class="mt-8 space-y-4">
              <li class="flex items-center">
                <div class="flex-shrink-0 w-6 h-6 rounded-full bg-indigo-300 bg-opacity-30 flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span class="ml-2 text-indigo-100">Discover unique digital products</span>
              </li>
              <li class="flex items-center">
                <div class="flex-shrink-0 w-6 h-6 rounded-full bg-indigo-300 bg-opacity-30 flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span class="ml-2 text-indigo-100">Sell your own creations</span>
              </li>
              <li class="flex items-center">
                <div class="flex-shrink-0 w-6 h-6 rounded-full bg-indigo-300 bg-opacity-30 flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span class="ml-2 text-indigo-100">Secure transactions and downloads</span>
              </li>
            </ul>
          </div>
          
          <!-- Decorative SVG illustration -->
          <div class="relative h-64 mt-8">
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
              <g opacity="0.2">
                <circle cx="150" cy="150" r="100" fill="white" />
                <circle cx="280" cy="180" r="60" fill="white" />
                <path d="M340 120C340 142.091 322.091 160 300 160C277.909 160 260 142.091 260 120C260 97.9086 277.909 80 300 80C322.091 80 340 97.9086 340 120Z" fill="white" />
                <path d="M120 230C120 252.091 102.091 270 80 270C57.9086 270 40 252.091 40 230C40 207.909 57.9086 190 80 190C102.091 190 120 207.909 120 230Z" fill="white" />
              </g>
              <!-- Digital product icon -->
              <rect x="120" y="80" width="160" height="160" rx="8" fill="white" opacity="0.6" />
              <path d="M200 100C177.909 100 160 117.909 160 140C160 162.091 177.909 180 200 180C222.091 180 240 162.091 240 140C240 117.909 222.091 100 200 100ZM215 145H205V155C205 157.761 202.761 160 200 160C197.239 160 195 157.761 195 155V145H185C182.239 145 180 142.761 180 140C180 137.239 182.239 135 185 135H195V125C195 122.239 197.239 120 200 120C202.761 120 205 122.239 205 125V135H215C217.761 135 220 137.239 220 140C220 142.761 217.761 145 215 145Z" fill="white" />
            </svg>
          </div>
          
          <div class="mt-8">
            <div class="flex space-x-4">
              <span class="text-indigo-100">Already have an account?</span>
              <%= link_to "Sign in", new_session_path(resource_name), class: "text-white font-semibold hover:text-indigo-200" %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right side - Form -->
      <div class="w-full md:w-1/2 p-8 md:p-12">
        <div class="max-w-md mx-auto">
          <div class="text-center md:text-left">
            <h2 class="text-2xl font-bold text-gray-900">Create your account</h2>
            <p class="mt-2 text-sm text-gray-600">Fill in the details below to get started</p>
          </div>
          
          <div class="mt-8">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                          html: { class: "space-y-6" }) do |f| %>
              
              <%= render "devise/shared/error_messages", resource: resource %>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= f.text_field :first_name, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "First name" %>
                  </div>
                </div>
                
                <div>
                  <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= f.text_field :last_name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Last name" %>
                  </div>
                </div>
              </div>
              
              <div>
                <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.email_field :email, autocomplete: "email", 
                                   class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                                   placeholder: "your@email.com" %>
                </div>
              </div>
              
              <div>
                <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.password_field :password, autocomplete: "new-password", 
                                       class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                                       placeholder: "Create a password" %>
                </div>
                <% if @minimum_password_length %>
                  <p class="mt-1 text-xs text-gray-500">Must be at least <%= @minimum_password_length %> characters</p>
                <% end %>
              </div>
              
              <div>
                <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                                       class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                                       placeholder: "Confirm your password" %>
                </div>
              </div>
              
              <div class="bg-indigo-50 border border-indigo-100 rounded-lg p-4 mb-4">
                <div class="flex items-center">
                  <%= check_box_tag :become_seller, '1', @become_seller, class: 'h-5 w-5 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' %>
                  <label for="become_seller" class="ml-2 block text-base font-medium text-indigo-700">
                    I want to sell products on Digital Store
                  </label>
                </div>
                
                <div class="seller-fields mt-3 pl-7 <%= 'hidden' unless @become_seller %>" id="seller-fields">
                  <div class="mb-3">
                    <%= label_tag :business_name, "Business Name", class: "block text-sm font-medium text-indigo-700" %>
                    <div class="mt-1">
                      <%= text_field_tag :business_name, nil, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Your Business Name" %>
                    </div>
                  </div>
                  
                  <h5 class="text-sm font-semibold text-indigo-800 mb-2">Benefits of selling with us:</h5>
                  <ul class="text-sm text-indigo-600 space-y-1">
                    <li class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      Reach thousands of customers across Ghana and Nigeria
                    </li>
                    <li class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      Set up your digital store in minutes
                    </li>
                    <li class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      Low commission rates starting at 5%
                    </li>
                    <li class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      Secure payment processing and digital delivery
                    </li>
                  </ul>
                </div>
              </div>
              
              <div class="flex items-center">
                <input id="terms" name="terms" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                <label for="terms" class="ml-2 block text-sm text-gray-900">
                  I agree to the 
                  <a href="#" class="text-indigo-600 hover:text-indigo-500">Terms of Service</a>
                  and 
                  <a href="#" class="text-indigo-600 hover:text-indigo-500">Privacy Policy</a>
                </label>
              </div>
              
              <div>
                <%= f.submit "Sign up", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-indigo-600 to-violet-700 hover:from-indigo-700 hover:to-violet-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transform transition duration-200 hover:translate-y-[-1px]" %>
              </div>
            <% end %>
            
            <div class="mt-6">
              <div class="relative">
                <div class="absolute inset-0 flex items-center">
                  <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                  <span class="px-2 bg-white text-gray-500">Or sign up with</span>
                </div>
              </div>
              
              <div class="mt-6 grid grid-cols-2 gap-3">
                <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                  <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 488 512">
                    <path fill="currentColor" d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z"/>
                  </svg>
                  <span class="ml-2">Google</span>
                </a>
                
                <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                  <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M20 10c0-5.523-4.477-10-10-10S0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.128 20 14.991 20 10z" clip-rule="evenodd" />
                  </svg>
                  <span class="ml-2">Facebook</span>
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Mobile sign in link -->
        <div class="mt-8 text-center md:hidden">
          <p class="text-sm text-gray-600">
            Already have an account? 
            <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Seller signup functionality
    const becomeSellerCheckbox = document.getElementById('become_seller');
    const sellerFields = document.getElementById('seller-fields');
    
    if (becomeSellerCheckbox && sellerFields) {
      becomeSellerCheckbox.addEventListener('change', function() {
        if (this.checked) {
          sellerFields.classList.remove('hidden');
        } else {
          sellerFields.classList.add('hidden');
        }
      });
    }
  });
</script>
