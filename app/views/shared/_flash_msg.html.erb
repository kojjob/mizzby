<div id="flash-container" 
     data-controller="flash-msg"
     class="fixed top-4 right-4 z-50 w-full max-w-md space-y-3 pointer-events-none">
  
  <% # SUCCESS MESSAGE %>
  <% if notice %>
    <div data-flash-msg-target="message"
         data-type="success"
         data-auto-dismiss="true"
         data-dismiss-after="3000"
         data-action="mouseenter->flash-msg#pauseProgress mouseleave->flash-msg#resumeProgress"
         class="transform transition-all duration-500 ease-out 
                bg-white 
                border-l-4 border-green-500 
                p-4 rounded-xl shadow-lg 
                flex items-center 
                translate-x-0 opacity-100
                pointer-events-auto
                relative group
                overflow-hidden">
      
      <!-- Progress bar -->
      <div data-flash-msg-target="progressBar"
           class="absolute bottom-0 left-0 h-1 bg-green-500 w-full transform-origin-left"
           style="transform: scaleX(1);"></div>
           
      <!-- Icon -->
      <div class="flex-shrink-0 mr-3">
        <div class="h-9 w-9 rounded-full bg-green-100 flex items-center justify-center">
          <svg class="h-5 w-5 text-green-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
      
      <!-- Content -->
      <div class="flex-grow mr-2">
        <h4 class="text-green-900 font-medium text-sm">Success</h4>
        <p class="text-green-800 text-sm mt-0.5"><%= notice %></p>
      </div>
      
      <!-- Close button -->
      <button data-action="click->flash-msg#dismiss"
              class="text-gray-400 hover:text-gray-600 
                     transition-colors duration-200
                     focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-white 
                     rounded-full p-1"
              aria-label="Close">
        <svg xmlns="http://www.w3.org/2000/svg" 
             class="h-4 w-4" 
             viewBox="0 0 20 20" 
             fill="currentColor">
          <path fill-rule="evenodd" 
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" 
                clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  <% end %>

