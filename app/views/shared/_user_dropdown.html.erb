<div data-controller="dropdown" class="relative">
  <button type="button"
          class="group flex items-center space-x-2 text-gray-300 hover:text-white transition outline-none"
          data-dropdown-target="button"
          data-action="click->dropdown#toggle">
    <%= user_avatar(current_user.is_a?(Array) ? nil : current_user) %>
    <svg class="h-4 w-4 text-gray-500 group-hover:text-gray-300 transition-transform duration-200"
         data-dropdown-target="arrow"
         xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>

  <%# Dropdown Menu Content - Changes based on user type %>
  <div data-dropdown-target="menu" class="absolute z-[100] right-0 mt-2 w-64 bg-white rounded-lg shadow-xl hidden ring-1 ring-black ring-opacity-5">

    <% if current_user %>
      <%# Logged in user header - Shown for all logged in users %>
      <div class="p-4 border-b">
        <div class="flex items-center space-x-3">
          <% if current_user.profile_picture.present? %>
            <%= image_tag current_user.profile_picture, class: "w-10 h-10 rounded-full object-cover" %>
          <% else %>
            <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-semibold">
              <%= current_user.first_name.first.upcase %><%= current_user.last_name.first.upcase %>
            </div>
          <% end %>
          <div>
            <p class="font-medium text-gray-900">
              <%= current_user.first_name %> <%= current_user.last_name %>
              <% if current_user.super_admin? %>
                <span class="ml-1 px-2 py-0.5 bg-red-100 text-red-800 text-xs font-semibold rounded">Super Admin</span>
              <% elsif current_user.admin? %>
                <span class="ml-1 px-2 py-0.5 bg-blue-100 text-blue-800 text-xs font-semibold rounded">Admin</span>
              <% end %>
            </p>
            <p class="text-sm text-gray-500"><%= current_user.email %></p>
          </div>
        </div>
      </div>

      <%# Common User Items - Shown for all logged in users %>
      <div class="py-2">
        <a href="/account/profile" class="flex items-center px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition">
          <svg class="w-5 h-5 mr-3 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
