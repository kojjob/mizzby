<header class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white transition-all duration-300 shadow-lg" 
        data-controller="header-menu">
  <div class="container mx-auto px-4">
    <%# Main Navigation Bar %>
    <div class="flex items-center justify-between py-4">
      <%# Logo Area %>
      <div class="flex items-center space-x-2">
        <%= link_to root_path, class: "flex items-center transition-transform duration-300 hover:scale-105" do %>
          <%= image_tag "logo.svg", alt: "Digital Store Logo", class: "h-10 w-auto" %>
          <span class="ml-2 text-xl font-bold">Digital Store</span>
        <% end %>
      </div>

      <%# Search Bar - Desktop %>
      <div class="hidden md:block flex-grow max-w-2xl mx-8">
        <%= form_with url: search_path, method: :get, class: "relative" do |f| %>
          <div class="relative">
            <%= f.text_field :q, placeholder: "Search products...", 
                             class: "w-full py-2 pl-4 pr-10 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 focus:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/30 transition-all" %>
            <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
          </div>
        <% end %>
      </div>

      <%# Navigation Links & User Menu - Desktop %>
      <nav class="hidden md:flex items-center space-x-8">
        <%# Categories Dropdown %>
        <div class="relative group" data-controller="dropdown">
          <button class="flex items-center space-x-1 py-2 group-hover:text-yellow-300 transition-colors" 
                  data-action="click->dropdown#toggle" 
                  aria-expanded="false">
            <span>Categories</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute left-0 top-full z-10 mt-2 w-screen max-w-5xl grid grid-cols-4 gap-4 bg-white text-gray-800 rounded-lg shadow-xl p-6 opacity-0 invisible transform -translate-y-2 group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 transition-all duration-300"
               data-dropdown-target="menu" aria-hidden="true">
            <% Category.roots.includes(:subcategories).each do |category| %>
              <div>
                <%= link_to category.name, category_path(category), class: "font-bold text-indigo-600 hover:text-indigo-800 transition-colors" %>
                <ul class="mt-2 space-y-1">
                  <% category.subcategories.each do |subcategory| %>
                    <li>
                      <%= link_to subcategory.name, category_path(subcategory), class: "text-sm text-gray-600 hover:text-indigo-600 transition-colors" %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>

        <%= link_to "New Arrivals", new_arrivals_path, class: "py-2 hover:text-yellow-300 transition-colors" %>
        <%= link_to "Deals", deals_path, class: "py-2 hover:text-yellow-300 transition-colors" %>
        
        <%# Conditional Navigation Based on User Type %>
        <% if user_signed_in? %>
          <% if current_user.seller? %>
            <%# Seller Specific Links %>
            <div class="relative group" data-controller="dropdown">
              <button class="flex items-center space-x-1 py-2 group-hover:text-yellow-300 transition-colors" 
                      data-action="click->dropdown#toggle" 
                      aria-expanded="false">
                <span>Seller Dashboard</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute right-0 top-full z-10 mt-2 w-64 bg-white text-gray-800 rounded-lg shadow-xl overflow-hidden opacity-0 invisible transform -translate-y-2 group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 transition-all duration-300"
                   data-dropdown-target="menu" aria-hidden="true">
                <div class="p-3 bg-indigo-50 border-b border-indigo-100">
                  <p class="text-sm text-indigo-700 font-medium">Manage Your Store</p>
                </div>
                <div class="p-2">
                  <%= link_to sellers_products_path, class: "flex items-center space-x-2 p-2 rounded-md hover:bg-indigo-50 transition-colors" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                    <span>Products</span>
                  <% end %>
                  <%= link_to sellers_orders_path, class: "flex items-center space-x-2 p-2 rounded-md hover:bg-indigo-50 transition-colors" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                    <span>Orders</span>
                  <% end %>
                  <%= link_to sellers_analytics_path, class: "flex items-center space-x-2 p-2 rounded-md hover:bg-indigo-50 transition-colors" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <span>Analytics</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if current_user.admin? %>
            <%# Admin Specific Links %>
            <%= link_to admin_dashboard_path, class: "flex items-center space-x-1 py-2 text-yellow-300 hover:text-yellow-200 transition-colors" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>Admin</span>
            <% end %>
          <% end %>
          
          <%# User Menu for All Authenticated Users %>
          <div class="relative group" data-controller="dropdown">
            <button class="flex items-center space-x-2 py-2 group-hover:text-yellow-300 transition-colors" 
                    data-action="click->dropdown#toggle" 
                    aria-expanded="false">
              <% if current_user.profile_picture.present? %>
                <%= image_tag current_user.profile_picture, class: "h-8 w-8 rounded-full object-cover border-2 border-white/30" %>
              <% else %>
                <div class="h-8 w-8 rounded-full bg-white/20 flex items-center justify-center text-sm font-medium">
                  <%= current_user.first_name.first.upcase %><%= current_user.last_name.first.upcase %>
                </div>
              <% end %>
              <span><%= current_user.first_name %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="absolute right-0 top-full z-10 mt-2 w-64 bg-white text-gray-800 rounded-lg shadow-xl overflow-hidden opacity-0 invisible transform -translate-y-2 group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 transition-all duration-300"
                 data-dropdown-target="menu" aria-hidden="true">
              <div class="p-3 bg-indigo-50 border-b border-indigo-100">
                <p class="font-medium"><%= current_user.first_name %> <%= current_user.last_name %></p>
                <p class="text-sm text-gray-500"><%= current_user.email %></p>
              </div>
              <div class="p-2">
                <%= link_to dashboard_path, class: "flex items-center space-x-2 p-2 rounded-md hover:bg-indigo-50 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                  <span>Dashboard</span>
                <% end %>
                <%= link_to orders_path, class: "flex items-center space-x-2 p-2 rounded-md hover:bg-indigo-50 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                  </svg>
                  <span>My Orders</span>
                <% end %>
                <%= link_to profile_path, class: "flex items-center space-x-2 p-2 rounded-md hover:bg-indigo-50 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span>Profile</span>
                <% end %>
                <%= link_to wishlist_items_path, class: "flex items-center space-x-2 p-2 rounded-md hover:bg-indigo-50 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                  <span>Wishlist</span>
                <% end %>
                <div class="border-t border-gray-100 mt-2 pt-2">
                  <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center space-x-2 p-2 rounded-md text-red-600 hover:bg-red-50 transition-colors" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    <span>Sign Out</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <%# Guest User Links %>
          <%= link_to new_user_session_path, class: "py-2 hover:text-yellow-300 transition-colors" do %>
            Sign In
          <% end %>
          <%= link_to new_user_registration_path, class: "py-2 px-4 bg-yellow-400 hover:bg-yellow-300 text-indigo-800 font-medium rounded-full transition-colors" do %>
            Sign Up
          <% end %>
        <% end %>
        
        <%# Cart Icon - For All Users %>
        <%= link_to current_cart_path, class: "relative p-2 text-white hover:text-yellow-300 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <% if user_signed_in? && current_user.cart&.cart_items&.count&.positive? %>
            <span class="absolute -top-1 -right-1 bg-yellow-400 text-indigo-800 text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center">
              <%= current_user.cart.cart_items.count %>
            </span>
          <% end %>
        <% end %>
      </nav>

      <%# Mobile Menu Toggle %>
      <div class="flex items-center md:hidden">
        <%= link_to current_cart_path, class: "relative p-2 mr-2 text-white" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <% if user_signed_in? && current_user.cart&.cart_items&.count&.positive? %>
            <span class="absolute -top-1 -right-1 bg-yellow-400 text-indigo-800 text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center">
              <%= current_user.cart.cart_items.count %>
            </span>
          <% end %>
        <% end %>
        
        <button class="p-2 text-white focus:outline-none" 
                aria-label="Toggle mobile menu"
                data-action="click->header-menu#toggleMenu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" 
               data-header-menu-target="menuIcon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" 
               data-header-menu-target="closeIcon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
    
    <%# Search Bar - Mobile %>
    <div class="py-3 md:hidden">
      <%= form_with url: search_path, method: :get, class: "relative" do |f| %>
        <div class="relative">
          <%= f.text_field :q, placeholder: "Search products...", 
                           class: "w-full py-2 pl-4 pr-10 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 focus:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/30 transition-all" %>
          <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>
  </div>
  
  <%# Mobile Menu %>
  <div class="md:hidden bg-indigo-700 transform -translate-y-full opacity-0 transition-all duration-300 ease-in-out absolute inset-x-0 z-20"
       data-header-menu-target="mobileMenu">
    <div class="px-4 py-3 space-y-3">
      <div class="border-b border-indigo-600 pb-3">
        <p class="text-lg font-medium">Categories</p>
        <ul class="mt-2 space-y-1">
          <% Category.roots.each do |category| %>
            <li>
              <%= link_to category.name, category_path(category), class: "block py-1 hover:text-yellow-300 transition-colors" %>
            </li>
          <% end %>
          <li>
            <%= link_to "View All Categories →", categories_path, class: "block py-1 text-sm text-indigo-300 hover:text-yellow-300 transition-colors" %>
          </li>
        </ul>
      </div>
      
      <div class="border-b border-indigo-600 pb-3">
        <p class="text-lg font-medium">Quick Links</p>
        <ul class="mt-2 space-y-1">
          <%= link_to "New Arrivals", new_arrivals_path, class: "block py-1 hover:text-yellow-300 transition-colors" %>
          <%= link_to "Deals", deals_path, class: "block py-1 hover:text-yellow-300 transition-colors" %>
        </ul>
      </div>
      
      <% if user_signed_in? %>
        <div class="border-b border-indigo-600 pb-3">
          <p class="text-lg font-medium">Your Account</p>
          <ul class="mt-2 space-y-1">
            <%= link_to "Dashboard", dashboard_path, class: "block py-1 hover:text-yellow-300 transition-colors" %>
            <%= link_to "Orders", orders_path, class: "block py-1 hover:text-yellow-300 transition-colors" %>
            <%= link_to "Profile", profile_path, class: "block py-1 hover:text-yellow-300 transition-colors" %>
            <%= link_to "Wishlist", wishlist_items_path, class: "block py-1 hover:text-yellow-300 transition-colors" %>
            
            <% if current_user.seller? %>
              <%= link_to "Seller Dashboard", sellers_dashboard_path, class: "block py-1 hover:text-yellow-300 transition-colors" %>
            <% end %>
            
            <% if current_user.admin? %>
              <%= link_to "Admin Dashboard", admin_dashboard_path, class: "block py-1 text-yellow-300 hover:text-yellow-200 transition-colors" %>
            <% end %>
          </ul>
      </div>
      
      <%# Mobile Menu - Categories section %>
      <div class="border-b border-indigo-600 pb-3">
        <p class="text-lg font-medium">Categories</p>
        <ul class="mt-2 space-y-2">
          <% Category.roots.each do |category| %>
            <li>
              <%= link_to category_path(category), class: "flex items-center py-1 hover:text-yellow-300 transition-colors" do %>
                <div class="w-8 h-8 rounded-full flex items-center justify-center mr-2 <%= category_color_class(category) %>">
                  <%= category_icon(category) %>
                </div>
                <%= category.name %>
              <% end %>
            </li>
          <% end %>
          <li>
            <%= link_to "View All Categories →", categories_path, class: "block py-1 text-sm text-indigo-300 hover:text-yellow-300 transition-colors ml-10" %>
          </li>
        </ul>
      </div>
        
        <div>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "w-full text-left py-1 text-red-300 hover:text-red-200 transition-colors" %>
        </div>
      <% else %>
        <div>
          <ul class="space-y-2">
            <%= link_to "Sign In", new_user_session_path, class: "block py-2 hover:text-yellow-300 transition-colors" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "block py-2 px-4 bg-yellow-400 hover:bg-yellow-300 text-indigo-800 font-medium rounded-full transition-colors text-center" %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</header>