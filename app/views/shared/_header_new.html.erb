<!-- Enhanced Header Component with vibrant design, responsive layout, and dynamic content -->
<header class="bg-gradient-to-r from-indigo-600 via-purple-600 to-fuchsia-600 text-white transition-all duration-500 shadow-lg" 
        data-controller="header-menu">
  <!-- Announcement Bar with Animation -->
  <div class="bg-gradient-to-r from-yellow-400 via-yellow-500 to-amber-500 text-indigo-900 py-2 relative overflow-hidden">
    <div class="flex items-center justify-center text-sm font-medium animate-pulse">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
      <span>Spring Sale: 20% off all digital products! Use code SPRING25</span>
    </div>
    <!-- Animated Background Elements -->
    <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
      <div class="absolute top-1/2 left-1/4 h-8 w-8 rounded-full bg-white opacity-10 animate-ping"></div>
      <div class="absolute top-1/3 right-1/4 h-6 w-6 rounded-full bg-white opacity-10 animate-ping animation-delay-500"></div>
    </div>
  </div>

  <div class="container mx-auto px-4">
    <!-- Main Navigation Bar -->
    <div class="flex items-center justify-between py-4">
      <!-- Logo Area with Animation -->
      <div class="flex items-center space-x-2">
        <%= link_to root_path, class: "flex items-center transition-all duration-300 hover:scale-105 hover:rotate-1" do %>
          <%= image_tag "logo.svg", alt: "Digital Store Logo", class: "h-10 w-auto filter drop-shadow-lg" %>
          <div class="ml-2 relative">
            <span class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-yellow-200">Digital Store</span>
            <span class="absolute -bottom-3 left-0 text-xs text-yellow-300 opacity-75">Everything digital, delivered</span>
          </div>
        <% end %>
      </div>

      <!-- Middle Section: Categories Button + Search -->
      <div class="hidden md:flex flex-grow max-w-3xl mx-4 items-center space-x-4">
        <!-- Categories Mega Dropdown -->
        <div class="relative group" data-controller="dropdown">
          <button class="flex items-center space-x-1 py-2 px-4 rounded-lg bg-white/10 hover:bg-white/20 transition-colors" 
                  data-action="click->dropdown#toggle" 
                  aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <span>Categories</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:rotate-180 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <!-- Enhanced Mega Dropdown with Images & Colors -->
          <div class="absolute left-0 right-0 mx-auto top-full z-10 mt-2 w-[95vw] max-w-4xl grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 bg-white text-gray-800 rounded-xl shadow-2xl p-4 md:p-6 opacity-0 invisible transform -translate-y-4 pointer-events-none group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 group-hover:pointer-events-auto transition-all duration-300 ease-out"
               data-dropdown-target="menu" aria-hidden="true">
            <!-- Featured Category with Image -->
            <div class="col-span-1 sm:col-span-2 bg-gradient-to-br from-indigo-50 to-purple-50 rounded-lg p-4 relative overflow-hidden">
              <div class="relative z-10">
                <h3 class="text-lg font-bold text-indigo-800 mb-2">Featured Collection</h3>
                <p class="text-sm text-indigo-600 mb-4">Discover our most popular digital products</p>
                <%= link_to "Explore Collection", products_path(featured: true), class: "inline-block px-4 py-2 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors" %>
              </div>
              <%= image_tag "featured-category.png", class: "absolute right-0 bottom-0 h-24 md:h-32 w-auto rounded-bl-lg opacity-80 hidden sm:block" %>
            </div>
            
            <!-- Categories list for dropdown -->
            <% if Category.respond_to?(:roots) && Category.roots.present? %>
              <% Category.roots.includes(:subcategories).limit(3).each do |category| %>
                <div class="">
                  <%= link_to category_path(category), class: "flex items-center font-bold text-indigo-600 hover:text-indigo-800 transition-colors mb-3" do %>
                    <div class="w-6 h-6 rounded-md flex items-center justify-center mr-2 bg-indigo-100 text-indigo-600">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                      </svg>
                    </div>
                    <%= category.name %>
                  <% end %>
                  <ul class="mt-2 space-y-2 border-l-2 border-indigo-100 pl-4">
                    <% category.subcategories.limit(4).each do |subcategory| %>
                      <li>
                        <%= link_to subcategory.name, category_path(subcategory), class: "text-sm text-gray-600 hover:text-indigo-600 transition-colors flex items-center" %>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            <% else %>
              <!-- Fallback content if no categories -->
              <div class="col-span-1 sm:col-span-2">
                <h3 class="text-md font-medium text-gray-700">Browse Categories</h3>
                <ul class="mt-3 space-y-2">
                  <li><a href="#" class="text-indigo-600 hover:text-indigo-800">Digital Downloads</a></li>
                  <li><a href="#" class="text-indigo-600 hover:text-indigo-800">Software</a></li>
                  <li><a href="#" class="text-indigo-600 hover:text-indigo-800">E-Books</a></li>
                  <li><a href="#" class="text-indigo-600 hover:text-indigo-800">Online Courses</a></li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Search Bar with Enhanced Design -->
        <div class="flex-grow">
          <%= form_with url: search_path, method: :get, class: "relative group" do |f| %>
            <div class="relative">
              <%= f.text_field :q, placeholder: "Search products...", 
                             class: "w-full py-2 pl-4 pr-10 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 focus:bg-white/20 focus:outline-none focus:ring-2 focus:ring-yellow-300/50 transition-all group-hover:border-white/30" %>
              <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white group-hover:text-yellow-300 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </button>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Navigation Links & User Menu - Desktop -->
      <nav class="hidden md:flex items-center space-x-4">
        <!-- Enhanced Navigation Links with Icons -->
        <%= link_to new_arrivals_path, class: "flex items-center py-2 hover:text-yellow-300 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          <span>New Arrivals</span>
        <% end %>
        
        <%= link_to deals_path, class: "flex items-center py-2 hover:text-yellow-300 transition-colors group" do %>
          <div class="relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
            </svg>
            <span class="absolute -top-1 -right-1 bg-yellow-400 text-xs text-indigo-900 font-bold rounded-full h-4 w-4 flex items-center justify-center group-hover:scale-110 transition-transform">!</span>
          </div>
          <span>Deals</span>
        <% end %>
        
        <!-- Conditional Navigation Based on User Type -->
        <% if user_signed_in? %>
          <% if current_user.seller? %>
            <!-- Seller Specific Links with Enhanced UI -->
            <div class="relative group" data-controller="dropdown">
              <button class="flex items-center space-x-1 py-2 group-hover:text-yellow-300 transition-colors" 
                      data-action="click->dropdown#toggle" 
                      aria-expanded="false">
                <div class="relative">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <% unread_seller_notifications_count = 0 %>
                  <% if unread_seller_notifications_count > 0 %>
                  <span class="absolute -top-1 -right-1 bg-yellow-400 text-xs text-indigo-900 font-bold rounded-full h-4 w-4 flex items-center justify-center animate-pulse">
                    <%= unread_seller_notifications_count %>
                  </span>
                  <% end %>
                </div>
                <span>Seller</span>
              </button>
              <!-- Enhanced Seller Dropdown with Stats and Icons -->
              <div class="absolute right-0 top-full z-10 mt-2 w-80 bg-white text-gray-800 rounded-xl shadow-2xl overflow-hidden opacity-0 invisible transform -translate-y-4 pointer-events-none group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 group-hover:pointer-events-auto transition-all duration-300 ease-out"
                   data-dropdown-target="menu" aria-hidden="true">
                <div class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white p-4">
                  <div class="flex items-center justify-between">
                    <p class="font-bold"><%= current_user.seller.business_name %></p>
                    <div class="<%= current_user.seller.verified? ? 'bg-green-400' : 'bg-yellow-400' %> text-xs px-2 py-1 rounded-full text-indigo-900 font-medium">
                      <%= current_user.seller.verified? ? 'Verified' : 'Pending' %>
                    </div>
                  </div>
                  <div class="mt-2 text-sm opacity-90">Seller since <%= current_user.seller.created_at.strftime("%B %Y") %></div>
                </div>
                
                <!-- Seller Stats Summary -->
                <div class="grid grid-cols-3 gap-2 bg-indigo-50 p-3">
                  <div class="text-center p-2">
                    <div class="text-2xl font-bold text-indigo-700"><%= current_user.seller.products.count %></div>
                    <div class="text-xs text-indigo-600">Products</div>
                  </div>
                  <div class="text-center p-2">
                    <div class="text-2xl font-bold text-indigo-700"><%= current_user.seller.sales_this_month %></div>
                    <div class="text-xs text-indigo-600">Sales</div>
                  </div>
                  <div class="text-center p-2">
                    <div class="text-2xl font-bold text-indigo-700"><%= current_user.seller.average_rating.round(1) %></div>
                    <div class="text-xs text-indigo-600">Rating</div>
                  </div>
                </div>
                
                <div class="p-4">
                  <!-- Menu Items with Colorful Icons -->
                  <%= link_to seller_dashboard_path, class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-50 transition-all" do %>
                    <div class="w-9 h-9 rounded-lg bg-indigo-100 flex items-center justify-center text-indigo-600">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-medium">Dashboard</div>
                      <div class="text-xs text-gray-500">Overview of your store</div>
                    </div>
                  <% end %>
                  
                  <%= link_to "#", class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-50 transition-all" do %>
                    <div class="w-9 h-9 rounded-lg bg-purple-100 flex items-center justify-center text-purple-600">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-medium">Products</div>
                      <div class="text-xs text-gray-500">Manage your listings</div>
                    </div>
                  <% end %>
                  
                  <%= link_to "#", class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-50 transition-all" do %>
                    <div class="w-9 h-9 rounded-lg bg-blue-100 flex items-center justify-center text-blue-600">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-medium">Orders</div>
                      <div class="text-xs text-gray-500">Manage customer orders</div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if current_user.admin? %>
            <!-- Admin Specific Links with Badge -->
            <div class="relative group">
              <%= link_to admin_dashboard_path, class: "flex items-center space-x-1 py-2 text-yellow-300 hover:text-yellow-200 transition-colors" do %>
                <div class="relative">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <!-- Admin Alert Badge -->
                  <% admin_alerts_count = 0 %>
                  <% if admin_alerts_count > 0 %>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-xs text-white font-bold rounded-full h-4 w-4 flex items-center justify-center animate-pulse">
                      <%= admin_alerts_count %>
                    </span>
                  <% end %>
                </div>
                <span>Admin</span>
              <% end %>
            </div>
          <% end %>
          
          <!-- User Menu for All Authenticated Users with Enhanced Dropdown -->
          <div class="relative group" data-controller="dropdown">
            <button class="flex items-center space-x-2 py-2 group-hover:text-yellow-300 transition-colors" 
                    data-action="click->dropdown#toggle" 
                    aria-expanded="false">
              <% if current_user.profile_picture.present? %>
                <div class="relative">
                  <%= image_tag current_user.profile_picture, class: "h-8 w-8 rounded-full object-cover border-2 border-white/30 group-hover:border-yellow-300/50 transition-colors" %>
                  <% if current_user.notifications.where(read_at: nil).count > 0 %>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-xs text-white font-bold rounded-full h-4 w-4 flex items-center justify-center">
                      <%= current_user.notifications.where(read_at: nil).count < 10 ? current_user.notifications.where(read_at: nil).count : '9+' %>
                    </span>
                  <% end %>
                </div>
              <% else %>
                <div class="relative">
                  <div class="h-8 w-8 rounded-full bg-gradient-to-br from-yellow-400 to-amber-500 flex items-center justify-center text-sm font-medium text-indigo-800 border-2 border-white/30 group-hover:border-yellow-300/50 transition-colors">
                    <%= current_user.first_name.first.upcase %><%= current_user.last_name.first.upcase %>
                  </div>
                  <% if current_user.notifications.where(read_at: nil).count > 0 %>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-xs text-white font-bold rounded-full h-4 w-4 flex items-center justify-center">
                      <%= current_user.notifications.where(read_at: nil).count < 10 ? current_user.notifications.where(read_at: nil).count : '9+' %>
                    </span>
                  <% end %>
                </div>
              <% end %>
              <span class="hidden md:inline"><%= current_user.first_name %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:rotate-180 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            
            <!-- Enhanced User Dropdown -->
            <div class="absolute right-0 top-full z-10 mt-2 w-80 bg-white text-gray-800 rounded-xl shadow-2xl overflow-hidden opacity-0 invisible transform -translate-y-4 pointer-events-none group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 group-hover:pointer-events-auto transition-all duration-300 ease-out"
                 data-dropdown-target="menu" aria-hidden="true">
              <!-- User Header -->
              <div class="relative bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-6 pb-12">
                <div class="flex items-center">
                  <% if current_user.profile_picture.present? %>
                    <%= image_tag current_user.profile_picture, class: "h-14 w-14 rounded-full object-cover border-2 border-white/30" %>
                  <% else %>
                    <div class="h-14 w-14 rounded-full bg-gradient-to-br from-yellow-400 to-amber-500 flex items-center justify-center text-lg font-medium text-indigo-800 border-2 border-white/30">
                      <%= current_user.first_name.first.upcase %><%= current_user.last_name.first.upcase %>
                    </div>
                  <% end %>
                  <div class="ml-4">
                    <p class="font-bold"><%= current_user.first_name %> <%= current_user.last_name %></p>
                    <p class="text-sm text-indigo-200"><%= current_user.email %></p>
                  </div>
                </div>
                <% unless current_user.completed_profile? %>
                  <div class="mt-4">
                    <div class="flex justify-between text-xs mb-1">
                      <span>Profile Completion</span>
                      <span>Incomplete</span>
                    </div>
                    <div class="w-full bg-white/20 rounded-full h-2">
                      <div class="bg-yellow-400 h-2 rounded-full" style="width: 66%"></div>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- Action Cards in Negative Margin -->
              <div class="grid grid-cols-3 gap-3 px-5 -mt-8 mb-4">
                <%= link_to dashboard_path, class: "bg-white rounded-lg shadow p-3 text-center hover:shadow-md transition-shadow" do %>
                  <div class="bg-indigo-100 w-10 h-10 rounded-full flex items-center justify-center text-indigo-600 mx-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                  </div>
                  <div class="mt-2 text-xs font-medium">Dashboard</div>
                <% end %>
                
                <%= link_to orders_path, class: "bg-white rounded-lg shadow p-3 text-center hover:shadow-md transition-shadow" do %>
                  <div class="bg-purple-100 w-10 h-10 rounded-full flex items-center justify-center text-purple-600 mx-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                  </div>
                  <div class="mt-2 text-xs font-medium">Orders</div>
                <% end %>
                
                <%= link_to download_links_path, class: "bg-white rounded-lg shadow p-3 text-center hover:shadow-md transition-shadow" do %>
                  <div class="bg-green-100 w-10 h-10 rounded-full flex items-center justify-center text-green-600 mx-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                  </div>
                  <div class="mt-2 text-xs font-medium">Downloads</div>
                <% end %>
              </div>
              
              <!-- Menu Links -->
              <div class="px-4 pb-4 space-y-1">
                <%= link_to profile_path, class: "flex items-center space-x-3 p-2 rounded-lg hover:bg-indigo-50 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span>Profile Settings</span>
                <% end %>
                
                <%= link_to wishlist_items_path, class: "flex items-center space-x-3 p-2 rounded-lg hover:bg-indigo-50 transition-colors" do %>
                  <div class="relative">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
