<!-- JavaScript for header animations and interactions -->
<script>
  // Add this to your Stimulus controller or include in the view
  document.addEventListener('turbo:load', () => {
    // Header scroll effect
    const header = document.querySelector('header');
    let lastScrollY = window.scrollY;
    
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        header.classList.add('bg-opacity-95', 'backdrop-blur-sm', 'py-2');
        header.classList.remove('py-4');
        
        if (lastScrollY < window.scrollY && window.scrollY > 300) {
          header.classList.add('transform', '-translate-y-full');
        } else {
          header.classList.remove('transform', '-translate-y-full');
        }
      } else {
        header.classList.remove('bg-opacity-95', 'backdrop-blur-sm', 'py-2', 'transform', '-translate-y-full');
        header.classList.add('py-4');
      }
      
      lastScrollY = window.scrollY;
    });
    
    // Add animation delay classes for staggered animations
    document.querySelectorAll('.animation-delay-500').forEach(el => {
      el.style.animationDelay = '500ms';
    });
    
    document.querySelectorAll('.animation-delay-1000').forEach(el => {
      el.style.animationDelay = '1000ms';
    });
  });
</script>
