<header class="bg-gray-900 shadow-lg sticky top-0 z-50" data-controller="navbar">
  <!-- Top Promo Bar -->
  <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-2 px-4 text-center text-sm font-medium">
    <p>üöÄ Launch Special: Get 25% off with code <span class="font-bold text-yellow-300">LAUNCH25</span></p>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 group">
          <div class="relative">
            <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-300"></div>
            <div class="relative bg-gray-900 rounded-lg p-1.5">
              <svg class="h-8 w-8 text-indigo-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </div>
          </div>
          <span class="text-white font-bold text-xl">Mizzby<span class="text-indigo-500">.</span></span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-1">
        <!-- Categories Dropdown -->
        <div data-controller="dropdown" class="relative">
          <button type="button" 
                  data-action="click->dropdown#toggle"
                  data-dropdown-target="button"
                  class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition duration-200 text-sm font-medium">
            <span>Categories</span>
            <svg data-dropdown-target="arrow" class="ml-1.5 h-4 w-4 transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
          
          <div data-dropdown-target="menu" class="hidden absolute left-0 mt-2 w-80 bg-white rounded-xl shadow-2xl ring-1 ring-black ring-opacity-5 overflow-hidden z-[100]">
            <div class="p-4 grid gap-2">
              <a href="/categories/ebooks" class="flex items-center p-3 rounded-lg hover:bg-indigo-50 transition group">
                <div class="flex-shrink-0 w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Ebooks</p>
                  <p class="text-xs text-gray-500">Guides & fiction</p>
                </div>
              </a>
              <a href="/categories/templates" class="flex items-center p-3 rounded-lg hover:bg-indigo-50 transition group">
                <div class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center text-purple-600 group-hover:bg-purple-600 group-hover:text-white transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Templates</p>
                  <p class="text-xs text-gray-500">Web & presentations</p>
                </div>
              </a>
              <a href="/categories/courses" class="flex items-center p-3 rounded-lg hover:bg-indigo-50 transition group">
                <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center text-green-600 group-hover:bg-green-600 group-hover:text-white transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Courses</p>
                  <p class="text-xs text-gray-500">Video tutorials</p>
                </div>
              </a>
              <a href="/categories/graphics" class="flex items-center p-3 rounded-lg hover:bg-indigo-50 transition group">
                <div class="flex-shrink-0 w-10 h-10 bg-pink-100 rounded-lg flex items-center justify-center text-pink-600 group-hover:bg-pink-600 group-hover:text-white transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Graphics</p>
                  <p class="text-xs text-gray-500">Icons & illustrations</p>
                </div>
              </a>
            </div>
            <div class="bg-gray-50 px-4 py-3">
              <a href="/categories" class="text-sm font-medium text-indigo-600 hover:text-indigo-800 flex items-center">
                View all categories
                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <a href="/products" class="px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition duration-200 text-sm font-medium">
          Products
        </a>
        <a href="/new-arrivals" class="px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition duration-200 text-sm font-medium">
          New Arrivals
        </a>
        <a href="/best-sellers" class="px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition duration-200 text-sm font-medium">
          Best Sellers
        </a>

        <!-- Deals Dropdown -->
        <div data-controller="dropdown" class="relative">
          <button type="button"
                  data-action="click->dropdown#toggle"
                  data-dropdown-target="button"
                  class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition duration-200 text-sm font-medium">
            <span class="flex items-center">
              Deals
              <span class="ml-1.5 px-1.5 py-0.5 text-xs bg-red-500 text-white rounded-full">Hot</span>
            </span>
            <svg data-dropdown-target="arrow" class="ml-1.5 h-4 w-4 transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
          
          <div data-dropdown-target="menu" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-xl shadow-2xl ring-1 ring-black ring-opacity-5 overflow-hidden z-[100]">
            <div class="py-2">
              <a href="/deals/flash-sales" class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition">‚ö° Flash Sales</a>
              <a href="/deals/clearance" class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition">üè∑Ô∏è Clearance</a>
              <a href="/deals/weekly-offers" class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition">üìÖ Weekly Offers</a>
              <a href="/deals/bundles" class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition">üì¶ Bundles</a>
            </div>
          </div>
        </div>
      </nav>

      <!-- Search Bar (Desktop) -->
      <div class="hidden md:flex flex-1 max-w-md mx-6">
        <form action="/search" method="get" class="w-full">
          <div class="relative">
            <input type="text" name="q" placeholder="Search products..."
                   class="w-full pl-10 pr-4 py-2 bg-gray-800 border border-gray-700 rounded-full text-sm text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-gray-700 transition duration-200">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
          </div>
        </form>
      </div>

      <!-- Right Side Actions -->
      <div class="flex items-center space-x-2">
        <!-- Mobile Search -->
        <button type="button" class="md:hidden p-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </button>

        <!-- Wishlist (Click to open slide-over) -->
        <button 
          type="button"
          onclick="document.dispatchEvent(new CustomEvent('wishlist:toggle'))"
          class="relative p-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition group wishlist-toggle-btn"
          aria-label="Open wishlist"
        >
          <svg class="h-5 w-5 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
          <%= render 'shared/wishlist_count_badge' %>
        </button>

        <!-- Notifications -->
        <div data-controller="dropdown" class="relative hidden sm:block">
          <button type="button" data-action="click->dropdown#toggle" data-dropdown-target="button"
                  class="relative p-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
            <% notification_count = user_signed_in? ? current_user.notifications&.where(read_at: nil)&.count.to_i : 0 %>
            <% if notification_count > 0 %>
              <span class="absolute -top-0.5 -right-0.5 h-4 w-4 bg-yellow-500 text-gray-900 text-xs font-bold rounded-full flex items-center justify-center ring-2 ring-gray-900">
                <%= notification_count > 9 ? '9+' : notification_count %>
              </span>
            <% end %>
          </button>
          
          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-xl shadow-2xl ring-1 ring-black ring-opacity-5 overflow-hidden z-[100]">
            <div class="px-4 py-3 border-b border-gray-100 flex justify-between items-center">
              <h3 class="text-sm font-semibold text-gray-900">Notifications</h3>
              <a href="/notifications" class="text-xs text-indigo-600 hover:text-indigo-800 font-medium">View all</a>
            </div>
            <div class="max-h-72 overflow-y-auto">
              <a href="#" class="block px-4 py-3 hover:bg-gray-50 transition border-b border-gray-50">
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div class="ml-3 flex-1">
                    <p class="text-sm font-medium text-gray-900">Order Completed</p>
                    <p class="text-xs text-gray-500 mt-0.5">Your order #12345 is ready</p>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>

        <!-- Cart (Click to open slide-over) -->
        <button 
          type="button"
          onclick="document.dispatchEvent(new CustomEvent('cart:toggle'))"
          class="relative p-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition group cart-toggle-btn"
          aria-label="Open cart"
        >
          <svg class="h-5 w-5 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
          <%= render 'shared/cart_count_badge' %>
        </button>

        <!-- User Menu (Desktop) -->
        <div class="hidden md:block">
          <%= render 'shared/user_nav' %>
        </div>

        <!-- Mobile Menu Button -->
        <button type="button" data-action="click->navbar#toggleMobile" data-navbar-target="mobileButton"
                class="lg:hidden p-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition">
          <svg data-navbar-target="menuIcon" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
          <svg data-navbar-target="closeIcon" class="hidden h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div data-navbar-target="mobileMenu" class="hidden lg:hidden bg-gray-900 border-t border-gray-800">
    <div class="px-4 py-4 space-y-3">
      <!-- Mobile Search -->
      <form action="/search" method="get">
        <div class="relative">
          <input type="text" name="q" placeholder="Search products..."
                 class="w-full pl-10 pr-4 py-2.5 bg-gray-800 border border-gray-700 rounded-lg text-sm text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>
      </form>

      <!-- Mobile Navigation -->
      <nav class="space-y-1">
        <a href="/" class="block px-3 py-2.5 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm font-medium">Home</a>
        <a href="/products" class="block px-3 py-2.5 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm font-medium">All Products</a>
        
        <div class="pt-2 pb-1">
          <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Categories</p>
        </div>
        <a href="/categories/ebooks" class="block px-3 py-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm">üìö Ebooks</a>
        <a href="/categories/templates" class="block px-3 py-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm">üìÑ Templates</a>
        <a href="/categories/courses" class="block px-3 py-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm">üé¨ Courses</a>
        <a href="/categories/graphics" class="block px-3 py-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm">üé® Graphics</a>

        <a href="/new-arrivals" class="block px-3 py-2.5 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm font-medium">New Arrivals</a>
        <a href="/best-sellers" class="block px-3 py-2.5 text-gray-300 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm font-medium">Best Sellers</a>
        
        <div class="pt-2 pb-1">
          <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Deals</p>
        </div>
        <a href="/deals/flash-sales" class="block px-3 py-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm">‚ö° Flash Sales</a>
        <a href="/deals/clearance" class="block px-3 py-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition text-sm">üè∑Ô∏è Clearance</a>
      </nav>

      <!-- Mobile User Section -->
      <div class="pt-4 border-t border-gray-800">
        <%= render 'shared/user_nav' %>
      </div>
    </div>
  </div>
</header>
