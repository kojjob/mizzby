<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-indigo-50">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex items-center gap-2 text-sm text-gray-500 mb-2">
        <%= link_to account_root_path, class: "hover:text-indigo-600 transition-colors" do %>
          Dashboard
        <% end %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <%= link_to account_addresses_path, class: "hover:text-indigo-600 transition-colors" do %>
          Addresses
        <% end %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-gray-900 font-medium">New Address</span>
      </nav>
      <h1 class="text-2xl font-bold text-gray-900">Add New Address</h1>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
      <%= form_with model: @address, url: account_addresses_path, class: "space-y-6" do |f| %>
        <% if @address.errors.any? %>
          <div class="p-4 bg-red-50 border border-red-200 rounded-xl">
            <div class="flex items-center gap-2 text-red-800 font-medium mb-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Please fix the following errors:
            </div>
            <ul class="list-disc list-inside text-sm text-red-600">
              <% @address.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Address Label", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, placeholder: "e.g., Home, Office, etc.", class: "w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
          <p class="text-xs text-gray-500 mt-1">Give this address a memorable name</p>
        </div>

        <div>
          <%= f.label :street_address, "Street Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :street_address, required: true, placeholder: "123 Main Street", class: "w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
        </div>

        <div>
          <%= f.label :street_address_2, "Apartment, suite, etc. (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :street_address_2, placeholder: "Apt 4B", class: "w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :city, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :city, required: true, placeholder: "New York", class: "w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
          </div>
          <div>
            <%= f.label :state, "State / Province", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :state, placeholder: "NY", class: "w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :postal_code, "Postal Code", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :postal_code, required: true, placeholder: "10001", class: "w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
          </div>
          <div>
            <%= f.label :country, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :country, required: true, placeholder: "United States", class: "w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
          </div>
        </div>

        <div>
          <%= f.label :phone, "Phone Number (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.telephone_field :phone, placeholder: "+1 (555) 123-4567", class: "w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
          <p class="text-xs text-gray-500 mt-1">For delivery notifications</p>
        </div>

        <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-xl">
          <%= f.check_box :default, class: "w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
          <%= f.label :default, class: "text-sm text-gray-700" do %>
            <span class="font-medium">Set as default address</span>
            <span class="text-gray-500 block text-xs">Use this address by default at checkout</span>
          <% end %>
        </div>

        <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-100">
          <%= link_to "Cancel", account_addresses_path, class: "px-5 py-2.5 text-gray-700 font-medium hover:text-gray-900 transition-colors" %>
          <%= f.submit "Save Address", class: "px-6 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl font-medium shadow-lg shadow-indigo-500/30 hover:shadow-xl cursor-pointer transition-all" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
