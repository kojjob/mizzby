<% content_for :title, "My Orders" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">My Orders</h1>
          <p class="mt-1 text-gray-500">Track and manage your purchase history</p>
        </div>
        
        <!-- Quick Stats -->
        <div class="flex items-center gap-3">
          <div class="flex items-center gap-2 px-4 py-2 bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
            </div>
            <div>
              <p class="text-xs text-gray-500">Total Orders</p>
              <p class="text-lg font-bold text-gray-900"><%= @orders.count %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if @orders.any? %>
      <!-- Filter Tabs -->
      <div class="mb-6 flex flex-wrap items-center gap-2">
        <button class="px-4 py-2 text-sm font-medium rounded-lg bg-indigo-600 text-white shadow-sm" data-filter="all">
          All Orders
        </button>
        <button class="px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-600 hover:bg-gray-50 border border-gray-200" data-filter="pending">
          <span class="inline-block w-2 h-2 rounded-full bg-yellow-400 mr-2"></span>
          Pending
        </button>
        <button class="px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-600 hover:bg-gray-50 border border-gray-200" data-filter="processing">
          <span class="inline-block w-2 h-2 rounded-full bg-blue-400 mr-2"></span>
          Processing
        </button>
        <button class="px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-600 hover:bg-gray-50 border border-gray-200" data-filter="completed">
          <span class="inline-block w-2 h-2 rounded-full bg-green-400 mr-2"></span>
          Completed
        </button>
      </div>

      <!-- Orders List -->
      <div class="space-y-4">
        <% @orders.each do |order| %>
          <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow duration-200">
            <!-- Order Header -->
            <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-white border-b border-gray-100">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                <div class="flex items-center gap-4">
                  <!-- Order Number -->
                  <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Order</p>
                    <p class="text-lg font-bold text-gray-900">#<%= order.id.to_s.rjust(6, '0') %></p>
                  </div>
                  
                  <!-- Divider -->
                  <div class="hidden sm:block w-px h-10 bg-gray-200"></div>
                  
                  <!-- Date -->
                  <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Placed on</p>
                    <p class="text-sm font-medium text-gray-700"><%= order.created_at.strftime("%B %d, %Y") %></p>
                  </div>
                </div>
                
                <!-- Status Badge -->
                <div class="flex items-center gap-3">
                  <% status_classes = case order.status
                    when 'pending' then 'bg-amber-50 text-amber-700 border-amber-200'
                    when 'processing' then 'bg-blue-50 text-blue-700 border-blue-200'
                    when 'paid' then 'bg-emerald-50 text-emerald-700 border-emerald-200'
                    when 'completed' then 'bg-green-50 text-green-700 border-green-200'
                    when 'cancelled' then 'bg-gray-50 text-gray-700 border-gray-200'
                    when 'refunded' then 'bg-purple-50 text-purple-700 border-purple-200'
                    else 'bg-gray-50 text-gray-700 border-gray-200'
                  end %>
                  
                  <span class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium rounded-full border <%= status_classes %>">
                    <% case order.status %>
                    <% when 'pending' %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    <% when 'processing' %>
                      <svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                      </svg>
                    <% when 'paid', 'completed' %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    <% when 'cancelled' %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    <% when 'refunded' %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                      </svg>
                    <% end %>
                    <%= order.status&.titleize %>
                  </span>
                </div>
              </div>
            </div>
            
            <!-- Order Content -->
            <div class="p-6">
              <div class="flex flex-col lg:flex-row gap-6">
                <!-- Product Info -->
                <div class="flex items-start gap-4 flex-1">
                  <!-- Product Image -->
                  <div class="flex-shrink-0 w-20 h-20 bg-gradient-to-br from-gray-100 to-gray-50 rounded-xl overflow-hidden">
                    <% if order.product&.product_images&.any? %>
                      <%= image_tag order.product.product_images.first.image, class: "w-full h-full object-cover", alt: order.product.name %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Product Details -->
                  <div class="flex-1 min-w-0">
                    <h3 class="text-base font-semibold text-gray-900 truncate">
                      <%= link_to order.product&.name || "Product", order.product ? product_path(order.product) : "#", class: "hover:text-indigo-600 transition-colors" %>
                    </h3>
                    
                    <div class="mt-1 flex flex-wrap items-center gap-2 text-sm text-gray-500">
                      <% if order.product&.is_digital %>
                        <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-purple-50 text-purple-700 rounded-md text-xs font-medium">
                          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                          </svg>
                          Digital
                        </span>
                      <% end %>
                      
                      <% if order.product&.category %>
                        <span class="text-gray-400">•</span>
                        <span><%= order.product.category.name %></span>
                      <% end %>
                    </div>
                    
                    <!-- Payment Info -->
                    <div class="mt-2 flex items-center gap-2 text-xs text-gray-500">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                      </svg>
                      <span><%= order.payment_processor&.titleize || "Credit Card" %></span>
                      <span class="text-gray-300">•</span>
                      <span class="<%= order.payment_status == 'paid' ? 'text-green-600' : 'text-amber-600' %>">
                        Payment <%= order.payment_status&.titleize || "Pending" %>
                      </span>
                    </div>
                  </div>
                </div>
                
                <!-- Amount & Actions -->
                <div class="flex flex-col items-end justify-between gap-4 lg:min-w-[180px]">
                  <div class="text-right">
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Total</p>
                    <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(order.total_amount) %></p>
                  </div>
                  
                  <div class="flex items-center gap-2">
                    <!-- Download Button (for digital products) -->
                    <% if order.product&.is_digital && order.status == 'completed' %>
                      <% download_link = order.download_links.active.first %>
                      <% if download_link %>
                        <%= link_to account_downloads_path, class: "inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-purple-700 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                          </svg>
                          Download
                        <% end %>
                      <% end %>
                    <% end %>
                    
                    <!-- View Details -->
                    <%= link_to account_order_path(order), class: "inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors shadow-sm" do %>
                      View Details
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Order Footer - Timeline/Progress -->
            <% if order.status != 'cancelled' && order.status != 'refunded' %>
              <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
                <div class="flex items-center justify-between">
                  <% steps = [
                    { name: 'Order Placed', status: true },
                    { name: 'Payment', status: ['paid', 'processing', 'completed'].include?(order.status) },
                    { name: 'Processing', status: ['processing', 'completed'].include?(order.status) },
                    { name: 'Completed', status: order.status == 'completed' }
                  ] %>
                  
                  <% steps.each_with_index do |step, index| %>
                    <div class="flex items-center">
                      <div class="flex flex-col items-center">
                        <div class="w-8 h-8 rounded-full flex items-center justify-center <%= step[:status] ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-400' %>">
                          <% if step[:status] %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                          <% else %>
                            <span class="text-xs font-medium"><%= index + 1 %></span>
                          <% end %>
                        </div>
                        <span class="mt-1 text-xs font-medium <%= step[:status] ? 'text-indigo-600' : 'text-gray-400' %> hidden sm:block"><%= step[:name] %></span>
                      </div>
                      
                      <% if index < steps.length - 1 %>
                        <div class="w-12 sm:w-20 h-0.5 mx-2 <%= steps[index + 1][:status] ? 'bg-indigo-600' : 'bg-gray-200' %>"></div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <!-- Load More / Pagination -->
      <% if @orders.respond_to?(:total_pages) && @orders.total_pages > 1 %>
        <div class="mt-8 flex justify-center">
          <nav class="flex items-center gap-2">
            <%= link_to "Previous", { page: @orders.current_page - 1 }, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 #{'opacity-50 pointer-events-none' if @orders.first_page?}" %>
            <span class="px-4 py-2 text-sm text-gray-500">Page <%= @orders.current_page %> of <%= @orders.total_pages %></span>
            <%= link_to "Next", { page: @orders.current_page + 1 }, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 #{'opacity-50 pointer-events-none' if @orders.last_page?}" %>
          </nav>
        </div>
      <% end %>
      
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-12 text-center">
        <div class="mx-auto w-24 h-24 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full flex items-center justify-center mb-6">
          <svg class="w-12 h-12 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
        </div>
        
        <h2 class="text-xl font-bold text-gray-900 mb-2">No orders yet</h2>
        <p class="text-gray-500 mb-8 max-w-sm mx-auto">
          You haven't placed any orders yet. Start exploring our amazing products and make your first purchase!
        </p>
        
        <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
          <%= link_to products_path, class: "inline-flex items-center gap-2 px-6 py-3 text-white bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl font-medium hover:from-indigo-700 hover:to-purple-700 transition-all shadow-md hover:shadow-lg" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            Browse Products
          <% end %>
          
          <%= link_to deals_path, class: "inline-flex items-center gap-2 px-6 py-3 text-indigo-600 bg-indigo-50 rounded-xl font-medium hover:bg-indigo-100 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
            </svg>
            View Deals
          <% end %>
        </div>
      </div>
    <% end %>
    
    <!-- Quick Help Section -->
    <div class="mt-10 grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="bg-white rounded-xl p-5 border border-gray-100 shadow-sm">
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mb-3">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900 mb-1">Need Help?</h3>
        <p class="text-sm text-gray-500">Visit our <%= link_to "Help Center", help_center_path, class: "text-indigo-600 hover:text-indigo-700" %> for FAQs and support.</p>
      </div>
      
      <div class="bg-white rounded-xl p-5 border border-gray-100 shadow-sm">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mb-3">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900 mb-1">Downloads</h3>
        <p class="text-sm text-gray-500">Access your digital purchases in <%= link_to "My Downloads", account_downloads_path, class: "text-indigo-600 hover:text-indigo-700" %>.</p>
      </div>
      
      <div class="bg-white rounded-xl p-5 border border-gray-100 shadow-sm">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mb-3">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900 mb-1">Contact Us</h3>
        <p class="text-sm text-gray-500">Have questions? <%= link_to "Get in touch", contact_path, class: "text-indigo-600 hover:text-indigo-700" %> with our team.</p>
      </div>
    </div>
    
  </div>
</div>
