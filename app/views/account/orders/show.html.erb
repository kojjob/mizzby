<%= content_for :title, "Order ##{@order.payment_id}" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Breadcrumb Navigation -->
    <nav class="flex items-center space-x-2 text-sm text-slate-500 mb-6">
      <%= link_to account_root_path, class: "hover:text-blue-600 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
      <% end %>
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to "Orders", account_orders_path, class: "hover:text-blue-600 transition-colors" %>
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-700 font-medium">Order #<%= @order.payment_id.truncate(12) %></span>
    </nav>

    <!-- Order Header -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden mb-6">
      <div class="px-6 py-5 border-b border-slate-100">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="text-2xl font-bold text-slate-900">Order Details</h1>
            <p class="text-slate-500 mt-1">Order #<%= @order.payment_id %></p>
          </div>
          
          <!-- Order Status Badge -->
          <div class="flex items-center gap-3">
            <% status_classes = case @order.status
              when 'completed' then 'bg-emerald-50 text-emerald-700 border-emerald-200'
              when 'processing' then 'bg-blue-50 text-blue-700 border-blue-200'
              when 'paid' then 'bg-indigo-50 text-indigo-700 border-indigo-200'
              when 'pending' then 'bg-amber-50 text-amber-700 border-amber-200'
              when 'cancelled' then 'bg-red-50 text-red-700 border-red-200'
              when 'refunded' then 'bg-slate-50 text-slate-700 border-slate-200'
              else 'bg-slate-50 text-slate-700 border-slate-200'
            end %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold border <%= status_classes %>">
              <% case @order.status %>
              <% when 'completed' %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              <% when 'processing' %>
                <svg class="w-4 h-4 mr-2 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
              <% when 'paid' %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
              <% when 'pending' %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              <% when 'cancelled' %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              <% when 'refunded' %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
                </svg>
              <% end %>
              <%= @order.status.titleize %>
            </span>
          </div>
        </div>
      </div>
      
      <!-- Order Timeline -->
      <div class="px-6 py-4 bg-slate-50/50">
        <div class="flex items-center justify-between max-w-md mx-auto">
          <% steps = ['Pending', 'Paid', 'Processing', 'Completed'] %>
          <% current_step = case @order.status
            when 'pending' then 0
            when 'paid' then 1
            when 'processing' then 2
            when 'completed' then 3
            else 0
          end %>
          <% steps.each_with_index do |step, index| %>
            <div class="flex flex-col items-center">
              <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-semibold
                <%= index <= current_step ? 'bg-blue-600 text-white' : 'bg-slate-200 text-slate-500' %>">
                <% if index < current_step %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                <% else %>
                  <%= index + 1 %>
                <% end %>
              </div>
              <span class="text-xs mt-1 <%= index <= current_step ? 'text-blue-600 font-medium' : 'text-slate-500' %>"><%= step %></span>
            </div>
            <% unless index == steps.length - 1 %>
              <div class="flex-1 h-1 mx-2 rounded <%= index < current_step ? 'bg-blue-600' : 'bg-slate-200' %>"></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Product Details -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
              Order Items
            </h2>
          </div>
          
          <div class="divide-y divide-slate-100">
            <!-- Main Product -->
            <div class="p-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <% if @order.product.cover_image.attached? %>
                    <%= image_tag @order.product.cover_image, class: "w-24 h-24 rounded-xl object-cover border border-slate-200" %>
                  <% else %>
                    <div class="w-24 h-24 rounded-xl bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center">
                      <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="text-lg font-semibold text-slate-900 mb-1">
                    <%= link_to @order.product.name, product_path(@order.product), class: "hover:text-blue-600 transition-colors" %>
                  </h3>
                  <p class="text-sm text-slate-500 mb-2">
                    <% if @order.product.category.present? %>
                      <%= @order.product.category.name %>
                    <% end %>
                    <% if @order.product.is_digital? %>
                      <span class="inline-flex items-center ml-2 px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-700">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                        </svg>
                        Digital
                      </span>
                    <% end %>
                  </p>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-slate-500">Qty: 1</span>
                    <span class="text-lg font-bold text-slate-900"><%= number_to_currency(@order.total_amount) %></span>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Order Items if any -->
            <% if @order.order_items.any? %>
              <% @order.order_items.each do |item| %>
                <div class="p-6">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0">
                      <% if item.product_image_url.present? %>
                        <%= image_tag item.product_image_url, class: "w-20 h-20 rounded-xl object-cover border border-slate-200" %>
                      <% elsif item.product&.cover_image&.attached? %>
                        <%= image_tag item.product.cover_image, class: "w-20 h-20 rounded-xl object-cover border border-slate-200" %>
                      <% else %>
                        <div class="w-20 h-20 rounded-xl bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center">
                          <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h4 class="font-semibold text-slate-900"><%= item.product_name %></h4>
                      <p class="text-sm text-slate-500 mt-1">SKU: <%= item.product_sku %></p>
                      <div class="flex items-center justify-between mt-2">
                        <span class="text-sm text-slate-500">Qty: <%= item.quantity %></span>
                        <span class="font-semibold text-slate-900"><%= number_to_currency(item.total_price) %></span>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Digital Downloads (if applicable) -->
        <% if @order.product.is_digital? && @order.download_links.any? %>
          <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100">
              <h2 class="text-lg font-semibold text-slate-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                </svg>
                Digital Downloads
              </h2>
            </div>
            <div class="p-6">
              <% @order.download_links.each do |download_link| %>
                <div class="flex items-center justify-between p-4 bg-purple-50 rounded-xl border border-purple-100">
                  <div>
                    <p class="font-medium text-purple-900"><%= @order.product.name %></p>
                    <p class="text-sm text-purple-600 mt-1">
                      <% if download_link.expires_at.present? %>
                        Expires: <%= download_link.expires_at.strftime("%B %d, %Y") %>
                      <% end %>
                      <% if download_link.download_limit.present? %>
                        Â· <%= download_link.download_limit - download_link.download_count %> downloads remaining
                      <% end %>
                    </p>
                  </div>
                  <% if download_link.active? && (download_link.expires_at.nil? || download_link.expires_at > Time.current) %>
                    <%= link_to download_file_path(download_link.token), class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-700 transition-colors" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                      </svg>
                      Download
                    <% end %>
                  <% else %>
                    <span class="text-sm text-red-600 font-medium">Expired</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        
        <!-- Order Summary -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
              Order Summary
            </h2>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Subtotal</span>
              <span class="text-slate-900"><%= number_to_currency(@order.total_amount - (@order.shipping_cost || 0) + (@order.discount || 0)) %></span>
            </div>
            <% if @order.shipping_cost.present? && @order.shipping_cost > 0 %>
              <div class="flex justify-between text-sm">
                <span class="text-slate-600">Shipping</span>
                <span class="text-slate-900"><%= number_to_currency(@order.shipping_cost) %></span>
              </div>
            <% end %>
            <% if @order.discount.present? && @order.discount > 0 %>
              <div class="flex justify-between text-sm">
                <span class="text-slate-600">Discount</span>
                <span class="text-green-600">-<%= number_to_currency(@order.discount) %></span>
              </div>
            <% end %>
            <div class="border-t border-slate-200 pt-4">
              <div class="flex justify-between">
                <span class="text-lg font-semibold text-slate-900">Total</span>
                <span class="text-lg font-bold text-slate-900"><%= number_to_currency(@order.total_amount) %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Information -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
              Payment
            </h2>
          </div>
          <div class="p-6 space-y-3">
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Method</span>
              <span class="text-slate-900 capitalize"><%= @order.payment_method&.humanize || 'N/A' %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Processor</span>
              <span class="text-slate-900 capitalize"><%= @order.payment_processor&.humanize || 'N/A' %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Status</span>
              <% payment_status_class = case @order.payment_status
                when 'paid' then 'text-green-600'
                when 'pending' then 'text-amber-600'
                when 'failed' then 'text-red-600'
                else 'text-slate-600'
              end %>
              <span class="<%= payment_status_class %> font-medium capitalize"><%= @order.payment_status&.humanize || 'N/A' %></span>
            </div>
            <% if @order.transaction_id.present? %>
              <div class="flex justify-between text-sm">
                <span class="text-slate-600">Transaction ID</span>
                <span class="text-slate-900 font-mono text-xs"><%= @order.transaction_id.truncate(16) %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Order Info -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Order Info
            </h2>
          </div>
          <div class="p-6 space-y-3">
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Order ID</span>
              <span class="text-slate-900 font-mono text-xs"><%= @order.payment_id %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Date</span>
              <span class="text-slate-900"><%= @order.created_at.strftime("%B %d, %Y") %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-slate-600">Time</span>
              <span class="text-slate-900"><%= @order.created_at.strftime("%I:%M %p") %></span>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="space-y-3">
          <%= link_to account_orders_path, class: "flex items-center justify-center w-full px-4 py-3 bg-white border border-slate-200 text-slate-700 font-medium rounded-xl hover:bg-slate-50 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"/>
            </svg>
            Back to Orders
          <% end %>
          
          <% if @order.notes.present? %>
            <div class="p-4 bg-amber-50 rounded-xl border border-amber-100">
              <h4 class="text-sm font-medium text-amber-800 flex items-center mb-2">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Order Notes
              </h4>
              <p class="text-sm text-amber-700"><%= @order.notes %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
