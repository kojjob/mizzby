<div class="min-h-screen bg-stone-50">
  <!-- Quirky header with hand-drawn feel -->
  <div class="bg-white border-b-2 border-dashed border-stone-200">
    <div class="max-w-3xl mx-auto px-6 py-10">
      <div class="flex items-start gap-5">
        <div class="w-14 h-14 bg-amber-100 rounded-2xl rotate-3 flex items-center justify-center shadow-sm">
          <svg class="w-7 h-7 text-amber-600 -rotate-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-stone-800 tracking-tight">Payment Methods</h1>
          <p class="text-stone-500 mt-1">Your saved cards & payment options</p>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-3xl mx-auto px-6 py-10">
    
    <!-- Info callout with personality -->
    <div class="bg-sky-50 border-l-4 border-sky-400 rounded-r-xl p-5 mb-8">
      <div class="flex gap-3">
        <div class="text-sky-500 mt-0.5">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <p class="text-sm text-sky-800 font-medium">How it works</p>
          <p class="text-sm text-sky-700 mt-1">Cards are automatically saved when you checkout. We use bank-level encryption to keep your data safe.</p>
        </div>
      </div>
    </div>

    <% if @payment_methods.any? %>
      <!-- Cards list with playful styling -->
      <div class="space-y-4">
        <% @payment_methods.each_with_index do |method, index| %>
          <div class="group bg-white rounded-2xl border border-stone-200 p-5 hover:border-stone-300 hover:shadow-md transition-all duration-200 <%= index.even? ? '' : '-rotate-[0.3deg]' %>">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <!-- Card brand icon with color -->
                <div class="relative">
                  <div class="w-16 h-11 rounded-lg bg-gradient-to-br from-slate-700 to-slate-900 shadow-md flex items-center justify-center overflow-hidden">
                    <div class="absolute top-1 right-1 w-6 h-6 rounded-full bg-amber-400/80"></div>
                    <div class="absolute top-2 right-3 w-5 h-5 rounded-full bg-red-500/70"></div>
                    <span class="relative text-[10px] font-bold text-white/90 tracking-widest">CARD</span>
                  </div>
                  <!-- Chip detail -->
                  <div class="absolute bottom-2 left-2 w-5 h-4 rounded-sm bg-amber-300/60"></div>
                </div>
                
                <div>
                  <p class="font-mono text-lg text-stone-800 tracking-wider">•••• •••• •••• <%= method[:last4] %></p>
                  <p class="text-sm text-stone-400 mt-0.5">Expires <%= method[:exp_month].to_s.rjust(2, '0') %>/<%= method[:exp_year].to_s[-2..] %></p>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <% if index == 0 %>
                  <span class="px-2.5 py-1 bg-emerald-100 text-emerald-700 text-xs font-medium rounded-full">Default</span>
                <% end %>
                <%= link_to account_payment_method_path(method[:id]), 
                    method: :delete, 
                    data: { confirm: "Remove this card ending in #{method[:last4]}?" }, 
                    class: "opacity-0 group-hover:opacity-100 p-2 text-stone-400 hover:text-red-500 hover:bg-red-50 rounded-lg transition-all" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Bottom note -->
      <p class="text-center text-sm text-stone-400 mt-8">
        Hover over a card to see the remove option
      </p>
      
    <% else %>
      <!-- Empty state with character -->
      <div class="text-center py-16">
        <div class="relative inline-block mb-6">
          <!-- Wallet illustration -->
          <div class="w-28 h-24 bg-gradient-to-b from-amber-200 to-amber-300 rounded-2xl shadow-lg transform -rotate-6">
            <div class="absolute inset-x-3 top-3 h-3 bg-amber-400/50 rounded"></div>
            <div class="absolute inset-x-3 top-8 h-2 bg-amber-400/30 rounded"></div>
          </div>
          <div class="absolute -bottom-2 -right-2 w-20 h-14 bg-gradient-to-br from-slate-600 to-slate-800 rounded-lg shadow-md rotate-12 flex items-center justify-center">
            <span class="text-[8px] font-bold text-white/60 tracking-widest">NO CARDS</span>
          </div>
          <!-- Sparkle -->
          <div class="absolute -top-2 -right-1 text-amber-400">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L9.19 8.63L2 9.24L7.46 13.97L5.82 21L12 17.27L18.18 21L16.54 13.97L22 9.24L14.81 8.63L12 2Z"/>
            </svg>
          </div>
        </div>
        
        <h3 class="text-xl font-bold text-stone-800 mb-2">No cards yet!</h3>
        <p class="text-stone-500 max-w-sm mx-auto mb-8">
          When you make your first purchase, your payment method will show up here for easy reuse.
        </p>
        
        <%= link_to products_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-stone-800 text-white rounded-xl font-medium hover:bg-stone-700 transition-colors" do %>
          Start Shopping
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        <% end %>
      </div>
    <% end %>
    
    <!-- Security badge -->
    <div class="mt-12 flex items-center justify-center gap-2 text-stone-400">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <span class="text-sm">256-bit SSL encryption · PCI DSS compliant</span>
    </div>
  </div>
</div>
