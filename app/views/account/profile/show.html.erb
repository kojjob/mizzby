<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
    <%# Header Section %>
    <div class="px-8 py-6 border-b border-gray-100 bg-gray-50/50 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Profile Settings</h1>
        <p class="mt-1 text-sm text-gray-500">Update your personal information and profile picture.</p>
      </div>
      <%= link_to "Back to Dashboard", account_root_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>

    <div class="p-8">
      <%= form_with model: @user, url: account_profile_path, method: :patch, class: "space-y-8", data: { controller: "profile-picture" } do |f| %>
        
        <%# Error Messages %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <%# Avatar Upload Section %>
        <div class="flex flex-col sm:flex-row items-center gap-8 pb-8 border-b border-gray-100">
          <div class="relative group">
            <div class="w-32 h-32 rounded-full overflow-hidden bg-gray-100 ring-4 ring-white shadow-lg" data-profile-picture-target="preview">
              <% if @user.profile_picture.attached? %>
                <%= image_tag @user.profile_picture.variant(resize_to_fill: [128, 128]), class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center bg-indigo-50 text-indigo-300">
                  <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                </div>
              <% end %>
            </div>
            
            <label class="absolute bottom-0 right-0 bg-indigo-600 text-white p-2 rounded-full shadow-lg cursor-pointer hover:bg-indigo-700 transition-colors group-hover:scale-110 transform duration-200">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <%= f.file_field :profile_picture, class: "hidden", accept: "image/*", data: { action: "change->profile-picture#previewImage" } %>
            </label>
          </div>

          <div class="text-center sm:text-left">
            <h3 class="text-lg font-medium text-gray-900">Profile Picture</h3>
            <p class="text-sm text-gray-500 mt-1">JPG, GIF or PNG. Max size of 5MB.</p>
          </div>
        </div>

        <%# Personal Information %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-2">
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :first_name, class: "block w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
          </div>

          <div class="space-y-2">
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :last_name, class: "block w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
          </div>

          <div class="space-y-2 md:col-span-2">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <%= f.email_field :email, class: "block w-full pl-10 pr-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
            </div>
          </div>

          <div class="space-y-2 md:col-span-2">
            <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <%= f.text_field :phone_number, class: "block w-full pl-10 pr-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
            </div>
          </div>
        </div>

        <%# Actions %>
        <div class="pt-6 flex items-center justify-end gap-4 border-t border-gray-100">
          <%= link_to "Cancel", account_root_path, class: "px-6 py-2.5 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 rounded-lg transition-colors" %>
          <%= f.submit "Save Changes", class: "px-6 py-2.5 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-100 transition-all shadow-sm hover:shadow-md cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
