<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Account Settings</h1>

  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with model: @user, url: account_settings_path, method: :patch, class: "space-y-6" do |f| %>
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-4">Notification Preferences</h3>
        
        <div class="space-y-4">
          <label class="flex items-center">
            <%= f.check_box :email_notifications, class: "h-4 w-4 text-indigo-600 rounded border-gray-300" %>
            <span class="ml-3 text-gray-700">Email notifications for orders and updates</span>
          </label>
          
          <label class="flex items-center">
            <%= f.check_box :marketing_emails, class: "h-4 w-4 text-indigo-600 rounded border-gray-300" %>
            <span class="ml-3 text-gray-700">Marketing emails and promotions</span>
          </label>
        </div>
      </div>

      <div class="border-t pt-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Security</h3>
        <%= link_to "Change Password", edit_user_registration_path, class: "text-indigo-600 hover:text-indigo-800" %>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Save Settings", class: "px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
